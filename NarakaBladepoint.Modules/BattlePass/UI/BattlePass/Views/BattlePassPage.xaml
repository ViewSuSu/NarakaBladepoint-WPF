<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.BattlePass.UI.BattlePass.Views.BattlePassPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.BattlePass.UI.BattlePass.ViewModels"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:BattlePassPageViewModel}"
    d:DesignHeight="50"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource BattlePassBackgroundImage}" Stretch="Fill" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                d:Text="侠风通行证"
                FontSize="15"
                Foreground="White"
                Text="{Binding CurrentUserInformationModel.BattlePassName, Mode=OneWay}" />
            <TextBlock
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <Run Foreground="White" Text="赛季等级 " />
                <Run
                    d:Text="128"
                    Foreground="White"
                    Text="{Binding CurrentUserInformationModel.BattlePassLevel, Mode=OneWay}" />
            </TextBlock>
        </Grid>
        <b:Interaction.Triggers>
            <b:EventTrigger EventName="MouseLeftButtonDown">
                <b:InvokeCommandAction Command="{Binding NavigateToContentCommand}" />
            </b:EventTrigger>
        </b:Interaction.Triggers>
    </Grid>
</bases:UserControlBase>