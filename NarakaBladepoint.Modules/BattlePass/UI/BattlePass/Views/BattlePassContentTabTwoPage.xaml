<views:UserControlBase
    x:Class="NarakaBladepoint.Modules.BattlePass.UI.BattlePass.Views.BattlePassContentTabTwoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.BattlePass.UI.BattlePass.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.BattlePass.UI.BattlePass.ViewModels"
    xmlns:views="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    d:DataContext="{d:DesignInstance Type=viewmodels:BattlePassContentTabTwoPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Grid Background="{StaticResource Background2}">
        <Grid Margin="30,80">
            <TabControl
                attach:TabItemMarginAttachedProperty.ItemMargin="0,5,0,5"
                Background="Transparent"
                BorderThickness="0"
                TabStripPlacement="Left">
                <!--  第一周任务  -->
                <controls:ImageTextTabItem
                    Width="110"
                    HorizontalAlignment="Left"
                    Background="#1A000000"
                    IsMouseOverHilightBoder="True"
                    IsSelectedHilgihtBoder="True"
                    SelectedBackground="#1A000000"
                    Text="每日任务" />

                <TabItem
                    Name="tabitem2"
                    Width="120"
                    Height="330"
                    Margin="0,10"
                    Background="#1A000000"
                    Header="每周任务">
                    <TabItem.Template>
                        <ControlTemplate TargetType="TabItem">
                            <ScrollViewer
                                HorizontalScrollBarVisibility="Disabled"
                                Style="{StaticResource for_scrollviewer}"
                                VerticalScrollBarVisibility="Visible">
                                <StackPanel>
                                    <controls:ImageTextTabItem
                                        Width="110"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        Background="#1A000000"
                                        ContentMargin="-10,0,0,0"
                                        IsMouseOverHilightBoder="True"
                                        IsSelectedHilgihtBoder="True"
                                        SelectedBackground="#1A000000"
                                        Text="第一周任务" />
                                    <controls:ImageTextTabItem
                                        Width="110"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        Background="#1A000000"
                                        ContentMargin="-10,0,0,0"
                                        IsMouseOverHilightBoder="True"
                                        IsSelectedHilgihtBoder="True"
                                        SelectedBackground="#1A000000"
                                        Text="第二周任务" />
                                    <controls:ImageTextTabItem
                                        Width="110"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        Background="#1A000000"
                                        ContentMargin="-10,0,0,0"
                                        IsMouseOverHilightBoder="True"
                                        IsSelectedHilgihtBoder="True"
                                        SelectedBackground="#1A000000"
                                        Text="第三周任务" />
                                    <controls:ImageTextTabItem
                                        Width="110"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        Background="#1A000000"
                                        ContentMargin="-10,0,0,0"
                                        IsMouseOverHilightBoder="True"
                                        IsSelectedHilgihtBoder="True"
                                        SelectedBackground="#1A000000"
                                        Text="第四周任务" />
                                    <controls:ImageTextTabItem
                                        Width="110"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        Background="#1A000000"
                                        ContentMargin="-10,0,0,0"
                                        IsMouseOverHilightBoder="True"
                                        IsSelectedHilgihtBoder="True"
                                        SelectedBackground="#1A000000"
                                        Text="第五周任务" />
                                    <controls:ImageTextTabItem
                                        Width="110"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        Background="#1A000000"
                                        ContentMargin="-10,0,0,0"
                                        IsMouseOverHilightBoder="True"
                                        IsSelectedHilgihtBoder="True"
                                        SelectedBackground="#1A000000"
                                        Text="第六周任务" />
                                    <controls:ImageTextTabItem
                                        Width="110"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        Background="#1A000000"
                                        ContentMargin="-10,0,0,0"
                                        IsMouseOverHilightBoder="True"
                                        IsSelectedHilgihtBoder="True"
                                        SelectedBackground="#1A000000"
                                        Text="第七周任务" />
                                    <controls:ImageTextTabItem
                                        Width="110"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        Background="#1A000000"
                                        ContentMargin="-10,0,0,0"
                                        IsMouseOverHilightBoder="True"
                                        IsSelectedHilgihtBoder="True"
                                        SelectedBackground="#1A000000"
                                        Text="第八周任务" />
                                    <controls:ImageTextTabItem
                                        Width="110"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        Background="#1A000000"
                                        ContentMargin="-10,0,0,0"
                                        IsMouseOverHilightBoder="True"
                                        IsSelectedHilgihtBoder="True"
                                        SelectedBackground="#1A000000"
                                        Text="第九周任务" />
                                    <controls:ImageTextTabItem
                                        Width="110"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        Background="#1A000000"
                                        ContentMargin="-10,0,0,0"
                                        IsMouseOverHilightBoder="True"
                                        IsSelectedHilgihtBoder="True"
                                        SelectedBackground="#1A000000"
                                        Text="第十周任务" />
                                    <controls:ImageTextTabItem
                                        Width="110"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        Background="#1A000000"
                                        ContentMargin="-10,0,0,0"
                                        IsMouseOverHilightBoder="True"
                                        IsSelectedHilgihtBoder="True"
                                        SelectedBackground="#1A000000"
                                        Text="第十一周任务" />
                                    <controls:ImageTextTabItem
                                        Width="110"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        Background="#1A000000"
                                        ContentMargin="-10,0,0,0"
                                        IsMouseOverHilightBoder="True"
                                        IsSelectedHilgihtBoder="True"
                                        SelectedBackground="#1A000000"
                                        Text="第十二周任务" />
                                </StackPanel>
                            </ScrollViewer>
                        </ControlTemplate>
                    </TabItem.Template>
                </TabItem>


                <!--  赛季任务  -->
                <controls:ImageTextTabItem
                    Width="110"
                    HorizontalAlignment="Left"
                    Background="#1A000000"
                    IsMouseOverHilightBoder="True"
                    IsSelectedHilgihtBoder="True"
                    SelectedBackground="#1A000000"
                    Text="赛季任务">
                    <ScrollViewer
                        Margin="20,20,20,20"
                        HorizontalScrollBarVisibility="Disabled"
                        Style="{StaticResource for_scrollviewer}"
                        VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding SeasonTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,0,0,12"
                                        Padding="16,12"
                                        Background="{StaticResource DefaultTransientBlackBackground3}"
                                        BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <Image
                                                Grid.Column="0"
                                                Width="60"
                                                Height="60"
                                                Margin="0,0,16,0"
                                                VerticalAlignment="Center" />

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock
                                                    Margin="0,0,0,8"
                                                    FontSize="14"
                                                    Foreground="White"
                                                    Text="{Binding TaskDescription}" />
                                                <ProgressBar
                                                    Height="6"
                                                    Background="{StaticResource DefaultTransientBlackBackground5}"
                                                    BorderThickness="0"
                                                    Foreground="{StaticResource DefaultOrangeBrush}"
                                                    Maximum="{Binding TaskTotal}"
                                                    Value="{Binding TaskProgress}" />
                                            </StackPanel>

                                            <TextBlock
                                                Grid.Column="2"
                                                Margin="16,0,0,0"
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="#CCCCCC">
                                                <Run Text="{Binding TaskProgress, Mode=OneWay}" />
                                                <Run Text="/" />
                                                <Run Text="{Binding TaskTotal, Mode=OneWay}" />
                                            </TextBlock>

                                            <StackPanel
                                                Grid.Column="3"
                                                Margin="16,0,0,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                                <StackPanel Margin="0,0,12,0" Orientation="Horizontal">
                                                    <Grid Margin="0,0,4,0">
                                                        <Image Width="24" Height="24" />
                                                        <TextBlock
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Bottom"
                                                            FontSize="10"
                                                            Foreground="White"
                                                            Text="{Binding Reward1Count}" />
                                                    </Grid>
                                                    <Grid>
                                                        <Image Width="24" Height="24" />
                                                        <TextBlock
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Bottom"
                                                            FontSize="10"
                                                            Foreground="White"
                                                            Text="{Binding Reward2Count}" />
                                                    </Grid>
                                                </StackPanel>

                                                <Button
                                                    Padding="12,6"
                                                    Background="#A67C52"
                                                    BorderThickness="0"
                                                    Content="{Binding ButtonText}"
                                                    Foreground="White"
                                                    IsEnabled="{Binding IsButtonEnabled}" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </controls:ImageTextTabItem>

                <!--  挑战任务  -->
                <controls:ImageTextTabItem
                    Width="110"
                    HorizontalAlignment="Left"
                    Background="#1A000000"
                    IsMouseOverHilightBoder="True"
                    IsSelectedHilgihtBoder="True"
                    SelectedBackground="#1A000000"
                    Text="挑战任务">
                    <ScrollViewer
                        Margin="20,20,20,20"
                        HorizontalScrollBarVisibility="Disabled"
                        Style="{StaticResource for_scrollviewer}"
                        VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ChallengeTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,0,0,12"
                                        Padding="16,12"
                                        Background="{StaticResource DefaultTransientBlackBackground3}"
                                        BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <Image
                                                Grid.Column="0"
                                                Width="60"
                                                Height="60"
                                                Margin="0,0,16,0"
                                                VerticalAlignment="Center" />

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock
                                                    Margin="0,0,0,8"
                                                    FontSize="14"
                                                    Foreground="White"
                                                    Text="{Binding TaskDescription}" />
                                                <ProgressBar
                                                    Height="6"
                                                    Background="{StaticResource DefaultTransientBlackBackground5}"
                                                    BorderThickness="0"
                                                    Foreground="{StaticResource DefaultOrangeBrush}"
                                                    Maximum="{Binding TaskTotal}"
                                                    Value="{Binding TaskProgress}" />
                                            </StackPanel>

                                            <TextBlock
                                                Grid.Column="2"
                                                Margin="16,0,0,0"
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="#CCCCCC">
                                                <Run Text="{Binding TaskProgress, Mode=OneWay}" />
                                                <Run Text="/" />
                                                <Run Text="{Binding TaskTotal, Mode=OneWay}" />
                                            </TextBlock>

                                            <StackPanel
                                                Grid.Column="3"
                                                Margin="16,0,0,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                                <StackPanel Margin="0,0,12,0" Orientation="Horizontal">
                                                    <Grid Margin="0,0,4,0">
                                                        <Image Width="24" Height="24" />
                                                        <TextBlock
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Bottom"
                                                            FontSize="10"
                                                            Foreground="White"
                                                            Text="{Binding Reward1Count}" />
                                                    </Grid>
                                                    <Grid>
                                                        <Image Width="24" Height="24" />
                                                        <TextBlock
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Bottom"
                                                            FontSize="10"
                                                            Foreground="White"
                                                            Text="{Binding Reward2Count}" />
                                                    </Grid>
                                                </StackPanel>

                                                <Button
                                                    Padding="12,6"
                                                    Background="#A67C52"
                                                    BorderThickness="0"
                                                    Content="{Binding ButtonText}"
                                                    Foreground="White"
                                                    IsEnabled="{Binding IsButtonEnabled}" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </controls:ImageTextTabItem>
            </TabControl>
        </Grid>
    </Grid>
</views:UserControlBase>