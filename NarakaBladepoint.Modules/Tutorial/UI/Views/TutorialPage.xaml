<bases:UserControlBase
x:Class="NarakaBladepoint.Modules.Tutorial.UI.Views.TutorialPage"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.Tutorial.UI.ViewModels"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:TutorialPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    Background="Gray"
    mc:Ignorable="d">
    <Grid Background="{StaticResource Background2}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition />
                <RowDefinition Height="0.1*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="50,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="30"
                    Foreground="White"
                    Text="战斗百科" />
            </Grid>
            <TabControl
                Grid.Row="0"
                Grid.RowSpan="2"
                Background="Transparent"
                BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabPanel}">
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                </TabControl.Resources>
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="克制"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="战斗技巧"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="武器招式"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="事件"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="魂玉"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    Width="500"
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="魂玉"
                    Style="{StaticResource CommonFunctionTabItem}"
                    Visibility="Hidden" />
            </TabControl>
        </Grid>
        <controls:EscBackControl
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Panel.ZIndex="10"
            Command="{Binding ReturnCommand}" />
    </Grid>
</bases:UserControlBase>