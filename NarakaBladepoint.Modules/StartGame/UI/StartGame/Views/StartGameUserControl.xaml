<base:UserControlBase
    x:Class="NarakaBladepoint.Modules.StartGame.UI.StartGame.Views.StartGameUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:base="clr-namespace:NarakaBladepoint.Framework.Core.Bases;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.StartGame.UI.StartGame.ViewModels"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:StartGameUserControlViewModel}"
    d:DesignHeight="300"
    d:DesignWidth="240"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="0.75*" />
                <RowDefinition Height="0.25*" />
                <RowDefinition Height="1.5*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <controls:HighlightBorder Grid.Row="0" Cursor="Hand">
                <controls:HighlightBorder.Background>
                    <ImageBrush ImageSource="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Region/StartGame/活动中心.png" Stretch="UniformToFill" />
                </controls:HighlightBorder.Background>
                <Grid Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="0.5*" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="1"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Image
                            Width="15"
                            Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/活动中心logo.png"
                            Stretch="Uniform" />
                        <TextBlock
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="活动中心" />
                    </StackPanel>
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="MouseLeftButtonDown">
                            <b:InvokeCommandAction Command="{Binding NavigateToEventCenterMainCommand}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </Grid>
            </controls:HighlightBorder>
            <controls:HighlightBorder
                Grid.Row="1"
                Margin="0,2"
                Cursor="Hand">
                <controls:HighlightBorder.Background>
                    <ImageBrush ImageSource="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Region/StartGame/段位.png" Stretch="Fill" />
                </controls:HighlightBorder.Background>
                <StackPanel
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Orientation="Vertical">
                    <TextBlock Foreground="White" Text="无相龙王" />
                    <StackPanel Orientation="Horizontal">
                        <Image Width="20" Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/星.png" />
                        <TextBlock VerticalAlignment="Center" Foreground="White">
                            <Run Text="15" />
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </controls:HighlightBorder>
            <Grid Grid.Row="2">
                <Border Background="Black">
                    <CheckBox
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Content="自动补充队友"
                        Foreground="White"
                        IsChecked="True"
                        Style="{StaticResource DiamondCheckBoxStyle}" />
                </Border>
            </Grid>
            <controls:HighlightBorder
                Grid.Row="3"
                Margin="0,2"
                Cursor="Hand">
                <controls:HighlightBorder.Background>
                    <ImageBrush ImageSource="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Region/StartGame/模式选择.png" Stretch="UniformToFill" />
                </controls:HighlightBorder.Background>
                <Grid Margin="10,3,5,3">
                    <StackPanel
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Vertical">
                        <TextBlock Foreground="White" Text="组队范围" />
                        <TextBlock Foreground="Orange">
                            <Run Text="无间修罗" />
                            <Run Text="~" />
                            <Run Text="无量梵天" />
                        </TextBlock>
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Orientation="Vertical">
                        <TextBlock
                            Foreground="Orange"
                            Text="豪杰对局"
                            Visibility="{Binding IsXiuLuo}" />
                        <TextBlock Foreground="White">
                            <Run Text="排位赛" />
                            <Run Text="·" />
                            <Run Text="三排" />
                        </TextBlock>
                    </StackPanel>
                    <TextBlock
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Foreground="White"
                        Text="龙隐洞天" />
                </Grid>
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseLeftButtonDown">
                        <b:InvokeCommandAction Command="{Binding NavigateToModelSelectionCommand}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </controls:HighlightBorder>
            <controls:HighlightBorder Grid.Row="4" Cursor="Hand">
                <controls:HighlightBorder.Background>
                    <ImageBrush ImageSource="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Region/StartGame/开始游戏.png" Stretch="UniformToFill" />
                </controls:HighlightBorder.Background>
                <TextBlock
                    Grid.Row="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="35"
                    Foreground="White"
                    Text="开始游戏">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="MouseLeftButtonDown">
                            <b:InvokeCommandAction Command="{Binding StartGameCommand}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </TextBlock>
            </controls:HighlightBorder>
        </Grid>
    </Grid>
</base:UserControlBase>