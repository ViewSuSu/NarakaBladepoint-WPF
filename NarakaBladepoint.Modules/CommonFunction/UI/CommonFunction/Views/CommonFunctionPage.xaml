<UserControl
    x:Class="NarakaBladepoint.Modules.CommonFunction.UI.CommonFunction.Views.CommonFunctionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:core="clr-namespace:Microsoft.Xaml.Behaviors.Core;assembly=Microsoft.Xaml.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.CommonFunction.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:CommonFunctionPageViewModel}"
    d:DesignHeight="100"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <TabControl
        VerticalAlignment="Center"
        Background="Transparent"
        BorderThickness="0">
        <TabItem
            Header="英雄"
            IsSelected="{Binding IsSelectedHero}"
            Style="{StaticResource CommonFunctionTabItem}" />
        <TabItem
            Header="兵器"
            IsSelected="{Binding IsSelectedWeapon}"
            Style="{StaticResource CommonFunctionTabItem}" />
        <TabItem
            Header="备战"
            IsSelected="{Binding IsSelectedSkillPoint}"
            Style="{StaticResource CommonFunctionTabItem}" />
        <TabItem Header="聚义厅" Style="{StaticResource CommonFunctionTabItem}" />
        <TabItem
            Header="大厅"
            IsSelected="{Binding IsSelectedHall}"
            Style="{StaticResource CommonFunctionTabItem}">
            <b:Interaction.Triggers>
                <core:DataTrigger Binding="{Binding IsSelectedHall}" Value="True">
                    <b:InvokeCommandAction Command="{Binding RemoveMainContentCommand}" />
                </core:DataTrigger>
            </b:Interaction.Triggers>
        </TabItem>
        <TabItem
            Header="排行榜"
            IsSelected="{Binding IsSelectedLeaderboard}"
            Style="{StaticResource CommonFunctionTabItem}" />
        <TabItem
            Header="仓库"
            IsSelected="{Binding IsSelectedInventory}"
            Style="{StaticResource CommonFunctionTabItem}" />
        <TabItem
            Header="商店"
            IsSelected="{Binding IsSelectedStore}"
            Style="{StaticResource CommonFunctionTabItem}" />
        <TabItem
            Header="自定义房间"
            IsSelected="{Binding IsSelectedCustomMatch}"
            Style="{StaticResource CommonFunctionTabItem}" />
    </TabControl>
</UserControl>