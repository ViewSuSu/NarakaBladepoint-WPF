<base:UserControlBase
    x:Class="NarakaBladepoint.Modules.CommonFunction.UI.Hero.Views.HeroListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:base="clr-namespace:NarakaBladepoint.Framework.Core.Bases;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Hero.ViewModels"
    attach:EscKeyAttachedProperty.Command="{Binding ReturnToHallCommand}"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:HeroListPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/NarakaBladepoint.Resources;component/Image/background2.png" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="{Binding SelectedHeroAvatarModel.ShowImage, Mode=OneWay}" Stretch="UniformToFill" />
            </Grid.Background>
        </Grid>
        <Grid Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="0,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="2*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Left">
                    <TextBlock VerticalAlignment="Center" Text="英雄币：" />
                </Border>
                <ItemsControl
                    Grid.Row="1"
                    d:ItemsSource="{d:SampleData ItemCount=25}"
                    ItemsSource="{Binding HeroAvatarModels, Mode=OneWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="5" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:HighlightBorder  Margin="2">
                                <Grid>
                                    <Image
                                        d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Hero/崔三娘.png"
                                        Source="{Binding Avatar, Mode=OneWay}"
                                        Stretch="Uniform" />
                                </Grid>
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="MouseLeftButtonDown">
                                        <b:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=DataContext.SelectedCommand}" CommandParameter="{Binding}" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                            </controls:HighlightBorder>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <UniformGrid
                    Grid.Row="2"
                    Height="30"
                    VerticalAlignment="Bottom"
                    Columns="2">
                    <Button
                        Margin="5,0"
                        Content="外观"
                        Style="{StaticResource CleanButtonStyle}" />
                    <Button
                        Margin="5,0"
                        Content="易容"
                        Style="{StaticResource CleanButtonStyle}" />
                </UniformGrid>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*" />
                    <RowDefinition Height="0.4*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    <TextBlock
                        VerticalAlignment="Bottom"
                        d:Text="席拉"
                        FontSize="30"
                        Text="{Binding SelectedHeroAvatarModel.Name, Mode=OneWay}" />
                    <TextBlock
                        Margin="0,5,0,0"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource GrayForegroundTextBlock}">
                        <Run Text="配音:" />
                        <Run d:Text="谢莹" Text="{Binding SelectedHeroAvatarModel.VoiceActor, Mode=OneWay}" />
                    </TextBlock>
                </StackPanel>
                <StackPanel
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <StackPanel
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
                        <Image Width="30" Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Button/白泽百科.png" />
                        <TextBlock
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Text="白泽百科" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <Image Width="30" Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Button/修行.png" />
                        <TextBlock
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Text="修行" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        d:Text="慈光降世，抚善施威"
                        Foreground="NavajoWhite"
                        Text="{Binding SelectedHeroAvatarModel.ShortDescription, Mode=OneWay}" />
                    <TextBlock
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        d:Text="首席神愈者，晨曦圣女，席拉曾享尽月轮举国的赞誉与荣 光。但如今美名已逝，只余非议与流言。 异端？疯癫？无所谓，光明在暗夜之中总会刺眼。为追寻 那神圣的光辉，她甘愿奉献所有，矢志不渝。"
                        Style="{StaticResource GrayForegroundTextBlock}"
                        Text="{Binding SelectedHeroAvatarModel.Description, Mode=OneWay}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Grid.Row="2">
                    <UniformGrid
                        Height="50"
                        HorizontalAlignment="Center"
                        Columns="3">
                        <Image Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Hero/Skill/Icon.png" />
                        <Image Margin="10,0" Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Hero/Skill/F1.png" />
                        <Image Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Hero/Skill/V1.png" />
                    </UniformGrid>
                    <StackPanel
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="难度" />
                        <controls:HeroAccessibilityDifficultyUserControl
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            d:Number="3.5"
                            Number="{Binding SelectedHeroAvatarModel.HeroAccessibilityDifficulty, Mode=OneWay}" />
                    </StackPanel>
                    <Viewbox Width="180">
                        <controls:HeroRadarUserControl
                            Grid.Row="2"
                            Margin="0,10,0,0"
                            d:Control="2"
                            d:Survival="3"
                            Control="{Binding SelectedHeroAvatarModel.Control, Mode=OneWay}"
                            Damage="{Binding SelectedHeroAvatarModel.Damage, Mode=OneWay}"
                            Mobility="{Binding SelectedHeroAvatarModel.Mobility, Mode=OneWay}"
                            Support="{Binding SelectedHeroAvatarModel.Support, Mode=OneWay}"
                            Survival="{Binding SelectedHeroAvatarModel.Survival, Mode=OneWay}" />
                    </Viewbox>
                    <Button
                        Height="30"
                        Content="大厅展示"
                        Style="{StaticResource SettingBackToGameCommandButtonStyle}" />
                </StackPanel>
                <!--<StackPanel Grid.Row="2" VerticalAlignment="Center">
                    <controls:HeroAccessibilityDifficultyUserControl VerticalAlignment="Center" Number="3" />
                </StackPanel>-->
            </Grid>
        </Grid>
        <controls:EscBackControl
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding ReturnToHallCommand}" />
    </Grid>
</base:UserControlBase>