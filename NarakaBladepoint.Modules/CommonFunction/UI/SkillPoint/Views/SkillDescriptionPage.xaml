<UserControl
    x:Class="NarakaBladepoint.Modules.CommonFunction.UI.SkillPoint.Views.SkillDescriptionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.SkillPoint.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{Binding DescriptionHeight, RelativeSource={RelativeSource AncestorType=local:SkillDescriptionPage}}" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <!--  Title Row  -->
        <TextBlock
            Grid.Row="0"
            Padding="10"
            VerticalAlignment="Center"
            d:Text="发丘指"
            FontSize="25"
            Foreground="#FFD4A574"
            Text="{Binding Title, RelativeSource={RelativeSource AncestorType=local:SkillDescriptionPage}}" />

        <!--  Tags Row  -->
        <ItemsControl
            Grid.Row="1"
            Padding="10,5"
            VerticalAlignment="Center"
            d:ItemsSource="{d:SampleData ItemCount=2}"
            ItemsSource="{Binding Tags, RelativeSource={RelativeSource AncestorType=local:SkillDescriptionPage}}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border
                        Width="{Binding TagWidth, RelativeSource={RelativeSource AncestorType=local:SkillDescriptionPage}}"
                        Height="{Binding TagHeight, RelativeSource={RelativeSource AncestorType=local:SkillDescriptionPage}}"
                        Margin="5,0"
                        Padding="8,3">
                        <Border.Background>
                            <ImageBrush ImageSource="{StaticResource SocialTagBackgroundImage}" Stretch="UniformToFill" />
                        </Border.Background>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            d:Text="受击可用"
                            FontSize="12"
                            Foreground="#FFFFFF"
                            Text="{Binding}" />
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!--  Description Row  -->
        <ScrollViewer
            Grid.Row="2"
            HorizontalScrollBarVisibility="Hidden"
            VerticalScrollBarVisibility="Auto">
            <ContentControl
                Name="description"
                Padding="10"
                VerticalAlignment="Top"
                Content="{Binding Description, RelativeSource={RelativeSource AncestorType=local:SkillDescriptionPage}}" />
        </ScrollViewer>

        <!--  Image Row  -->
        <Border
            Name="mp4"
            Grid.Row="3"
            Padding="10"
            Background="Black">
            <Grid>
                <MediaElement
                    Name="VideoPlayer"
                    LoadedBehavior="Pause"
                    MediaEnded="VideoPlayer_MediaEnded"
                    MediaOpened="VideoPlayer_MediaOpened"
                    Source="{Binding VideoSource, RelativeSource={RelativeSource AncestorType=local:SkillDescriptionPage}}"
                    Stretch="UniformToFill"
                    UnloadedBehavior="Stop"
                    Volume="0.5" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
