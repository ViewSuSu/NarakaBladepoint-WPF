<base:UserControlBase
    x:Class="NarakaBladepoint.Modules.CommonFunction.UI.SkillPoint.Views.SkillPointPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:base="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:converters="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.SkillPoint.Converters"
    xmlns:core="clr-namespace:Microsoft.Xaml.Behaviors.Core;assembly=Microsoft.Xaml.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fwConverters="clr-namespace:NarakaBladepoint.Framework.UI.Converters;assembly=NarakaBladepoint.Framework"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.SkillPoint.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skillViews="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.SkillPoint.Views"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.SkillPoint.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:SkillPointPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <base:UserControlBase.Resources>
        <converters:HorizontalMirrorConverter x:Key="HorizontalMirrorConverter" />
        <converters:VerticalMirrorConverter x:Key="VerticalMirrorConverter" />
        <converters:CenterOffsetConverter x:Key="CenterOffsetConverter" />
        <converters:PolarToCartesianConverter x:Key="PolarToCartesianConverter" />
        <converters:UpperLeftPolarConverter x:Key="UpperLeftPolarConverter" />
        <converters:LearnedToOpacityConverter x:Key="LearnedToOpacityConverter" />
        <converters:DependencySkillPointConverter x:Key="DependencySkillPointConverter" />
        <converters:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter" />
        <converters:SelectedSkillVisibilityConverter x:Key="SelectedSkillVisibilityConverter" />
        <fwConverters:ImageSourceToFileNameConverter x:Key="ImageSourceToFileNameConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <system:Double x:Key="FirstCircleSkillPointSize">40</system:Double>
        <system:Double x:Key="SecondCircleSkillPointSize">50</system:Double>
        <system:Double x:Key="ThirdCircleSkillPointSize">60</system:Double>
        <system:Double x:Key="SkillPointElementSize">0</system:Double>
        <system:Double x:Key="CanEditIconSize">10</system:Double>
        <system:Double x:Key="TenOClockAngle">110</system:Double>
        <system:Double x:Key="ElevenOClockAngle">145</system:Double>
        <system:Double x:Key="FirstCircleRadius">100</system:Double>
        <system:Double x:Key="SecondCircleRadius">180</system:Double>
        <system:Double x:Key="ThirdCircleRadius">260</system:Double>

        <Thickness x:Key="FirstCircleTextBlockMargin">0,0,0,0</Thickness>
        <Thickness x:Key="SecondCircleTextBlockMargin">0,0,0,0</Thickness>
        <Thickness x:Key="ThirdCircleTextBlockMargin">0,0,0,0</Thickness>

        <!--  Tags Collections  -->
        <x:Array x:Key="F1Tags" Type="system:String">
            <system:String>受击可用</system:String>
            <system:String>防御</system:String>
        </x:Array>
        <x:Array x:Key="F2Tags" Type="system:String">
            <system:String>伤害</system:String>
            <system:String>控制</system:String>
        </x:Array>
        <x:Array x:Key="V1Tags" Type="system:String">
            <system:String>机动</system:String>
            <system:String>伤害</system:String>
            <system:String>续命</system:String>
        </x:Array>
        <x:Array x:Key="V2Tags" Type="system:String">
            <system:String>机动</system:String>
            <system:String>伤害</system:String>
            <system:String>续命</system:String>
            <system:String>充能</system:String>
        </x:Array>

        <!--  Talent Item Grid Style  -->
        <Style x:Key="TalentItemGridStyle" TargetType="local:TalentGrid">
            <Setter Property="Opacity" Value="0.7" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Opacity" Value="1.0" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="1.0" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Style for Skill Point Grid with Triggers  -->
        <Style x:Key="SkillPointGridStyle" TargetType="Grid">
            <Setter Property="Opacity" Value="0.5" />
            <Style.Triggers>
                <!--  If already learned, always show as fully opaque  -->
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag.CurrentLearned, Converter={StaticResource GreaterThanZeroConverter}}" Value="True">
                    <Setter Property="Opacity" Value="1.0" />
                </DataTrigger>
                <!--  If can be learned (enabled and has remaining points and is learnable), show as fully opaque  -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsEnabled}" Value="True" />
                        <Condition Binding="{Binding RemainingPoints, Converter={StaticResource GreaterThanZeroConverter}}" Value="True" />
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag.IsLearnable}" Value="True" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Opacity" Value="1.0" />
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
    </base:UserControlBase.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="0.85*" />
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource SkillPointBackgroundImage}" />
        </Grid.Background>
        <Grid Grid.Column="0" Margin="40,50,0,50">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="{StaticResource DefaultTransientBlackBackground8}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image
                    Name="hero"
                    HorizontalAlignment="Left"
                    Source="{StaticResource ZhangQiLingHeroImage}" />
                <StackPanel
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center">
                    <TextBlock
                        Name="heroName"
                        VerticalAlignment="Center"
                        FontSize="25"
                        Text="{Binding ElementName=hero, Path=Source, Converter={StaticResource ImageSourceToFileNameConverter}}" />
                    <TextBlock
                        Margin="0,10,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Style="{StaticResource GrayForegroundTextBlock}"
                        Text="切换角色" />
                </StackPanel>
            </Grid>
            <UniformGrid Grid.Row="1" Rows="3">
                <local:SelectiveBorder x:Name="boder1" Background="{StaticResource DefaultTransientBlackBackground3}">
                    <Grid>
                        <TextBlock Margin="30" Text="天赋" />
                        <UniformGrid
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Columns="3">
                            <local:TalentGrid
                                x:Name="tianfu1"
                                Width="40"
                                Height="40"
                                IsSelected="True"
                                Style="{StaticResource TalentItemGridStyle}">
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="IsSelectedChanged">
                                        <core:ChangePropertyAction
                                            PropertyName="CurrentSelectedSkillType"
                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType=base:UserControlBase}, Path=DataContext}"
                                            Value="tianfu" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                                <Viewbox
                                    Width="10"
                                    Height="9"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1"
                                    Stretch="Fill"
                                    StretchDirection="Both">
                                    <RadioButton
                                        Foreground="Gray"
                                        GroupName="1"
                                        IsChecked="{Binding RelativeSource={RelativeSource AncestorType=local:TalentGrid}, Path=IsSelected}"
                                        Style="{StaticResource DiamondRadioButtonStyle}"
                                        Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:TalentGrid}, Path=IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </Viewbox>
                                <Image Source="{StaticResource TianFu1Image}" />
                            </local:TalentGrid>

                            <local:TalentGrid
                                x:Name="tianfu2"
                                Width="40"
                                Height="40"
                                Margin="5,0"
                                Style="{StaticResource TalentItemGridStyle}">
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="IsSelectedChanged">
                                        <core:ChangePropertyAction
                                            PropertyName="CurrentSelectedSkillType"
                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType=base:UserControlBase}, Path=DataContext}"
                                            Value="tianfu" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                                <Viewbox
                                    Width="10"
                                    Height="9"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1"
                                    Stretch="Fill"
                                    StretchDirection="Both">
                                    <RadioButton
                                        Foreground="Gray"
                                        GroupName="1"
                                        IsChecked="{Binding RelativeSource={RelativeSource AncestorType=local:TalentGrid}, Path=IsSelected}"
                                        Style="{StaticResource DiamondRadioButtonStyle}"
                                        Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:TalentGrid}, Path=IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </Viewbox>
                                <Image Source="{StaticResource TianFu2Image}" />
                            </local:TalentGrid>

                            <local:TalentGrid
                                x:Name="tianfu3"
                                Width="40"
                                Height="40"
                                Style="{StaticResource TalentItemGridStyle}">
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="IsSelectedChanged">
                                        <core:ChangePropertyAction
                                            PropertyName="CurrentSelectedSkillType"
                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType=base:UserControlBase}, Path=DataContext}"
                                            Value="tianfu" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                                <Viewbox
                                    Width="10"
                                    Height="9"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1"
                                    Stretch="Fill"
                                    StretchDirection="Both">
                                    <RadioButton
                                        Foreground="Gray"
                                        GroupName="1"
                                        IsChecked="{Binding RelativeSource={RelativeSource AncestorType=local:TalentGrid}, Path=IsSelected}"
                                        Style="{StaticResource DiamondRadioButtonStyle}"
                                        Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:TalentGrid}, Path=IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </Viewbox>
                                <Image Source="{StaticResource TianFu2Image}" />
                            </local:TalentGrid>
                        </UniformGrid>
                    </Grid>
                </local:SelectiveBorder>

                <local:SelectiveBorder
                    x:Name="boder2"
                    Margin="0,5"
                    Background="{StaticResource DefaultTransientBlackBackground3}">
                    <Grid>
                        <TextBlock Margin="30" Text="技能" />
                        <UniformGrid
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Columns="2">
                            <local:TalentGrid
                                x:Name="f1"
                                Width="40"
                                Height="40"
                                IsSelected="False"
                                Style="{StaticResource TalentItemGridStyle}">
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="IsSelectedChanged">
                                        <core:ChangePropertyAction
                                            PropertyName="CurrentSelectedSkillType"
                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType=base:UserControlBase}, Path=DataContext}"
                                            Value="f1" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                                <Viewbox
                                    Width="10"
                                    Height="9"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1"
                                    Stretch="Fill"
                                    StretchDirection="Both">
                                    <RadioButton
                                        Foreground="Gray"
                                        GroupName="FSkillSelection"
                                        IsChecked="{Binding RelativeSource={RelativeSource AncestorType=local:TalentGrid}, Path=IsSelected}"
                                        Style="{StaticResource DiamondRadioButtonStyle}"
                                        Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:TalentGrid}, Path=IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </Viewbox>
                                <Image Source="{StaticResource F1Image}" />
                            </local:TalentGrid>

                            <local:TalentGrid
                                x:Name="f2"
                                Width="40"
                                Height="40"
                                Margin="5,0"
                                Style="{StaticResource TalentItemGridStyle}">
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="IsSelectedChanged">
                                        <core:ChangePropertyAction
                                            PropertyName="CurrentSelectedSkillType"
                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType=base:UserControlBase}, Path=DataContext}"
                                            Value="f2" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                                <Viewbox
                                    Width="10"
                                    Height="9"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1"
                                    Stretch="Fill"
                                    StretchDirection="Both">
                                    <RadioButton
                                        Foreground="Gray"
                                        GroupName="FSkillSelection"
                                        IsChecked="{Binding RelativeSource={RelativeSource AncestorType=local:TalentGrid}, Path=IsSelected}"
                                        Style="{StaticResource DiamondRadioButtonStyle}"
                                        Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:TalentGrid}, Path=IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </Viewbox>
                                <Image Source="{StaticResource F2Image}" />
                            </local:TalentGrid>
                        </UniformGrid>
                    </Grid>
                </local:SelectiveBorder>
                <local:SelectiveBorder x:Name="boder3" Background="{StaticResource DefaultTransientBlackBackground3}">
                    <Grid>
                        <TextBlock Margin="30" Text="奥义" />
                        <UniformGrid
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Columns="2">
                            <local:TalentGrid
                                x:Name="v1"
                                Width="40"
                                Height="40"
                                IsSelected="False"
                                Style="{StaticResource TalentItemGridStyle}">
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="IsSelectedChanged">
                                        <core:ChangePropertyAction
                                            PropertyName="CurrentSelectedSkillType"
                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType=base:UserControlBase}, Path=DataContext}"
                                            Value="v1" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                                <Viewbox
                                    Width="10"
                                    Height="9"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1"
                                    Stretch="Fill"
                                    StretchDirection="Both">
                                    <RadioButton
                                        Foreground="Gray"
                                        GroupName="VSkillSelection"
                                        IsChecked="{Binding RelativeSource={RelativeSource AncestorType=local:TalentGrid}, Path=IsSelected}"
                                        Style="{StaticResource DiamondRadioButtonStyle}"
                                        Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:TalentGrid}, Path=IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </Viewbox>
                                <Image Source="{StaticResource V1Image}" />
                            </local:TalentGrid>

                            <local:TalentGrid
                                x:Name="v2"
                                Width="40"
                                Height="40"
                                Margin="5,0"
                                Style="{StaticResource TalentItemGridStyle}">
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="IsSelectedChanged">
                                        <core:ChangePropertyAction
                                            PropertyName="CurrentSelectedSkillType"
                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType=base:UserControlBase}, Path=DataContext}"
                                            Value="v2" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                                <Viewbox
                                    Width="10"
                                    Height="9"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1"
                                    Stretch="Fill"
                                    StretchDirection="Both">
                                    <RadioButton
                                        Foreground="Gray"
                                        GroupName="VSkillSelection"
                                        IsChecked="{Binding RelativeSource={RelativeSource AncestorType=local:TalentGrid}, Path=IsSelected}"
                                        Style="{StaticResource DiamondRadioButtonStyle}"
                                        Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:TalentGrid}, Path=IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </Viewbox>
                                <Image Source="{StaticResource V2Image}" />
                            </local:TalentGrid>
                        </UniformGrid>
                    </Grid>
                </local:SelectiveBorder>
            </UniformGrid>
        </Grid>
        <Grid Name="mainGrid" Grid.Column="1">
            <Canvas x:Name="skillPointCanvas" ClipToBounds="False">
                <Canvas.Visibility>
                    <MultiBinding Converter="{StaticResource SelectedSkillVisibilityConverter}" ConverterParameter="canvas">
                        <Binding Path="CurrentSelectedSkillType" />
                    </MultiBinding>
                </Canvas.Visibility>
                <Ellipse
                    x:Name="ellipse"
                    Canvas.Left="{Binding ElementName=skillPointCanvas, Path=ActualWidth, Converter={StaticResource CenterOffsetConverter}, ConverterParameter=80}"
                    Canvas.Top="{Binding ElementName=skillPointCanvas, Path=ActualHeight, Converter={StaticResource CenterOffsetConverter}, ConverterParameter=80}"
                    Width="80"
                    Height="80"
                    Fill="{StaticResource DefaultTransientBlackBackground3}"
                    Stroke="{StaticResource DefaultOrangeBrush}"
                    StrokeThickness="3" />
                <StackPanel
                    x:Name="stackPanel"
                    Canvas.Left="{Binding ElementName=ellipse, Path=(Canvas.Left)}"
                    Canvas.Top="{Binding ElementName=ellipse, Path=(Canvas.Top)}"
                    Width="80"
                    Margin="0,15,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Panel.ZIndex="1">
                    <TextBlock
                        HorizontalAlignment="Center"
                        d:Text="20"
                        FontSize="24"
                        Foreground="White"
                        Text="{Binding RemainingPoints}" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="10"
                        Text="剩余点数" />
                </StackPanel>

                <!--  LeftUp Circle 1 - 10 O'Clock  -->
                <Grid
                    x:Name="LuGrid"
                    Width="{StaticResource FirstCircleSkillPointSize}"
                    Height="{StaticResource FirstCircleSkillPointSize}"
                    Style="{StaticResource SkillPointGridStyle}"
                    Tag="{Binding SkillPointsLeftDown[0]}">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="MouseLeftButtonDown">
                            <b:InvokeCommandAction Command="{Binding LearnSkillCommand}" CommandParameter="{Binding SkillPointsLeftDown[0]}" />
                        </b:EventTrigger>
                        <b:EventTrigger EventName="MouseRightButtonDown">
                            <b:InvokeCommandAction Command="{Binding UnlearnSkillCommand}" CommandParameter="{Binding SkillPointsLeftDown[0]}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                    <Canvas.Left>
                        <Binding
                            Converter="{StaticResource UpperLeftPolarConverter}"
                            ConverterParameter="{converters:SkillPointParameter Radius={StaticResource FirstCircleRadius},
                                                                                Angle={StaticResource TenOClockAngle},
                                                                                ElementSize={StaticResource SkillPointElementSize},
                                                                                Coordinate=0}"
                            ElementName="ellipse"
                            Path="(Canvas.Left)" />
                    </Canvas.Left>
                    <Canvas.Top>
                        <Binding
                            Converter="{StaticResource UpperLeftPolarConverter}"
                            ConverterParameter="{converters:SkillPointParameter Radius={StaticResource FirstCircleRadius},
                                                                                Angle={StaticResource TenOClockAngle},
                                                                                ElementSize={StaticResource SkillPointElementSize},
                                                                                Coordinate=1}"
                            ElementName="ellipse"
                            Path="(Canvas.Top)" />
                    </Canvas.Top>
                    <Image Source="{StaticResource SkillPointLeftDownFirstCircle1Image}" />
                    <Image
                        Width="{StaticResource CanEditIconSize}"
                        Height="{StaticResource CanEditIconSize}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Panel.ZIndex="1"
                        Source="{StaticResource CanEditImage}"
                        Visibility="{Binding SkillPointsLeftDown[0].IsLearnable, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBlock
                        Margin="{StaticResource FirstCircleTextBlockMargin}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Panel.ZIndex="1">
                        <Run FontSize="10" Text="{Binding SkillPointsLeftDown[0].CurrentLearned}" />
                        <Run FontSize="10" Text="/" />
                        <Run FontSize="10" Text="4" />
                    </TextBlock>
                </Grid>

                <!--  LeftUp Circle 1 - 11 O'Clock  -->
                <Grid
                    x:Name="MaGrid"
                    Width="{StaticResource FirstCircleSkillPointSize}"
                    Height="{StaticResource FirstCircleSkillPointSize}"
                    Style="{StaticResource SkillPointGridStyle}"
                    Tag="{Binding SkillPointsLeftDown[1]}">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="MouseLeftButtonDown">
                            <b:InvokeCommandAction Command="{Binding LearnSkillCommand}" CommandParameter="{Binding SkillPointsLeftDown[1]}" />
                        </b:EventTrigger>
                        <b:EventTrigger EventName="MouseRightButtonDown">
                            <b:InvokeCommandAction Command="{Binding UnlearnSkillCommand}" CommandParameter="{Binding SkillPointsLeftDown[1]}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                    <Canvas.Left>
                        <Binding
                            Converter="{StaticResource UpperLeftPolarConverter}"
                            ConverterParameter="{converters:SkillPointParameter Radius={StaticResource FirstCircleRadius},
                                                                                Angle={StaticResource ElevenOClockAngle},
                                                                                ElementSize={StaticResource SkillPointElementSize},
                                                                                Coordinate=0}"
                            ElementName="ellipse"
                            Path="(Canvas.Left)" />
                    </Canvas.Left>
                    <Canvas.Top>
                        <Binding
                            Converter="{StaticResource UpperLeftPolarConverter}"
                            ConverterParameter="{converters:SkillPointParameter Radius={StaticResource FirstCircleRadius},
                                                                                Angle={StaticResource ElevenOClockAngle},
                                                                                ElementSize={StaticResource SkillPointElementSize},
                                                                                Coordinate=1}"
                            ElementName="ellipse"
                            Path="(Canvas.Top)" />
                    </Canvas.Top>
                    <Image Source="{StaticResource SkillPointLeftDownFirstCircle2Image}" />
                    <Image
                        Width="{StaticResource CanEditIconSize}"
                        Height="{StaticResource CanEditIconSize}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Panel.ZIndex="1"
                        Source="{StaticResource CanEditImage}"
                        Visibility="{Binding SkillPointsLeftDown[1].IsLearnable, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBlock
                        Margin="{StaticResource FirstCircleTextBlockMargin}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Panel.ZIndex="1">
                        <Run FontSize="10" Text="{Binding SkillPointsLeftDown[1].CurrentLearned}" />
                        <Run FontSize="10" Text="/" />
                        <Run FontSize="10" Text="4" />
                    </TextBlock>
                </Grid>

                <!--  LeftUp Circle 2 - 10 O'Clock  -->
                <Grid
                    x:Name="HeGrid"
                    Width="{StaticResource SecondCircleSkillPointSize}"
                    Height="{StaticResource SecondCircleSkillPointSize}"
                    Style="{StaticResource SkillPointGridStyle}"
                    Tag="{Binding SkillPointsLeftDown[2]}">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="MouseLeftButtonDown">
                            <b:InvokeCommandAction Command="{Binding LearnSkillCommand}" CommandParameter="{Binding SkillPointsLeftDown[2]}" />
                        </b:EventTrigger>
                        <b:EventTrigger EventName="MouseRightButtonDown">
                            <b:InvokeCommandAction Command="{Binding UnlearnSkillCommand}" CommandParameter="{Binding SkillPointsLeftDown[2]}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                    <Grid.IsEnabled>
                        <MultiBinding Converter="{StaticResource DependencySkillPointConverter}" FallbackValue="True">
                            <Binding Path="SkillPointsLeftDown[0].CurrentLearned" />
                            <Binding Path="SkillPointsLeftDown[1].CurrentLearned" />
                            <Binding Path="SkillPointsLeftDown[0].TotalLearnable" />
                        </MultiBinding>
                    </Grid.IsEnabled>
                    <Canvas.Left>
                        <Binding
                            Converter="{StaticResource UpperLeftPolarConverter}"
                            ConverterParameter="{converters:SkillPointParameter Radius={StaticResource SecondCircleRadius},
                                                                                Angle={StaticResource TenOClockAngle},
                                                                                ElementSize={StaticResource SkillPointElementSize},
                                                                                Coordinate=0}"
                            ElementName="ellipse"
                            Path="(Canvas.Left)" />
                    </Canvas.Left>
                    <Canvas.Top>
                        <Binding
                            Converter="{StaticResource UpperLeftPolarConverter}"
                            ConverterParameter="{converters:SkillPointParameter Radius={StaticResource SecondCircleRadius},
                                                                                Angle={StaticResource TenOClockAngle},
                                                                                ElementSize={StaticResource SkillPointElementSize},
                                                                                Coordinate=1}"
                            ElementName="ellipse"
                            Path="(Canvas.Top)" />
                    </Canvas.Top>
                    <Image Source="{StaticResource SkillPointLeftDownFirstCircle1Image}" />
                    <Image
                        Width="{StaticResource CanEditIconSize}"
                        Height="{StaticResource CanEditIconSize}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Panel.ZIndex="1"
                        Source="{StaticResource CanEditImage}"
                        Visibility="{Binding SkillPointsLeftDown[2].IsLearnable, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBlock
                        Margin="{StaticResource SecondCircleTextBlockMargin}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Panel.ZIndex="1">
                        <Run FontSize="10" Text="{Binding SkillPointsLeftDown[2].CurrentLearned}" />
                        <Run FontSize="10" Text="/" />
