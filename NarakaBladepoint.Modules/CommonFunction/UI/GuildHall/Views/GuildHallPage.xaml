<views:UserControlBase
    x:Class="NarakaBladepoint.Modules.CommonFunction.UI.GuildHall.Views.GuildHallPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.GuildHall.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.GuildHall.ViewModels"
    xmlns:views="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    d:DataContext="{d:DesignInstance Type=viewmodels:GuildHallPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Grid Background="#2B3E50">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Top Search Bar  -->
            <Grid
                Grid.Row="0"
                Height="50"
                Background="#354660">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <!--  Search Area  -->
                <StackPanel
                    Grid.Column="1"
                    Margin="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBox
                        Width="180"
                        Height="30"
                        Padding="8"
                        Background="#3D4F63"
                        Foreground="Gray" />
                    <Button
                        Width="40"
                        Height="30"
                        Margin="5,0"
                        Background="#8B6F47"
                        Content="🔍"
                        Foreground="White" />
                </StackPanel>
            </Grid>

            <!--  Main Content  -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="280" />
                </Grid.ColumnDefinitions>

                <!--  Left Panel - Guild List with DataGrid in TabItem  -->
                <TabControl
                    Grid.Column="0"
                    Background="Transparent"
                    BorderThickness="0">
                    <TabItem
                        Background="#6B8CAD"
                        FontSize="14"
                        Foreground="White"
                        Header="推荐聚义厅">
                        <DataGrid
                            Background="#354660"
                            Foreground="White"
                            GridLinesVisibility="None"
                            HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="40"
                                    Binding="{Binding Level}"
                                    Header="等级" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Name}"
                                    Header="聚义厅名称" />
                                <DataGridTextColumn
                                    Width="120"
                                    Binding="{Binding Master}"
                                    Header="帮主" />
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding MemberCount}"
                                    Header="人数" />
                                <DataGridTextColumn
                                    Width="100"
                                    Binding="{Binding Restriction}"
                                    Header="限制" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem
                        Background="#4A5F7F"
                        FontSize="14"
                        Foreground="White"
                        Header="好友聚义厅">
                        <DataGrid
                            Background="#354660"
                            Foreground="White"
                            GridLinesVisibility="None"
                            HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="40"
                                    Binding="{Binding Level}"
                                    Header="等级" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Name}"
                                    Header="聚义厅名称" />
                                <DataGridTextColumn
                                    Width="120"
                                    Binding="{Binding Master}"
                                    Header="帮主" />
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding MemberCount}"
                                    Header="人数" />
                                <DataGridTextColumn
                                    Width="100"
                                    Binding="{Binding Restriction}"
                                    Header="限制" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>

                <!--  Right Panel - Guild Info  -->
                <StackPanel
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    Orientation="Vertical">
                    <!--  Guild Badge  -->
                    <Border
                        Margin="0,0,0,20"
                        Padding="15"
                        Background="#8B6F47"
                        CornerRadius="5">
                        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="Gold"
                                Text="3" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Foreground="White"
                                Text="养老日佛系" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Center"
                                FontSize="11"
                                Foreground="#FFD700"
                                Text="关爱萌新" />
                        </StackPanel>
                    </Border>

                    <!--  Guild Master Info  -->
                    <Border
                        Margin="0,0,0,10"
                        Padding="10"
                        Background="#3D4F63"
                        CornerRadius="3">
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="帮主" />
                            <TextBlock
                                FontSize="11"
                                Foreground="#FFB6C1"
                                Text="邪恶小烤鱼" />
                            <TextBlock
                                Margin="0,10,0,5"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="招募宣言" />
                            <TextBlock
                                FontSize="10"
                                Foreground="Gray"
                                Text="暂无招募宣言" />
                        </StackPanel>
                    </Border>

                    <!--  Guild Stats  -->
                    <Border
                        Padding="10"
                        Background="#3D4F63"
                        CornerRadius="3">
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="11"
                                Foreground="White"
                                Text="下场群英会时间：未规约" />
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="11"
                                Foreground="White"
                                Text="本周积分:5884" />
                            <TextBlock
                                FontSize="11"
                                Foreground="White"
                                Text="上周积分:6824" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!--  Bottom Buttons  -->
            <Grid
                Grid.Row="2"
                Height="60"
                Margin="20"
                Background="#354660">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="1"
                    Width="160"
                    Height="40"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Background="#8B6F47"
                    Content="创建聚义厅"
                    FontSize="14"
                    Foreground="White" />
                <Button
                    Grid.Column="2"
                    Width="160"
                    Height="40"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Background="#8B6F47"
                    Content="邀请别表"
                    FontSize="14"
                    Foreground="White" />
                <Button
                    Grid.Column="3"
                    Width="160"
                    Height="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="#C85A54"
                    Content="加入"
                    FontSize="14"
                    Foreground="White" />
            </Grid>

        </Grid>
    </Grid>
</views:UserControlBase>
