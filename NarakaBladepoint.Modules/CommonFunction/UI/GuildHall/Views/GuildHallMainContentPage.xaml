<views:UserControlBase
    x:Class="NarakaBladepoint.Modules.CommonFunction.UI.GuildHall.Views.GuildHallMainContentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.GuildHall.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.GuildHall.ViewModels"
    xmlns:views="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    d:DataContext="{d:DesignInstance Type=viewmodels:GuildHallMainContentPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Grid Background="{StaticResource Background2}">
        <Grid>
            <TabControl
                attach:TabControlContentMarginAttachedProperty.IsAutoAdjustContentMargin="True"
                Background="Transparent"
                BorderThickness="0">
                <TabItem
                    Width="450"
                    Height="25"
                    Header=""
                    Style="{StaticResource CommonFunctionTabItem}"
                    Visibility="Hidden" />
                <TabItem
                    Width="80"
                    Height="25"
                    Background="{StaticResource DefaultTransientBlackBackground5}"
                    Header="聚义厅"
                    IsSelected="True"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <local:GuildHallPage />
                </TabItem>
                <TabItem
                    Width="80"
                    Height="25"
                    Background="{StaticResource DefaultTransientBlackBackground5}"
                    Header="聚义商城"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <local:GuildHallStorePage />
                </TabItem>
                <TabItem
                    Width="80"
                    Height="25"
                    Background="{StaticResource DefaultTransientBlackBackground5}"
                    Header="聚义庆典"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <local:GuildHallEventPage Margin="15" />
                </TabItem>
            </TabControl>
        </Grid>
        <controls:EscBackControl
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Panel.ZIndex="5"
            Command="{Binding ReturnToHallCommand}" />
    </Grid>
</views:UserControlBase>
