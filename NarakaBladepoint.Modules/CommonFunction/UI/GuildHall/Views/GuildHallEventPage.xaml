<views:UserControlBase
    x:Class="NarakaBladepoint.Modules.CommonFunction.UI.GuildHall.Views.GuildHallEventPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.GuildHall.ViewModels"
    xmlns:views="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    d:DataContext="{d:DesignInstance Type=viewmodels:GuildHallEventPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource GuildHallBackground2}" />
        </Grid.Background>
        <Grid Margin="50,100">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="20"
                Text="聚义庆典" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Border Background="{StaticResource DefaultTransientBlackBackground3}">
                    <Grid>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Style="{StaticResource GrayForegroundTextBlock}"
                            Text="请先加入聚义厅" />
                    </Grid>
                </Border>
                <Border Grid.Column="2">
                    <Image
                        Name="image2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="{StaticResource GuildHallStoreImage2}" />
                </Border>
            </Grid>
        </Grid>
    </Grid>
</views:UserControlBase>
