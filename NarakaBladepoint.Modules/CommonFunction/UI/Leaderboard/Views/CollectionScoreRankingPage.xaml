                                            Orientation="Horizontal">
                                            <Image
                                                Width="20"
                                                Height="20"
                                                Margin="0,0,5,0"
                                                Source="{StaticResource LeaderboardCollectionScoreImage}"
                                                Stretch="Uniform" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="{Binding Score}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="120" Header="神品外观">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            Text="{Binding ExcellentAppearance}"
