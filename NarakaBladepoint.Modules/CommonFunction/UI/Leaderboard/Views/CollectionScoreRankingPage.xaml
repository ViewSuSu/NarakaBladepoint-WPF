                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="200" Header="总收藏值">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel
                                            Margin="8,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Width="20"
                                                Height="20"
                                                Margin="0,0,5,0"
                                                Source="{StaticResource LeaderboardCollectionScoreImage}"
                                                Stretch="Uniform" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="{Binding Score}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="120" Header="神品外观">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            Text="{Binding ExcellentAppearance}"
                                            TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="120" Header="极品外观">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            Text="{Binding SuperiorAppearance}"
                                            TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </controls:ImageTextTabItem>
                <controls:ImageTextTabItem
                    Background="#3A000000"
                    ImageSource="{StaticResource LeaderboardCollectionScoreTabItemImage}"
                    Text="全服">
                    <controls:ImageTextTabItem.SelectedBackground>
                        <ImageBrush ImageSource="{StaticResource FriendTabItemBackgroundImage}" />
                    </controls:ImageTextTabItem.SelectedBackground>
                    <DataGrid
