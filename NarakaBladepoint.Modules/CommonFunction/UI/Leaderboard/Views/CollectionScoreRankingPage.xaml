                            <DataGridTemplateColumn Width="*" Header="斗士">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel
                                            Margin="8,0"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Name="image2"
                                                Width="40"
