<views:UserControlBase
    x:Class="NarakaBladepoint.Modules.CommonFunction.UI.Leaderboard.Views.TournamentChampionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Leaderboard.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Leaderboard.ViewModels"
    xmlns:views="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    d:DataContext="{d:DesignInstance Type=viewmodels:TournamentChampionPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Grid Background="{StaticResource Background2}">
        <Grid Margin="100,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>
            <ListBox
                HorizontalContentAlignment="Stretch"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                Background="Transparent"
                BorderThickness="0"
                ItemsSource="{Binding ChampionList}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Panel.ZIndex="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.7*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Grid.Background>
                                        <ImageBrush ImageSource="{StaticResource LeaderboardTournamentChampionArrowImage}" />
                                    </Grid.Background>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource DefaultOrangeBrush}"
                                        Text="{Binding ChampionName}" />
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="1" Margin="0,-20,0,0">
                                <Border
                                    Name="boder"
                                    Height="150"
                                    VerticalAlignment="Top">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="White" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Border.Background>
                                        <ImageBrush
                                            x:Name="championImageBrush"
                                            d:ImageSource="{StaticResource LeaderboardTournamentChampionDesignImage}"
                                            ImageSource="{Binding ChampionImage}"
                                            Stretch="Fill" />
                                    </Border.Background>
                                </Border>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Grid Margin="0,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
            </Grid>
            <Image
                Name="iamge22"
                Grid.Column="1"
                Source="{StaticResource LeaderboardTournamentChampionBackgroundImage}"
                Stretch="Uniform" />
        </Grid>
    </Grid>
</views:UserControlBase>