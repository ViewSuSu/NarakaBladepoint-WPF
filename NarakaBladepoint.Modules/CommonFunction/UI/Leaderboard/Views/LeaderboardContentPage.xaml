<views:UserControlBase
    x:Class="NarakaBladepoint.Modules.CommonFunction.UI.Leaderboard.Views.LeaderboardContentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Leaderboard.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Leaderboard.ViewModels"
    xmlns:views="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    d:Background="Gray"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  Mode tabs  -->
        <TabControl
            Grid.Row="0"
            Margin="8"
            SelectedIndex="0">
            <TabItem Header="单人模式" Style="{StaticResource CommonFunctionTabItem2}">
                <TabItem.Content>
                    <DataGrid
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        AutoGenerateColumns="False"
                        ColumnHeaderHeight="30"
                        ColumnHeaderStyle="{StaticResource TransparentDataGridColumnHeaderStyle}"
                        GridLinesVisibility="None"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding PlayersSolo}"
                        RowHeight="56"
                        RowStyle="{StaticResource TransparentDataGridRowStyle}"
                        Style="{StaticResource TransparentDataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="80"
                                Binding="{Binding Rank}"
                                Header="排名">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Width="*" Header="斗士">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel
                                            Margin="8,0"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Width="40"
                                                Height="40"
                                                Source="{Binding Avatar}"
                                                Stretch="UniformToFill" />
                                            <TextBlock
                                                Margin="8,0"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Foreground="White"
                                                Text="{Binding Name}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="200" Header="境界">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel
                                            Margin="8,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Width="28"
                                                Height="28"
                                                Source="{Binding RealmIcon}"
                                                Stretch="Uniform" />
                                            <TextBlock
                                                Margin="8,0"
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="{Binding RealmName}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding Score}"
                                Header="总积分">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding Matches}"
                                Header="游戏场次">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem.Content>
            </TabItem>
            <TabItem Header="双人模式" Style="{StaticResource CommonFunctionTabItem2}">
                <TabItem.Content>
                    <DataGrid
                        AutoGenerateColumns="False"
                        ColumnHeaderStyle="{StaticResource TransparentDataGridColumnHeaderStyle}"
                        GridLinesVisibility="None"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding PlayersDuo}"
                        RowHeight="56"
                        RowStyle="{StaticResource TransparentDataGridRowStyle}"
                        Style="{StaticResource TransparentDataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="80"
                                Binding="{Binding Rank}"
                                Header="排名">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Width="*" Header="斗士">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel
                                            Margin="8,0"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Width="40"
                                                Height="40"
                                                Source="{Binding Avatar}"
                                                Stretch="UniformToFill" />
                                            <TextBlock
                                                Margin="8,0"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Foreground="White"
                                                Text="{Binding Name}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="200" Header="境界">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel
                                            Margin="8,0"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Width="28"
                                                Height="28"
                                                Source="{Binding RealmIcon}"
                                                Stretch="Uniform" />
                                            <TextBlock
                                                Margin="8,0"
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="{Binding RealmName}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding Score}"
                                Header="总积分">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding Matches}"
                                Header="游戏场次">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem.Content>
            </TabItem>
            <TabItem Header="三人模式" Style="{StaticResource CommonFunctionTabItem2}">
                <TabItem.Content>
                    <DataGrid
                        AutoGenerateColumns="False"
                        ColumnHeaderStyle="{StaticResource TransparentDataGridColumnHeaderStyle}"
                        GridLinesVisibility="None"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding PlayersTrio}"
                        RowHeight="56"
                        RowStyle="{StaticResource TransparentDataGridRowStyle}"
                        Style="{StaticResource TransparentDataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="80"
                                Binding="{Binding Rank}"
                                Header="排名" />
                            <DataGridTemplateColumn Width="*" Header="斗士">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel
                                            Margin="8,0"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Width="40"
                                                Height="40"
                                                Source="{Binding Avatar}"
                                                Stretch="UniformToFill" />
                                            <TextBlock
                                                Margin="8,0"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Foreground="White"
                                                Text="{Binding Name}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="200" Header="境界">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel
                                            Margin="8,0"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Width="28"
                                                Height="28"
                                                Source="{Binding RealmIcon}"
                                                Stretch="Uniform" />
                                            <TextBlock
                                                Margin="8,0"
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="{Binding RealmName}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding Score}"
                                Header="总积分">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding Matches}"
                                Header="游戏场次" />
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem.Content>
            </TabItem>
        </TabControl>

        <!--  Footer bar showing unranked row  -->
        <Border
            Grid.Row="2"
            Margin="0,8,0,0"
            Padding="8">
            <DockPanel>
                <TextBlock
                    Margin="8,0"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="未入榜" />
                <StackPanel
                    VerticalAlignment="Center"
                    DockPanel.Dock="Right"
                    Orientation="Horizontal">
                    <Image
                        Width="40"
                        Height="40"
                        Source="{Binding Unranked.Avatar}" />
                    <TextBlock
                        Margin="8,0"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="{Binding Unranked.Name}" />
                    <TextBlock
                        Margin="16,0"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="{Binding Unranked.RealmName}" />
                    <TextBlock
                        Margin="16,0"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="{Binding Unranked.Score}" />
                    <TextBlock
                        Margin="16,0"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="{Binding Unranked.Matches}" />
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</views:UserControlBase>
