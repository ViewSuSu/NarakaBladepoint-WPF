<base:UserControlBase
    x:Class="NarakaBladepoint.Modules.CommonFunction.UI.Inventory.Views.InventoryUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:base="clr-namespace:NarakaBladepoint.Framework.Core.Bases;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Inventory.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Inventory.ViewModels"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:InventoryUserControlViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/NarakaBladepoint.Resources;component/Image/background2.png" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="0.1*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.65*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TabControl
                    Margin="50,50,0,0"
                    Background="Transparent"
                    Style="{StaticResource AverageTabControlStyle}">
                    <controls:IconTabItem
                        Header="全部"
                        HeaderFontSize="11"
                        Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/InventoryProps/logo1.png"
                        IconHeight="22"
                        IconWidth="24">
                        <ItemsControl d:ItemsSource="{d:SampleData ItemCount=25}" ItemsSource="{Binding InventoryItemModels}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemHeight="60" ItemWidth="60" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="2">
                                        <Image
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/InventoryProps/1.png"
                                            Source="{Binding Icon}"
                                            Stretch="UniformToFill" />
                                        <TextBlock
                                            Margin="0,0,2,2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            d:Text="1"
                                            FontSize="10"
                                            Foreground="White"
                                            Text="{Binding Count}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </controls:IconTabItem>
                    <controls:IconTabItem Header="礼包" Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/InventoryProps/logo2.png">
                        <ItemsControl d:ItemsSource="{d:SampleData ItemCount=25}" ItemsSource="{Binding InventoryItemModels}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemHeight="60" ItemWidth="60" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="2">
                                        <Image
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/InventoryProps/1.png"
                                            Source="{Binding Icon}"
                                            Stretch="UniformToFill" />
                                        <TextBlock
                                            Margin="0,0,2,2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            d:Text="1"
                                            FontSize="10"
                                            Foreground="White"
                                            Text="{Binding Count}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </controls:IconTabItem>
                    <controls:IconTabItem Header="卡券" Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/InventoryProps/logo3.png">
                        <ItemsControl d:ItemsSource="{d:SampleData ItemCount=25}" ItemsSource="{Binding InventoryItemModels}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemHeight="60" ItemWidth="60" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="2">
                                        <Image
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/InventoryProps/1.png"
                                            Source="{Binding Icon}"
                                            Stretch="UniformToFill" />
                                        <TextBlock
                                            Margin="0,0,2,2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            d:Text="1"
                                            FontSize="10"
                                            Foreground="White"
                                            Text="{Binding Count}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </controls:IconTabItem>
                    <controls:IconTabItem Header="征神之路" Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/InventoryProps/logo4.png">
                        <ItemsControl d:ItemsSource="{d:SampleData ItemCount=25}" ItemsSource="{Binding InventoryItemModels}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemHeight="60" ItemWidth="60" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="2">
                                        <Image
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/InventoryProps/1.png"
                                            Source="{Binding Icon}"
                                            Stretch="UniformToFill" />
                                        <TextBlock
                                            Margin="0,0,2,2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            d:Text="1"
                                            FontSize="10"
                                            Foreground="White"
                                            Text="{Binding Count}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </controls:IconTabItem>
                    <controls:IconTabItem Header="无间镖客" Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/InventoryProps/logo5.png">
                        <ItemsControl d:ItemsSource="{d:SampleData ItemCount=25}" ItemsSource="{Binding InventoryItemModels}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemHeight="60" ItemWidth="60" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="2">
                                        <Image
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/InventoryProps/1.png"
                                            Source="{Binding Icon}"
                                            Stretch="UniformToFill" />
                                        <TextBlock
                                            Margin="0,0,2,2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            d:Text="1"
                                            FontSize="10"
                                            Foreground="White"
                                            Text="{Binding Count}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </controls:IconTabItem>
                </TabControl>
                <Grid Grid.Column="1" Margin="20,100,0,150">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="0.75*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Grid.Column="0"
                        Width="300"
                        Height="300"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/InventoryProps/gaoqing.png"
                        Stretch="Uniform" />
                    <Grid Grid.Column="1">
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                d:Text="新春宝灯"
                                FontSize="30"
                                Foreground="White" />
                            <TextBlock
                                Margin="0,10,0,0"
                                Foreground="#EAB181"
                                Text="道具" />
                            <TextBlock
                                Margin="0,10,0,0"
                                Foreground="White"
                                Text="xxxxxxxxxxxxxxxxxxxxxxxxxx"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <controls:EscBackControl
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Panel.ZIndex="5"
            Command="{Binding ReturnCommand}" />
    </Grid>
</base:UserControlBase>