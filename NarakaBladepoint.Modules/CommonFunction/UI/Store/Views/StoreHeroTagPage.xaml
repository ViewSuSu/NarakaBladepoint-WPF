<views:UserControlBase
    x:Class="NarakaBladepoint.Modules.CommonFunction.UI.Store.Views.StoreHeroTagPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Store.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Store.ViewModels"
    xmlns:views="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    d:DataContext="{d:DesignInstance Type=viewmodels:StoreHeroTagPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid d:Background="{StaticResource Background2}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="80" />
                <RowDefinition />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--  Top row - Quality filter and points  -->
            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Margin="15,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <controls:ToggleButtonComboBox Width="120" />
            </StackPanel>
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    FontSize="12"
                    Foreground="White"
                    Text="💎 " />
                <TextBlock
                    d:Text="86924"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="White" />
            </StackPanel>

            <StackPanel
                Name="background"
                Grid.Row="1"
                Grid.Column="1"
                Margin="20,0,20,15"
                Orientation="Horizontal">
                <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                    <TextBlock Foreground="Gray" Text="英雄印点数" />
                    <TextBlock
                        Margin="0,5,0,0"
                        FontSize="32"
                        Foreground="Gold"
                        Text="4075" />
                </StackPanel>
                <StackPanel
                    Margin="50,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        Name="textblock"
                        d:Text="壹·青空阁"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{Binding SelectedTagName}" />
                    <TextBlock
                        Margin="0,8,0,0"
                        FontSize="12"
                        Foreground="Gray"
                        Text="英雄印点数达到50解锁" />
                </StackPanel>
            </StackPanel>

            <!--  Left sidebar - Category list  -->
            <StackPanel
                Name="stackpanel"
                Grid.Row="1"
                Grid.RowSpan="2"
                Margin="10,10,10,10"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <controls:HighlightBorder
                    Height="45"
                    Background="{StaticResource DefaultTransientBlackBackground2}"
                    BorderBrush="White"
                    BorderThickness="2">
                    <TextBlock
                        Margin="15,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="White"
                        Text="壹·青空阁" />
                    <controls:HighlightBorder.InputBindings>
                        <MouseBinding
                            Command="{Binding SelectTagCommand}"
                            CommandParameter="1"
                            MouseAction="LeftClick" />
                    </controls:HighlightBorder.InputBindings>
                </controls:HighlightBorder>
                <controls:HighlightBorder
                    Height="45"
                    Margin="0,8,0,0"
                    Background="{StaticResource DefaultTransientBlackBackground2}">
                    <TextBlock
                        Margin="15,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="White"
                        Text="贰·蓝蔚阁" />
                    <controls:HighlightBorder.InputBindings>
                        <MouseBinding
                            Command="{Binding SelectTagCommand}"
                            CommandParameter="2"
                            MouseAction="LeftClick" />
                    </controls:HighlightBorder.InputBindings>
                </controls:HighlightBorder>
                <controls:HighlightBorder
                    Height="45"
                    Margin="0,8,0,0"
                    Background="{StaticResource DefaultTransientBlackBackground2}">
                    <TextBlock
                        Margin="15,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="White"
                        Text="叁·碧天阁" />
                    <controls:HighlightBorder.InputBindings>
                        <MouseBinding
                            Command="{Binding SelectTagCommand}"
                            CommandParameter="3"
                            MouseAction="LeftClick" />
                    </controls:HighlightBorder.InputBindings>
                </controls:HighlightBorder>
                <controls:HighlightBorder
                    Height="45"
                    Margin="0,8,0,0"
                    Background="{StaticResource DefaultTransientBlackBackground2}">
                    <TextBlock
                        Margin="15,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="White"
                        Text="肆·赤霞阁" />
                    <controls:HighlightBorder.InputBindings>
                        <MouseBinding
                            Command="{Binding SelectTagCommand}"
                            CommandParameter="4"
                            MouseAction="LeftClick" />
                    </controls:HighlightBorder.InputBindings>
                </controls:HighlightBorder>
                <controls:HighlightBorder
                    Height="45"
                    Margin="0,8,0,0"
                    Background="{StaticResource DefaultTransientBlackBackground2}">
                    <TextBlock
                        Margin="15,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="White"
                        Text="伍·橙云阁" />
                    <controls:HighlightBorder.InputBindings>
                        <MouseBinding
                            Command="{Binding SelectTagCommand}"
                            CommandParameter="5"
                            MouseAction="LeftClick" />
                    </controls:HighlightBorder.InputBindings>
                </controls:HighlightBorder>
                <controls:HighlightBorder
                    Height="45"
                    Margin="0,8,0,0"
                    Background="{StaticResource DefaultTransientBlackBackground2}">
                    <TextBlock
                        Margin="15,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="White"
                        Text="{Binding SelectedTagName}" />
                    <controls:HighlightBorder.InputBindings>
                        <MouseBinding
                            Command="{Binding SelectTagCommand}"
                            CommandParameter="6"
                            MouseAction="LeftClick" />
                    </controls:HighlightBorder.InputBindings>
                </controls:HighlightBorder>
            </StackPanel>

            <!--  Main content area - Tag items grid  -->
            <Grid
                Grid.Row="2"
                Grid.Column="1"
                Margin="15,10,20,0">
                <ItemsControl d:ItemsSource="{d:SampleData ItemCount=10}" ItemsSource="{Binding CurrentTagImages}">
                    <ItemsControl.Template>
                        <ControlTemplate TargetType="ItemsControl">
                            <ScrollViewer Padding="{TemplateBinding Padding}">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </ControlTemplate>
                    </ItemsControl.Template>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel ItemHeight="180" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:HighlightBorder Margin="5,0" EnableMaskOnHover="True">
                                <Image
                                    d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Store/HeroTag/6/1.png"
                                    Source="{Binding}"
                                    Stretch="Uniform" />
                            </controls:HighlightBorder>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <!--  Bottom button  -->
            <Grid
                Grid.Row="2"
                Margin="0,10"
                VerticalAlignment="Bottom">
                <Button
                    Width="250"
                    Height="30"
                    HorizontalAlignment="Left"
                    Content="前往获取英雄印点数"
                    Style="{StaticResource CommandButtonStyle2}" />
            </Grid>
        </Grid>
    </Grid>
</views:UserControlBase>