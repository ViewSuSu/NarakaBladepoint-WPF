<views:UserControlBase
    x:Class="NarakaBladepoint.Modules.CommonFunction.UI.Store.Views.StoreHeroTagPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Store.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Store.ViewModels"
    xmlns:views="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    d:DataContext="{d:DesignInstance Type=viewmodels:StoreHeroTagPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <views:UserControlBase.Resources>
        <!--  Hero Tag Info Panel Style  -->
        <Style x:Key="HeroTagInfoPanelStyle" TargetType="StackPanel">
            <Setter Property="Background" Value="{StaticResource HeroTagBackground2Brush}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedTagIndex}" Value="1">
                    <Setter Property="Background" Value="{StaticResource HeroTagBackground1Brush}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding SelectedTagIndex}" Value="2">
                    <Setter Property="Background" Value="{StaticResource HeroTagBackground1Brush}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding SelectedTagIndex}" Value="3">
                    <Setter Property="Background" Value="{StaticResource HeroTagBackground1Brush}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </views:UserControlBase.Resources>
    <Grid d:Background="{StaticResource Background2}">
        <Grid Margin="50,0,50,120">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  Top header - Diamond info  -->
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <controls:ToggleButtonComboBox
                    Width="200"
                    Height="30"
                    Margin="0,0,15,0"
                    ItemsSource="{Binding QualityList}"
                    SelectedIndex="{Binding SelectedQualityIndex}" />
            </StackPanel>

            <!--  Main content grid  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--  Left sidebar - Tag list  -->
                <Grid Name="leftSidebar" Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Scrollable tag list  -->
                    <ScrollViewer Margin="0,0,0,10" VerticalScrollBarVisibility="Auto">
                        <StackPanel Name="stackpanel" Orientation="Vertical">
                            <controls:HighlightBorder
                                Height="45"
                                Background="{StaticResource DefaultTransientBlackBackground2}"
                                BorderThickness="2"
                                EnableMaskOnHover="True">
                                <controls:HighlightBorder.Style>
                                    <Style TargetType="controls:HighlightBorder">
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedTagIndex}" Value="1">
                                                <Setter Property="BorderBrush" Value="White" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </controls:HighlightBorder.Style>
                                <TextBlock
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="壹·青空阁" />
                                <controls:HighlightBorder.InputBindings>
                                    <MouseBinding
                                        Command="{Binding SelectTagCommand}"
                                        CommandParameter="1"
                                        MouseAction="LeftClick" />
                                </controls:HighlightBorder.InputBindings>
                            </controls:HighlightBorder>
                            <controls:HighlightBorder
                                Height="45"
                                Margin="0,8,0,0"
                                Background="{StaticResource DefaultTransientBlackBackground2}"
                                BorderThickness="2"
                                EnableMaskOnHover="True">
                                <controls:HighlightBorder.Style>
                                    <Style TargetType="controls:HighlightBorder">
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedTagIndex}" Value="2">
                                                <Setter Property="BorderBrush" Value="White" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </controls:HighlightBorder.Style>
                                <TextBlock
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="贰·蓝蔚阁" />
                                <controls:HighlightBorder.InputBindings>
                                    <MouseBinding
                                        Command="{Binding SelectTagCommand}"
                                        CommandParameter="2"
                                        MouseAction="LeftClick" />
                                </controls:HighlightBorder.InputBindings>
                            </controls:HighlightBorder>
                            <controls:HighlightBorder
                                Height="45"
                                Margin="0,8,0,0"
                                Background="{StaticResource DefaultTransientBlackBackground2}"
                                BorderThickness="2"
                                EnableMaskOnHover="True">
                                <controls:HighlightBorder.Style>
                                    <Style TargetType="controls:HighlightBorder">
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedTagIndex}" Value="3">
                                                <Setter Property="BorderBrush" Value="White" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </controls:HighlightBorder.Style>
                                <TextBlock
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="叁·碧天阁" />
                                <controls:HighlightBorder.InputBindings>
                                    <MouseBinding
                                        Command="{Binding SelectTagCommand}"
                                        CommandParameter="3"
                                        MouseAction="LeftClick" />
                                </controls:HighlightBorder.InputBindings>
                            </controls:HighlightBorder>
                            <controls:HighlightBorder
                                Height="45"
                                Margin="0,8,0,0"
                                Background="{StaticResource DefaultTransientBlackBackground2}"
                                BorderThickness="2"
                                EnableMaskOnHover="True">
                                <controls:HighlightBorder.Style>
                                    <Style TargetType="controls:HighlightBorder">
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedTagIndex}" Value="4">
                                                <Setter Property="BorderBrush" Value="White" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </controls:HighlightBorder.Style>
                                <TextBlock
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="肆·赤霞阁" />
                                <controls:HighlightBorder.InputBindings>
                                    <MouseBinding
                                        Command="{Binding SelectTagCommand}"
                                        CommandParameter="4"
                                        MouseAction="LeftClick" />
                                </controls:HighlightBorder.InputBindings>
                            </controls:HighlightBorder>
                            <controls:HighlightBorder
                                Height="45"
                                Margin="0,8,0,0"
                                Background="{StaticResource DefaultTransientBlackBackground2}"
                                BorderThickness="2"
                                EnableMaskOnHover="True">
                                <controls:HighlightBorder.Style>
                                    <Style TargetType="controls:HighlightBorder">
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedTagIndex}" Value="5">
                                                <Setter Property="BorderBrush" Value="White" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </controls:HighlightBorder.Style>
                                <TextBlock
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="伍·橙云阁" />
                                <controls:HighlightBorder.InputBindings>
                                    <MouseBinding
                                        Command="{Binding SelectTagCommand}"
                                        CommandParameter="5"
                                        MouseAction="LeftClick" />
                                </controls:HighlightBorder.InputBindings>
                            </controls:HighlightBorder>
                            <controls:HighlightBorder
                                Height="45"
                                Margin="0,8,0,0"
                                Background="{StaticResource DefaultTransientBlackBackground2}"
                                BorderThickness="2"
                                EnableMaskOnHover="True">
                                <controls:HighlightBorder.Style>
                                    <Style TargetType="controls:HighlightBorder">
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedTagIndex}" Value="6">
                                                <Setter Property="BorderBrush" Value="White" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </controls:HighlightBorder.Style>
                                <TextBlock
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="陆·紫冥阁" />
                                <controls:HighlightBorder.InputBindings>
                                    <MouseBinding
                                        Command="{Binding SelectTagCommand}"
                                        CommandParameter="6"
                                        MouseAction="LeftClick" />
                                </controls:HighlightBorder.InputBindings>
                            </controls:HighlightBorder>
                        </StackPanel>
                    </ScrollViewer>

                    <!--  Bottom button - Fixed position  -->
                    <Button
                        Grid.Row="1"
                        Height="30"
                        Content="前往获取英雄印点数"
                        Style="{StaticResource CommandButtonStyle2}" />
                </Grid>

                <!--  Right side - Info panel + ItemsControl  -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <!--  Info panel - Aligned with ItemsControl  -->
                    <Grid Name="infoPanel" Background="{StaticResource HeroTagBackground1Brush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.3*" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Image
                                Name="tagImage"
                                Width="25"
                                Source="{StaticResource StoreHeroTagIcon1Image}" />
                            <StackPanel
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Text="英雄印点数" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    FontSize="23"
                                    Foreground="{StaticResource DefaultOrangeBrush}"
                                    Text="4075" />
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                d:Text="壹·青空阁"
                                FontSize="20"
                                Foreground="White"
                                Text="{Binding SelectedTagName}" />
                            <TextBlock
                                Name="tagUnlockInfoTextBlock"
                                Grid.Row="1"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                attach:TextBlockHighlightAttachedProperty.HighlightText="{Binding SelectedHeroTagLevel}"
                                d:Text="英雄印点数达到50解锁"
                                Foreground="White"
                                Text="{Binding SelectedHeroTagLevelText}" />
                        </Grid>
                    </Grid>

                    <!--  ItemsControl  -->
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding CurrentTagImages}">
                        <ItemsControl.Template>
                            <ControlTemplate TargetType="ItemsControl">
                                <ScrollViewer Padding="{TemplateBinding Padding}">
                                    <ItemsPresenter />
                                </ScrollViewer>
                            </ControlTemplate>
                        </ItemsControl.Template>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="5" Rows="3" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:HighlightBorder
                                    Margin="5"
                                    Background="Gray"
                                    EnableMaskOnHover="True">
                                    <Image
                                        d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Store/HeroTag/6/1.png"
                                        Source="{Binding}"
                                        Stretch="UniformToFill" />
                                </controls:HighlightBorder>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</views:UserControlBase>