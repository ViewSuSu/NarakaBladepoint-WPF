<views:UserControlBase
    x:Class="NarakaBladepoint.Modules.CommonFunction.UI.Store.Views.StoreHeroTagPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:converters="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Store.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Store.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Store.ViewModels"
    xmlns:views="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    d:DataContext="{d:DesignInstance Type=viewmodels:StoreHeroTagPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <views:UserControlBase.Resources>
        <converters:EqualityConverter x:Key="EqualityConverter" />

        <!--  Hero Tag Info Panel Style  -->
        <Style x:Key="HeroTagInfoPanelStyle" TargetType="StackPanel">
            <Setter Property="Background" Value="{StaticResource HeroTagBackground2Brush}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedTagIndex}" Value="1">
                    <Setter Property="Background" Value="{StaticResource HeroTagBackground1Brush}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding SelectedTagIndex}" Value="2">
                    <Setter Property="Background" Value="{StaticResource HeroTagBackground1Brush}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding SelectedTagIndex}" Value="3">
                    <Setter Property="Background" Value="{StaticResource HeroTagBackground1Brush}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </views:UserControlBase.Resources>
    <Grid d:Background="{StaticResource Background2}">
        <Grid Margin="50,0,50,120">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  Top header - Diamond info  -->
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <controls:ToggleButtonComboBox
                    Width="200"
                    Height="30"
                    Margin="0,0,15,0"
                    ItemsSource="{Binding QualityList}"
                    SelectedIndex="{Binding SelectedQualityIndex}" />
            </StackPanel>

            <!--  Main content grid  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--  Left sidebar - Tag list  -->
                <Grid Name="leftSidebar" Margin="10,5">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Scrollable tag list  -->
                    <ScrollViewer Margin="0,0,0,10" VerticalScrollBarVisibility="Auto">
                        <StackPanel Name="stackpanel" Orientation="Vertical">
                            <controls:HighlightBorder
                                Height="45"
                                Background="{StaticResource DefaultTransientBlackBackground2}"
                                BorderBrush="{Binding SelectedTagIndex, Converter={StaticResource EqualityConverter}, ConverterParameter=1}"
                                BorderThickness="2">
                                <TextBlock
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="壹·青空阁" />
                                <controls:HighlightBorder.InputBindings>
                                    <MouseBinding
                                        Command="{Binding SelectTagCommand}"
                                        CommandParameter="1"
                                        MouseAction="LeftClick" />
                                </controls:HighlightBorder.InputBindings>
                            </controls:HighlightBorder>
                            <controls:HighlightBorder
                                Height="45"
                                Margin="0,8,0,0"
                                Background="{StaticResource DefaultTransientBlackBackground2}"
                                BorderBrush="{Binding SelectedTagIndex, Converter={StaticResource EqualityConverter}, ConverterParameter=2}"
                                BorderThickness="2">
                                <TextBlock
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="贰·蓝蔚阁" />
                                <controls:HighlightBorder.InputBindings>
                                    <MouseBinding
                                        Command="{Binding SelectTagCommand}"
                                        CommandParameter="2"
                                        MouseAction="LeftClick" />
                                </controls:HighlightBorder.InputBindings>
                            </controls:HighlightBorder>
                            <controls:HighlightBorder
                                Height="45"
                                Margin="0,8,0,0"
                                Background="{StaticResource DefaultTransientBlackBackground2}"
                                BorderBrush="{Binding SelectedTagIndex, Converter={StaticResource EqualityConverter}, ConverterParameter=3}"
                                BorderThickness="2">
                                <TextBlock
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="叁·碧天阁" />
                                <controls:HighlightBorder.InputBindings>
                                    <MouseBinding
                                        Command="{Binding SelectTagCommand}"
                                        CommandParameter="3"
                                        MouseAction="LeftClick" />
                                </controls:HighlightBorder.InputBindings>
                            </controls:HighlightBorder>
                            <controls:HighlightBorder
                                Height="45"
                                Margin="0,8,0,0"
                                Background="{StaticResource DefaultTransientBlackBackground2}"
                                BorderBrush="{Binding SelectedTagIndex, Converter={StaticResource EqualityConverter}, ConverterParameter=4}"
                                BorderThickness="2">
                                <TextBlock
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="肆·赤霞阁" />
                                <controls:HighlightBorder.InputBindings>
                                    <MouseBinding
                                        Command="{Binding SelectTagCommand}"
                                        CommandParameter="4"
                                        MouseAction="LeftClick" />
                                </controls:HighlightBorder.InputBindings>
                            </controls:HighlightBorder>
                            <controls:HighlightBorder
                                Height="45"
                                Margin="0,8,0,0"
                                Background="{StaticResource DefaultTransientBlackBackground2}"
                                BorderBrush="{Binding SelectedTagIndex, Converter={StaticResource EqualityConverter}, ConverterParameter=5}"
                                BorderThickness="2">
                                <TextBlock
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="伍·橙云阁" />
                                <controls:HighlightBorder.InputBindings>
                                    <MouseBinding
                                        Command="{Binding SelectTagCommand}"
                                        CommandParameter="5"
                                        MouseAction="LeftClick" />
                                </controls:HighlightBorder.InputBindings>
                            </controls:HighlightBorder>
                            <controls:HighlightBorder
                                Height="45"
                                Margin="0,8,0,0"
                                Background="{StaticResource DefaultTransientBlackBackground2}"
                                BorderBrush="{Binding SelectedTagIndex, Converter={StaticResource EqualityConverter}, ConverterParameter=6}"
                                BorderThickness="2">
                                <TextBlock
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="陆·紫冥阁" />
                                <controls:HighlightBorder.InputBindings>
                                    <MouseBinding
                                        Command="{Binding SelectTagCommand}"
                                        CommandParameter="6"
                                        MouseAction="LeftClick" />
                                </controls:HighlightBorder.InputBindings>
                            </controls:HighlightBorder>
                        </StackPanel>
                    </ScrollViewer>

                    <!--  Bottom button - Fixed position  -->
                    <Button
                        Grid.Row="1"
                        Height="30"
                        Content="前往获取英雄印点数"
                        Style="{StaticResource CommandButtonStyle2}" />
                </Grid>

                <!--  Right side - Info panel + ItemsControl  -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <!--  Info panel - Aligned with ItemsControl  -->
                    <StackPanel
                        Name="infoPanel"
                        d:Background="{StaticResource HeroTagBackground1Brush}"
                        Orientation="Vertical"
                        Style="{StaticResource HeroTagInfoPanelStyle}">
                        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                            <TextBlock Foreground="Gray" Text="英雄印点数" />
                            <TextBlock
                                Margin="10,5,0,5"
                                FontSize="28"
                                Foreground="Gold"
                                Text="4075" />
                        </StackPanel>
                        <TextBlock
                            Margin="10,0,0,10"
                            FontSize="12"
                            Foreground="White"
                            Text="{Binding SelectedTagName}" />
                    </StackPanel>

                    <!--  ItemsControl  -->
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding CurrentTagImages}">
                        <ItemsControl.Template>
                            <ControlTemplate TargetType="ItemsControl">
                                <ScrollViewer Padding="{TemplateBinding Padding}">
                                    <ItemsPresenter />
                                </ScrollViewer>
                            </ControlTemplate>
                        </ItemsControl.Template>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="5" Rows="3" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:HighlightBorder
                                    Margin="5"
                                    Background="Gray"
                                    EnableMaskOnHover="True">
                                    <Image
                                        d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Store/HeroTag/6/1.png"
                                        Source="{Binding}"
                                        Stretch="UniformToFill" />
                                </controls:HighlightBorder>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</views:UserControlBase>