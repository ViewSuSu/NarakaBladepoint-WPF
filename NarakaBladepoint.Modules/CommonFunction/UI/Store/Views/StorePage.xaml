<base:UserControlBase
    x:Class="NarakaBladepoint.Modules.CommonFunction.UI.Store.Views.StorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:storeDailyPage="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Store.Views"
    xmlns:storeOverviewPage="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Store.Views"
    xmlns:topUpContentPage="clr-namespace:NarakaBladepoint.Modules.TopUp.UI.Content.Views"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.CommonFunction.UI.Store.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:StorePageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/NarakaBladepoint.Resources;component/Image/background2.png" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid>
            <TabControl
                Margin="0,-3,0,0"
                Background="Transparent"
                BorderThickness="0">
                <TabItem
                    Width="305"
                    Height="25"
                    Header=""
                    Style="{StaticResource CommonFunctionTabItem}"
                    Visibility="Hidden" />
                <TabItem
                    Width="35"
                    Height="25"
                    Background="{StaticResource DefaultTransientBlackBackground5}"
                    Header="推荐"
                    IsSelected="True"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    Width="35"
                    Height="25"
                    Background="{StaticResource DefaultTransientBlackBackground5}"
                    Header="新品"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    Width="70"
                    Height="25"
                    Background="{StaticResource DefaultTransientBlackBackground5}"
                    Header="限时售卖"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    Width="50"
                    Height="25"
                    Background="{StaticResource DefaultTransientBlackBackground5}"
                    Header="捆绑包"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    Width="70"
                    Height="25"
                    Background="{StaticResource DefaultTransientBlackBackground5}"
                    Header="神品发型"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    Width="50"
                    Height="25"
                    Background="{StaticResource DefaultTransientBlackBackground5}"
                    Header="英雄印"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    Width="35"
                    Height="25"
                    Background="{StaticResource DefaultTransientBlackBackground5}"
                    Header="日常"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <storeDailyPage:StoreDailyPage Margin="50,30,50,120" />
                </TabItem>
                <TabItem
                    Width="35"
                    Height="25"
                    Background="{StaticResource DefaultTransientBlackBackground5}"
                    Header="总览"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <storeOverviewPage:StoreOverviewPage Margin="50,30,50,120" />
                </TabItem>
                <TabItem
                    Width="35"
                    Height="25"
                    Background="{StaticResource DefaultTransientBlackBackground5}"
                    Header="充值"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <topUpContentPage:TopUpContentPage Margin="50,0" />
                </TabItem>
            </TabControl>
        </Grid>
        <controls:EscBackControl
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding ReturnCommand}" />
    </Grid>
</base:UserControlBase>
