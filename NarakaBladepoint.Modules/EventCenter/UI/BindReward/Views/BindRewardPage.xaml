                                <Image Source="{StaticResource BindRewardRewardImage3_3}" />
                            </controls:HighlightBorder>
                        </StackPanel>
                        <StackPanel Height="30" Orientation="Horizontal">
                            <Button
                                Width="120"
                                Margin="0,0,10,0"
                                Content="解除绑定"
