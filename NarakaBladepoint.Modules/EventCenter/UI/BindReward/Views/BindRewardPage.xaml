                            <Button
                                Width="140"
                                Margin="0,0,10,0"
                                Content="开启登录验证"
                                Foreground="White"
                                Style="{StaticResource CommandButtonStyle2}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </controls:ImageTextTabItem>
            <controls:ImageTextTabItem
                Width="160"
                Height="40"
                VerticalContentAlignment="Center"
                Background="#1A000000"
                IsMouseOverHilightBoder="True"
                IsSelectedHilgihtBoder="True"
                SelectedBackground="#1A000000"
