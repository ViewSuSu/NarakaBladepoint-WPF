                    </DataTrigger>
                    <DataTrigger Binding="{Binding ElementName=tabControl, Path=SelectedIndex}" Value="6">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="{StaticResource BindRewardBackground7Image}" Stretch="UniformToFill" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding ElementName=tabControl, Path=SelectedIndex}" Value="7">
                        <Setter Property="Background">
                            <Setter.Value>
