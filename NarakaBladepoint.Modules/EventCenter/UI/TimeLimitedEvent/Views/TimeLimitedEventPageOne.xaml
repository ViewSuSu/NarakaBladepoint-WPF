<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.EventCenter.UI.TimeLimitedEvent.Views.TimeLimitedEventPageOne"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.EventCenter.UI.TimeLimitedEvent.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.EventCenter.UI.TimeLimitedEvent.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:TimeLimitedEventPageOneViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource TimeLimitedEventBackgroundImage}" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid Margin="50,50,240,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!--  左侧列表  -->
            <StackPanel
                Grid.Column="0"
                Margin="10,5,30,5"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <controls:HighlightBorder
                    Height="45"
                    Background="{StaticResource DefaultTransientBlackBackground2}"
                    EnableMaskOnHover="True">
                    <TextBlock
                        Margin="30,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Foreground="White"
                        Text="飞羽离弦" />
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding SelectEventCommand}" CommandParameter="飞羽离弦" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </controls:HighlightBorder>
                <controls:HighlightBorder
                    Height="45"
                    Margin="0,5,0,0"
                    Background="{StaticResource DefaultTransientBlackBackground2}"
                    EnableMaskOnHover="True">
                    <TextBlock
                        Margin="30,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Foreground="White"
                        Text="临安漫游" />
                </controls:HighlightBorder>
                <controls:HighlightBorder
                    Height="45"
                    Margin="0,5,0,0"
                    Background="{StaticResource DefaultTransientBlackBackground2}"
                    EnableMaskOnHover="True">
                    <TextBlock
                        Margin="30,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Foreground="White"
                        Text="轻松劲" />
                </controls:HighlightBorder>
                <controls:HighlightBorder
                    Height="45"
                    Margin="0,5,0,0"
                    Background="{StaticResource DefaultTransientBlackBackground2}"
                    EnableMaskOnHover="True">
                    <TextBlock
                        Margin="30,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Foreground="White"
                        Text="斩妖伏魔" />
                </controls:HighlightBorder>
                <controls:HighlightBorder
                    Height="45"
                    Margin="0,5,0,0"
                    Background="{StaticResource DefaultTransientBlackBackground2}"
                    EnableMaskOnHover="True">
                    <TextBlock
                        Margin="30,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Foreground="White"
                        Text="新春宝灯限时附赠诵星" />
                </controls:HighlightBorder>
                <controls:HighlightBorder
                    Height="45"
                    Margin="0,5,0,0"
                    Background="{StaticResource DefaultTransientBlackBackground2}"
                    EnableMaskOnHover="True">
                    <TextBlock
                        Margin="30,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Foreground="White"
                        Text="劫影册 穿云集卡" />
                </controls:HighlightBorder>
                <controls:HighlightBorder
                    Height="45"
                    Margin="0,5,0,0"
                    Background="{StaticResource DefaultTransientBlackBackground2}"
                    EnableMaskOnHover="True">
                    <Grid>
                        <TextBlock
                            Margin="30,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="15"
                            Foreground="White"
                            Text="共赏冬雪" />
                        <Image
                            Width="20"
                            Height="20"
                            Margin="0,0,30,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center" />
                    </Grid>
                </controls:HighlightBorder>
                <controls:HighlightBorder
                    Height="45"
                    Margin="0,5,0,0"
                    Background="{StaticResource DefaultTransientBlackBackground2}"
                    EnableMaskOnHover="True">
                    <Grid>
                        <TextBlock
                            Margin="30,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="15"
                            Foreground="White"
                            Text="鸣弦穿云" />
                        <Image
                            Width="20"
                            Height="20"
                            Margin="0,0,30,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center" />
                    </Grid>
                </controls:HighlightBorder>
                <controls:HighlightBorder
                    Height="45"
                    Margin="0,5,0,0"
                    Background="{StaticResource DefaultTransientBlackBackground2}"
                    EnableMaskOnHover="True">
                    <Grid>
                        <TextBlock
                            Margin="30,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="15"
                            Foreground="White"
                            Text="镜域试刀" />
                        <Image
                            Width="20"
                            Height="20"
                            Margin="0,0,30,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center" />
                    </Grid>
                </controls:HighlightBorder>
            </StackPanel>
            <!--  右侧内容  -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <!--  上方：活动详情  -->
                <Grid Grid.Row="0" Margin="30,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!--  活动标题  -->
                    <TextBlock
                        FontSize="24"
                        Foreground="White"
                        Text="飞羽离弦" />
                    <!--  活动时间  -->
                    <TextBlock
                        Grid.Row="1"
                        Margin="0,10,0,0"
                        FontSize="12"
                        Text="活动时间：2026-02-05 04:00 - 2026-02-19 04:00" />
                    <!--  活动描述  -->
                    <TextBlock
                        Grid.Row="2"
                        Margin="0,5,0,0"
                        FontSize="12"
                        Text="张弓鸣弦风云聚，一箭开天神榜傲。"
                        TextWrapping="Wrap" />
                    <!--  活动信息区域  -->
                    <Grid Grid.Row="3" Margin="0,10">
                        <StackPanel Orientation="Vertical">
                            <!--  每日任务  -->
                            <Grid Height="25" Background="{StaticResource DefaultTransientBlackBackground5}">
                                <Grid Margin="10,0" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="White"
                                        Text="每日任务" />
                                    <TextBlock
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        FontSize="11"
                                        Foreground="#FFA500"
                                        Text="任务重置：4小时30分钟" />
                                </Grid>
                            </Grid>
                            <!--  参加2次任意玩法  -->
                            <Grid
                                Height="40"
                                Margin="0,10,0,0"
                                Background="{StaticResource DefaultTransientBlackBackground2}">
                                <Grid Margin="10,0">
                                    <UniformGrid Rows="2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="40" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="11"
                                                Foreground="#CCCCCC"
                                                Text="参加2次任意玩法" />
                                            <TextBlock
                                                Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                FontSize="11"
                                                Foreground="#CCCCCC">
                                                <Run Name="firstProgressbarMinValue" Text="1" />
                                                <Run Text="/" />
                                                <Run Name="firstProgressbarMaxValue" Text="2" />
                                            </TextBlock>
                                            <controls:HighlightBorder Grid.Column="2" Margin="10,0,0,0">
                                                <Image Name="tip1" Source="{StaticResource TimeLimitedEventTipImage}" />
                                            </controls:HighlightBorder>
                                        </Grid>
                                        <ProgressBar
                                            Height="8"
                                            Background="Gray"
                                            BorderThickness="0"
                                            Foreground="{StaticResource DefaultOrangeBrush}"
                                            Maximum="{Binding ElementName=firstProgressbarMaxValue, Path=Text}"
                                            Value="{Binding ElementName=firstProgressbarMinValue, Path=Text}" />
                                    </UniformGrid>
                                </Grid>
                            </Grid>
                            <Grid
                                Height="40"
                                Margin="0,10,0,0"
                                Background="{StaticResource DefaultTransientBlackBackground2}">
                                <Grid Margin="10,0">
                                    <UniformGrid Rows="2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="40" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="11"
                                                Foreground="#CCCCCC"
                                                Text="参加2次任意玩法" />
                                            <TextBlock
                                                Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                FontSize="11"
                                                Foreground="#CCCCCC">
                                                <Run Name="secondProgressbarMinValue" Text="0" />
                                                <Run Text="/" />
                                                <Run Name="secondProgressbarMaxValue" Text="1" />
                                            </TextBlock>
                                            <controls:HighlightBorder Grid.Column="2" Margin="10,0,0,0">
                                                <Image Name="tip2" Source="{StaticResource TimeLimitedEventTipImage}" />
                                            </controls:HighlightBorder>
                                        </Grid>
                                        <ProgressBar
                                            Height="8"
                                            Background="Gray"
                                            BorderThickness="0"
                                            Foreground="{StaticResource DefaultOrangeBrush}"
                                            Maximum="{Binding ElementName=secondProgressbarMaxValue, Path=Text}"
                                            Value="{Binding ElementName=secondProgressbarMinValue, Path=Text}" />
                                    </UniformGrid>
                                </Grid>
                            </Grid>

                            <Grid Margin="0,15,0,0" Background="{StaticResource DefaultTransientBlackBackground5}">
                                <Grid Margin="10,0">
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="White"
                                        Text="活动任务" />
                                    <StackPanel
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <ItemsControl
                                            Name="itemscontrol2"
                                            d:ItemsSource="{d:SampleData ItemCount=5}"
                                            ItemsSource="{Binding TaskItems}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="5,0,0,0">
                                                        <TextBlock
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Panel.ZIndex="1"
                                                            d:Text="1"
                                                            Foreground="Black"
                                                            Text="{Binding Index}"
                                                            Visibility="{Binding IsLocked, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                                        <Image
                                                            Width="20"
                                                            Height="20"
                                                            VerticalAlignment="Center"
                                                            Source="{StaticResource TimeLimitedEventIcon1Image}"
                                                            Visibility="{Binding IsLocked, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                                        <Image
                                                            Width="20"
                                                            Height="20"
                                                            VerticalAlignment="Center"
                                                            Source="{StaticResource TimeLimitedEventIcon2Image}"
                                                            Visibility="{Binding IsLocked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                    </StackPanel>
                                </Grid>
                            </Grid>

                            <Grid
                                Height="40"
                                Margin="0,10,0,0"
                                VerticalAlignment="Center"
                                Background="{StaticResource DefaultTransientBlackBackground2}">
                                <Grid Margin="10,0">
                                    <UniformGrid Rows="2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="40" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="11"
                                                Foreground="#CCCCCC"
                                                Text="使用巫真参加3次任意玩法" />
                                            <TextBlock
                                                Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                FontSize="11"
                                                Foreground="#CCCCCC">
                                                <Run Name="thirdProgressbarMinValue" Text="1" />
                                                <Run Text="/" />
                                                <Run Name="thirdProgressbarMaxValue" Text="3" />
                                            </TextBlock>
                                            <controls:HighlightBorder Grid.Column="2" Margin="10,0,0,0">
                                                <Image Name="tip3" Source="{StaticResource TimeLimitedEventTipImage}" />
                                            </controls:HighlightBorder>
                                        </Grid>
                                        <ProgressBar
                                            Height="8"
                                            Background="Gray"
                                            BorderThickness="0"
                                            Foreground="{StaticResource DefaultOrangeBrush}"
                                            Maximum="{Binding ElementName=thirdProgressbarMaxValue, Path=Text}"
                                            Value="{Binding ElementName=thirdProgressbarMinValue, Path=Text}" />
                                    </UniformGrid>
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Grid>
                <!--  下方：奖励列表（参考 BaiZeCardPage scrollViewer）  -->
                <Grid
                    Grid.Row="1"
                    Margin="30,0,0,0"
                    Background="{StaticResource DefaultTransientBlackBackground4}">
                    <Border
                        Margin="5"
                        BorderBrush="Gray"
                        BorderThickness="0.3">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="White"
                                    Text="剩余可用：0" />
                                <Image
                                    Name="image1"
                                    Width="20"
                                    Margin="10,0,0,0"
                                    Source="{StaticResource TimeLimitedEventIcon3Image}" />
                            </StackPanel>
                            <TextBlock
                                Margin="0,0,10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Foreground="White"
                                Text="剩余领奖时间：15天3时48分" />

                            <ScrollViewer
                                Name="scrollViewer"
                                Grid.Row="1"
                                attach:ScrollViewerHorizontalScrollAttachedProperty.EnableMouseWheelScroll="True"
                                HorizontalScrollBarVisibility="Hidden"
                                VerticalScrollBarVisibility="Disabled">
                                <ScrollViewer.Content>
                                    <ItemsControl d:ItemsSource="{d:SampleData ItemCount=5}" ItemsSource="{Binding RewardItems}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="5,0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                        <RowDefinition Height="30" />
                                                    </Grid.RowDefinitions>
                                                    <controls:HighlightBorder>
                                                        <Image
                                                            Name="image3"
                                                            d:Source="{StaticResource Avatar1Image}"
                                                            Source="{Binding ImageSource}"
                                                            Stretch="Uniform" />
                                                    </controls:HighlightBorder>
                                                    <TextBlock
                                                        Margin="0,0,5,5"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Bottom"
                                                        Panel.ZIndex="1">
                                                        <Run Text="2" />
                                                        <Run Text="/" />
                                                        <Run Text="2" />
                                                    </TextBlock>
                                                    <Button
                                                        Grid.Row="1"
                                                        Margin="0,5,0,0"
                                                        Command="{Binding RewardCommand}"
                                                        Style="{StaticResource CommandButtonStyle3}">
                                                        <Button.Content>
                                                            <StackPanel
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                Orientation="Horizontal">
                                                                <TextBlock
                                                                    VerticalAlignment="Center"
                                                                    Foreground="OrangeRed"
                                                                    Text="20" />
                                                                <Image
                                                                    Name="image2"
                                                                    Width="20"
                                                                    Margin="5,0,0,0"
                                                                    Source="{StaticResource TimeLimitedEventIcon3Image}" />
                                                            </StackPanel>
                                                        </Button.Content>
                                                    </Button>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer.Content>
                            </ScrollViewer>

                        </Grid>
                    </Border>

                </Grid>
                <CheckBox
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Content="登录时兑换提醒"
                    Foreground="White"
                    IsChecked="True"
                    Style="{StaticResource DiamondCheckBoxStyle}" />
            </Grid>
        </Grid>
    </Grid>

</bases:UserControlBase>
