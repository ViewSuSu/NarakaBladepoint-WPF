<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.EventCenter.UI.TimeLimitedEvent.Views.TimeLimitedEventPageOne"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:converters="clr-namespace:NarakaBladepoint.Modules.EventCenter.UI.TimeLimitedEvent.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.EventCenter.UI.TimeLimitedEvent.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.EventCenter.UI.TimeLimitedEvent.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:TimeLimitedEventPageOneViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <bases:UserControlBase.Resources>
        <converters:DoubleToThicknessTopConverter x:Key="DoubleToThicknessTopConverter" />
    </bases:UserControlBase.Resources>
    <Grid>
        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <!--  先锋武备 (Index 1) → Background1.png  -->
                    <DataTrigger Binding="{Binding ElementName=tabControl, Path=SelectedIndex}" Value="1">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="{StaticResource TimeLimitedEventBackgroundImage1}" Stretch="UniformToFill" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                    <!--  飞羽离弦 (Index 2) → Background.png  -->
                    <DataTrigger Binding="{Binding ElementName=tabControl, Path=SelectedIndex}" Value="2">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="{StaticResource TimeLimitedEventBackgroundImage}" Stretch="UniformToFill" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                    <!--  临安漫游 (Index 3) → Background2.png  -->
                    <DataTrigger Binding="{Binding ElementName=tabControl, Path=SelectedIndex}" Value="3">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="{StaticResource TimeLimitedEventBackgroundImage2}" Stretch="UniformToFill" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                    <!--  轻松劲 (Index 4) → Background3.png  -->
                    <DataTrigger Binding="{Binding ElementName=tabControl, Path=SelectedIndex}" Value="4">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="{StaticResource TimeLimitedEventBackgroundImage3}" Stretch="UniformToFill" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                    <!--  斩妖伏魔 (Index 5) → Background4.png  -->
                    <DataTrigger Binding="{Binding ElementName=tabControl, Path=SelectedIndex}" Value="5">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="{StaticResource TimeLimitedEventBackgroundImage4}" Stretch="UniformToFill" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                    <!--  其他 TabItem (Index 6+) 使用循环背景  -->
                    <DataTrigger Binding="{Binding ElementName=tabControl, Path=SelectedIndex}" Value="6">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="{StaticResource TimeLimitedEventBackgroundImage1}" Stretch="UniformToFill" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding ElementName=tabControl, Path=SelectedIndex}" Value="7">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="{StaticResource TimeLimitedEventBackgroundImage}" Stretch="UniformToFill" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding ElementName=tabControl, Path=SelectedIndex}" Value="8">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="{StaticResource TimeLimitedEventBackgroundImage2}" Stretch="UniformToFill" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding ElementName=tabControl, Path=SelectedIndex}" Value="9">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="{StaticResource TimeLimitedEventBackgroundImage3}" Stretch="UniformToFill" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <TabControl
            x:Name="tabControl"
            Grid.Column="0"
            Margin="30,0,0,0"
            attach:TabItemMarginAttachedProperty.ItemMargin="0,5,0,5"
            Background="Transparent"
            BorderThickness="0"
            TabStripPlacement="Left">
            <controls:ImageTextTabItem
                Name="firstHeight"
                Width="120"
                Height="80"
                Text=""
                Visibility="Hidden" />
            <controls:ImageTextTabItem
                Width="120"
                Background="#1A000000"
                IsMouseOverHilightBoder="True"
                IsSelected="True"
                IsSelectedHilgihtBoder="True"
                SelectedBackground="#1A000000"
                Text="先锋武备">
                <Grid Margin="0,0,100,0">
                    <Grid Margin="{Binding ElementName=firstHeight, Path=Height, Converter={StaticResource DoubleToThicknessTopConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="5*" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="30,0,0,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                FontSize="24"
                                Foreground="White"
                                Text="先锋武备" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,10,0,0"
                                FontSize="12"
                                Text="活动时间： 2026-02-15 12:00-2026-04-29 07:00" />
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,5,0,0"
                                FontSize="12"
                                Text="换上全新装备，致敬守望先锋"
                                TextWrapping="Wrap" />

                        </Grid>

                        <TabControl Grid.Row="1">
                            <controls:ImageTextTabItem
                                Width="150"
                                HorizontalContentAlignment="Center"
                                Background="{StaticResource DefaultTransientBlackBackground5}"
                                ContentMargin="0,0,30,0"
                                Text="购买">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible">
                                    <ItemsControl
                                        Name="itemscontrol1"
                                        HorizontalAlignment="Left"
                                        d:ItemsSource="{d:SampleData ItemCount=20}"
                                        ItemsSource="{Binding TimeLimitedEventImages2}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Columns="4" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <controls:HighlightBorder Margin="0,0,10,10" EnableMaskOnHover="True">
                                                    <Image
                                                        Width="160"
                                                        Height="200"
                                                        attach:HoverHighlightAttachedProperty.EnableHoverHighlight="True"
                                                        d:Source="{StaticResource Avatar1Image}"
                                                        Source="{Binding}"
                                                        Stretch="UniformToFill" />
                                                </controls:HighlightBorder>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </controls:ImageTextTabItem>
                            <controls:ImageTextTabItem
                                Width="150"
                                HorizontalContentAlignment="Center"
                                Background="{StaticResource DefaultTransientBlackBackground5}"
                                ContentMargin="0,0,30,0"
                                Text="兑换" />
                        </TabControl>
                    </Grid>
                </Grid>

            </controls:ImageTextTabItem>
            <controls:ImageTextTabItem
                x:Name="feiYuLiXianTabItem"
                Width="120"
                Background="#1A000000"
                IsMouseOverHilightBoder="True"
                IsSelectedHilgihtBoder="True"
                SelectedBackground="#1A000000"
                Text="飞羽离弦">
                <!--  右侧内容  -->
                <Grid Margin="0,0,400,0">
                    <Grid Margin="{Binding ElementName=firstHeight, Path=Height, Converter={StaticResource DoubleToThicknessTopConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="30,0,0,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                FontSize="24"
                                Foreground="White"
                                Text="飞羽离弦" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,10,0,0"
                                FontSize="12"
                                Text="活动时间：2026-02-05 04:00 - 2026-02-19 04:00" />
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,5,0,0"
                                FontSize="12"
                                Text="张弓鸣弦风云聚，一箭开天神榜傲。"
                                TextWrapping="Wrap" />
                            <Grid Grid.Row="3" Margin="0,10">
                                <StackPanel Orientation="Vertical">
                                    <Grid Height="25" Background="{StaticResource DefaultTransientBlackBackground5}">
                                        <Grid Margin="10,0" VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="White"
                                                Text="每日任务" />
                                            <TextBlock
                                                Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                FontSize="11"
                                                Foreground="#FFA500"
                                                Text="任务重置：4小时30分钟" />
                                        </Grid>
                                    </Grid>
                                    <Grid
                                        Height="40"
                                        Margin="0,10,0,0"
                                        Background="{StaticResource DefaultTransientBlackBackground2}">
                                        <Grid Margin="10,0">
                                            <UniformGrid Rows="2">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="40" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        FontSize="11"
                                                        Foreground="#CCCCCC"
                                                        Text="参加2次任意玩法" />
                                                    <TextBlock
                                                        Grid.Column="1"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        FontSize="11"
                                                        Foreground="#CCCCCC">
                                                        <Run Name="firstProgressbarMinValue" Text="1" />
                                                        <Run Text="/" />
                                                        <Run Name="firstProgressbarMaxValue" Text="2" />
                                                    </TextBlock>
                                                    <controls:HighlightBorder Grid.Column="2" Margin="10,0,0,0">
                                                        <Image Name="tip1" Source="{StaticResource TimeLimitedEventTipImage}" />
                                                    </controls:HighlightBorder>
                                                </Grid>
                                                <ProgressBar
                                                    Height="8"
                                                    Background="Gray"
                                                    BorderThickness="0"
                                                    Foreground="{StaticResource DefaultOrangeBrush}"
                                                    Maximum="{Binding ElementName=firstProgressbarMaxValue, Path=Text}"
                                                    Value="{Binding ElementName=firstProgressbarMinValue, Path=Text}" />
                                            </UniformGrid>
                                        </Grid>
                                    </Grid>
                                    <Grid
                                        Height="40"
                                        Margin="0,10,0,0"
                                        Background="{StaticResource DefaultTransientBlackBackground2}">
                                        <Grid Margin="10,0">
                                            <UniformGrid Rows="2">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="40" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        FontSize="11"
                                                        Foreground="#CCCCCC"
                                                        Text="参加2次任意玩法" />
                                                    <TextBlock
                                                        Grid.Column="1"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        FontSize="11"
                                                        Foreground="#CCCCCC">
                                                        <Run Name="secondProgressbarMinValue" Text="0" />
                                                        <Run Text="/" />
                                                        <Run Name="secondProgressbarMaxValue" Text="1" />
                                                    </TextBlock>
                                                    <controls:HighlightBorder Grid.Column="2" Margin="10,0,0,0">
                                                        <Image Name="tip2" Source="{StaticResource TimeLimitedEventTipImage}" />
                                                    </controls:HighlightBorder>
                                                </Grid>
                                                <ProgressBar
                                                    Height="8"
                                                    Background="Gray"
                                                    BorderThickness="0"
                                                    Foreground="{StaticResource DefaultOrangeBrush}"
                                                    Maximum="{Binding ElementName=secondProgressbarMaxValue, Path=Text}"
                                                    Value="{Binding ElementName=secondProgressbarMinValue, Path=Text}" />
                                            </UniformGrid>
                                        </Grid>
                                    </Grid>
                                    <Grid Margin="0,15,0,0" Background="{StaticResource DefaultTransientBlackBackground5}">
                                        <Grid Margin="10,0">
                                            <TextBlock
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="White"
                                                Text="活动任务" />
                                            <StackPanel
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                                <ItemsControl
                                                    Name="itemscontrol2"
                                                    d:ItemsSource="{d:SampleData ItemCount=5}"
                                                    ItemsSource="{Binding TaskItems}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="5,0,0,0">
                                                                <TextBlock
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Panel.ZIndex="1"
                                                                    d:Text="1"
                                                                    Foreground="Black"
                                                                    Text="{Binding Index}"
                                                                    Visibility="{Binding IsLocked, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                                                <Image
                                                                    Width="20"
                                                                    Height="20"
                                                                    VerticalAlignment="Center"
                                                                    Source="{StaticResource TimeLimitedEventIcon1Image}"
                                                                    Visibility="{Binding IsLocked, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                                                <Image
                                                                    Width="20"
                                                                    Height="20"
                                                                    VerticalAlignment="Center"
                                                                    Source="{StaticResource TimeLimitedEventIcon2Image}"
                                                                    Visibility="{Binding IsLocked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                    <Grid
                                        Height="40"
                                        Margin="0,10,0,0"
                                        VerticalAlignment="Center"
                                        Background="{StaticResource DefaultTransientBlackBackground2}">
                                        <Grid Margin="10,0">
                                            <UniformGrid Rows="2">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="40" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        FontSize="11"
                                                        Foreground="#CCCCCC"
                                                        Text="使用巫真参加3次任意玩法" />
                                                    <TextBlock
                                                        Grid.Column="1"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        FontSize="11"
                                                        Foreground="#CCCCCC">
                                                        <Run Name="thirdProgressbarMinValue" Text="1" />
                                                        <Run Text="/" />
                                                        <Run Name="thirdProgressbarMaxValue" Text="3" />
                                                    </TextBlock>
                                                    <controls:HighlightBorder Grid.Column="2" Margin="10,0,0,0">
                                                        <Image Name="tip3" Source="{StaticResource TimeLimitedEventTipImage}" />
                                                    </controls:HighlightBorder>
                                                </Grid>
                                                <ProgressBar
                                                    Height="8"
                                                    Background="Gray"
                                                    BorderThickness="0"
                                                    Foreground="{StaticResource DefaultOrangeBrush}"
                                                    Maximum="{Binding ElementName=thirdProgressbarMaxValue, Path=Text}"
                                                    Value="{Binding ElementName=thirdProgressbarMinValue, Path=Text}" />
                                            </UniformGrid>
                                        </Grid>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Grid>
                        <Grid
                            Grid.Row="1"
                            Margin="30,0,0,0"
                            Background="{StaticResource DefaultTransientBlackBackground4}">
                            <Border
                                Margin="5"
                                BorderBrush="Gray"
                                BorderThickness="0.3">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40" />
                                        <RowDefinition />
                                        <RowDefinition Height="30" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Foreground="White"
                                            Text="剩余可用：0" />
                                        <Image
                                            Name="image1"
                                            Width="20"
                                            Margin="10,0,0,0"
                                            Source="{StaticResource TimeLimitedEventIcon3Image}" />
                                    </StackPanel>
                                    <TextBlock
                                        Margin="0,0,10,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="White"
                                        Text="剩余领奖时间：15天3时48分" />
                                    <ScrollViewer
                                        Name="scrollViewer"
                                        Grid.Row="1"
                                        attach:ScrollViewerHorizontalScrollAttachedProperty.EnableMouseWheelScroll="True"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Disabled">
                                        <ScrollViewer.Content>
                                            <ItemsControl d:ItemsSource="{d:SampleData ItemCount=5}" ItemsSource="{Binding RewardItems}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="5,0">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition />
                                                                <RowDefinition Height="30" />
                                                            </Grid.RowDefinitions>
                                                            <controls:HighlightBorder>
                                                                <Image
                                                                    Name="image3"
                                                                    d:Source="{StaticResource Avatar1Image}"
                                                                    Source="{Binding ImageSource}"
                                                                    Stretch="Uniform" />
                                                            </controls:HighlightBorder>
                                                            <TextBlock
                                                                Margin="0,0,5,5"
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Bottom"
                                                                Panel.ZIndex="1">
                                                                <Run Text="2" />
                                                                <Run Text="/" />
                                                                <Run Text="2" />
                                                            </TextBlock>
                                                            <Button
                                                                Grid.Row="1"
                                                                Margin="0,5,0,0"
                                                                Command="{Binding RewardCommand}"
                                                                Style="{StaticResource CommandButtonStyle3}">
                                                                <Button.Content>
                                                                    <StackPanel
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        Orientation="Horizontal">
                                                                        <TextBlock
                                                                            VerticalAlignment="Center"
                                                                            Foreground="OrangeRed"
                                                                            Text="20" />
                                                                        <Image
                                                                            Name="image2"
                                                                            Width="20"
                                                                            Margin="5,0,0,0"
                                                                            Source="{StaticResource TimeLimitedEventIcon3Image}" />
                                                                    </StackPanel>
                                                                </Button.Content>
                                                            </Button>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer.Content>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>
                        <CheckBox
                            Grid.Row="2"
                            HorizontalAlignment="Right"
                            Content="登录时兑换提醒"
                            Foreground="White"
                            IsChecked="True"
                            Style="{StaticResource DiamondCheckBoxStyle}" />
                    </Grid>
                </Grid>
            </controls:ImageTextTabItem>
            <controls:ImageTextTabItem
                Width="120"
                Background="#1A000000"
                IsMouseOverHilightBoder="True"
                IsSelectedHilgihtBoder="True"
                SelectedBackground="#1A000000"
                Text="临安漫游">
                <Grid Margin="0,0,100,0">
                    <Grid Margin="{Binding ElementName=firstHeight, Path=Height, Converter={StaticResource DoubleToThicknessTopConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="5*" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="30,0,0,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                FontSize="24"
                                Foreground="White"
                                Text="临安漫游" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,10,0,0"
                                FontSize="12"
                                Text="活动时间：2026-02-05 04:00-2026-02-19 04:00" />
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,5,0,0"
                                FontSize="12"
                                Text="山外青山楼外楼，西湖歌舞几时休？"
                                TextWrapping="Wrap" />

                        </Grid>
                    </Grid>
                </Grid>
            </controls:ImageTextTabItem>
            <controls:ImageTextTabItem
                Width="120"
                Background="#1A000000"
                IsMouseOverHilightBoder="True"
                IsSelectedHilgihtBoder="True"
                SelectedBackground="#1A000000"
                Text="轻松劲">
                <Grid Margin="0,0,100,0">
                    <Grid Margin="{Binding ElementName=firstHeight, Path=Height, Converter={StaticResource DoubleToThicknessTopConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="5*" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="30,0,0,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                FontSize="24"
                                Foreground="White"
                                Text="轻松劫" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,10,0,0"
                                FontSize="12"
                                Text="活动时间： 每周五4:00至每周一4:00" />
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,5,0,0"
                                FontSize="12"
                                Text="好运加成，轻松打劫"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Grid.Row="3"
                                Margin="0,5,0,0"
                                FontSize="12"
                                Text="每周末生效各种新奇有趣的异象，参与对局更能领取丰厚好礼运加成，轻松打劫"
                                TextWrapping="Wrap" />

                        </Grid>
                    </Grid>
                </Grid>
            </controls:ImageTextTabItem>
            <controls:ImageTextTabItem
                Width="120"
                Background="#1A000000"
                IsMouseOverHilightBoder="True"
                IsSelectedHilgihtBoder="True"
                SelectedBackground="#1A000000"
                Text="斩妖伏魔">
                <Grid Margin="0,0,100,0">
                    <Grid Margin="{Binding ElementName=firstHeight, Path=Height, Converter={StaticResource DoubleToThicknessTopConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="5*" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="30,0,0,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                FontSize="24"
                                Foreground="White"
                                Text="斩妖伏魔" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,10,0,0"
                                FontSize="12"
                                Text="活动时间：2026-02-05 04:00-2026-02-26 04:00" />
