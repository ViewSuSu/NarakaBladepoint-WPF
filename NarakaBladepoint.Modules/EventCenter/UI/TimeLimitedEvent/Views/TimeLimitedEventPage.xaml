<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.EventCenter.UI.TimeLimitedEvent.Views.TimeLimitedEventPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.EventCenter.UI.TimeLimitedEvent.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.EventCenter.UI.TimeLimitedEvent.ViewModels"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:TimeLimitedEventPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">

    <Grid Margin="50,30,50,120">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <!--  左侧列表  -->
        <StackPanel
            Grid.Column="0"
            Margin="10,5,30,5"
            VerticalAlignment="Top"
            Orientation="Vertical">
            <controls:HighlightBorder
                Height="45"
                Background="{StaticResource DefaultTransientBlackBackground2}"
                EnableMaskOnHover="True">
                <TextBlock
                    Margin="30,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Foreground="White"
                    Text="飞羽离弦" />
            </controls:HighlightBorder>
            <controls:HighlightBorder
                Height="45"
                Margin="0,5,0,0"
                Background="{StaticResource DefaultTransientBlackBackground2}"
                EnableMaskOnHover="True">
                <TextBlock
                    Margin="30,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Foreground="White"
                    Text="临安漫游" />
            </controls:HighlightBorder>
            <controls:HighlightBorder
                Height="45"
                Margin="0,5,0,0"
                Background="{StaticResource DefaultTransientBlackBackground2}"
                EnableMaskOnHover="True">
                <TextBlock
                    Margin="30,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Foreground="White"
                    Text="轻松劲" />
            </controls:HighlightBorder>
            <controls:HighlightBorder
                Height="45"
                Margin="0,5,0,0"
                Background="{StaticResource DefaultTransientBlackBackground2}"
                EnableMaskOnHover="True">
                <TextBlock
                    Margin="30,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Foreground="White"
                    Text="斩妖伏魔" />
            </controls:HighlightBorder>
            <controls:HighlightBorder
                Height="45"
                Margin="0,5,0,0"
                Background="{StaticResource DefaultTransientBlackBackground2}"
                EnableMaskOnHover="True">
                <TextBlock
                    Margin="30,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Foreground="White"
                    Text="新春宝灯限时附赠诵星" />
            </controls:HighlightBorder>
            <controls:HighlightBorder
                Height="45"
                Margin="0,5,0,0"
                Background="{StaticResource DefaultTransientBlackBackground2}"
                EnableMaskOnHover="True">
                <TextBlock
                    Margin="30,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Foreground="White"
                    Text="劫影册 穿云集卡" />
            </controls:HighlightBorder>
            <controls:HighlightBorder
                Height="45"
                Margin="0,5,0,0"
                Background="{StaticResource DefaultTransientBlackBackground2}"
                EnableMaskOnHover="True">
                <Grid>
                    <TextBlock
                        Margin="30,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Foreground="White"
                        Text="共赏冬雪" />
                    <Image
                        Width="20"
                        Height="20"
                        Margin="0,0,30,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center" />
                </Grid>
            </controls:HighlightBorder>
            <controls:HighlightBorder
                Height="45"
                Margin="0,5,0,0"
                Background="{StaticResource DefaultTransientBlackBackground2}"
                EnableMaskOnHover="True">
                <Grid>
                    <TextBlock
                        Margin="30,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Foreground="White"
                        Text="鸣弦穿云" />
                    <Image
                        Width="20"
                        Height="20"
                        Margin="0,0,30,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center" />
                </Grid>
            </controls:HighlightBorder>
            <controls:HighlightBorder
                Height="45"
                Margin="0,5,0,0"
                Background="{StaticResource DefaultTransientBlackBackground2}"
                EnableMaskOnHover="True">
                <Grid>
                    <TextBlock
                        Margin="30,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Foreground="White"
                        Text="镜域试刀" />
                    <Image
                        Width="20"
                        Height="20"
                        Margin="0,0,30,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center" />
                </Grid>
            </controls:HighlightBorder>
        </StackPanel>
        <!--  右侧内容  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!--  上方：活动详情  -->
            <Grid Grid.Row="0" Margin="30,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!--  活动标题  -->
                <TextBlock
                    FontSize="24"
                    Foreground="White"
                    Text="飞羽离弦" />
                <!--  活动时间  -->
                <TextBlock
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    FontSize="12"
                    Text="活动时间：2026-02-05 04:00 - 2026-02-19 04:00" />
                <!--  活动描述  -->
                <TextBlock
                    Grid.Row="2"
                    Margin="0,5,0,0"
                    FontSize="12"
                    Text="张弓鸣弦风云聚，一箭开天神榜傲。"
                    TextWrapping="Wrap" />
                <!--  活动信息区域  -->
                <Grid Grid.Row="3" Margin="0,10">
                    <StackPanel Orientation="Vertical">
                        <!--  每日任务  -->
                        <Grid Height="25" Background="{StaticResource DefaultTransientBlackBackground5}">
                            <Grid Margin="10,0" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="White"
                                    Text="每日任务" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    FontSize="11"
                                    Foreground="#FFA500"
                                    Text="任务重置：4小时30分钟" />
                            </Grid>
                        </Grid>
                        <!--  参加2次任意玩法  -->
                        <Grid
                            Height="40"
                            Margin="0,10,0,0"
                            Background="{StaticResource DefaultTransientBlackBackground2}">
                            <Grid Margin="10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="40" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#CCCCCC"
                                    Text="参加2次任意玩法" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#CCCCCC"
                                    Text="0/2" />
                                <Image Grid.Column="2" Margin="10,0,0,0" />
                            </Grid>
                        </Grid>
                        <Grid
                            Height="40"
                            Margin="0,10,0,0"
                            Background="{StaticResource DefaultTransientBlackBackground2}">
                            <Grid Margin="10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="40" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#CCCCCC"
                                    Text="参加2次任意玩法" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#CCCCCC"
                                    Text="0/1" />
                                <Image Grid.Column="2" Margin="10,0,0,0" />
                            </Grid>
                        </Grid>

                        <Grid Margin="0,15,0,0" Background="{StaticResource DefaultTransientBlackBackground5}">
                            <Grid Margin="10,0">
                                <!--  活动任务标题  -->
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="White"
                                    Text="活动任务" />
                                <!--  活动任务列表  -->
                                <StackPanel
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Rectangle
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,5,0"
                                        Fill="Transparent"
                                        Stroke="White"
                                        StrokeThickness="1" />
                                    <Rectangle
                                        Width="20"
                                        Height="20"
                                        Margin="5,0"
                                        Fill="Transparent"
                                        Stroke="White"
                                        StrokeThickness="1" />
                                    <Rectangle
                                        Width="20"
                                        Height="20"
                                        Margin="5,0"
                                        Fill="Transparent"
                                        Stroke="White"
                                        StrokeThickness="1" />
                                    <Rectangle
                                        Width="20"
                                        Height="20"
                                        Margin="5,0"
                                        Fill="Transparent"
                                        Stroke="White"
                                        StrokeThickness="1" />
                                    <Rectangle
                                        Width="20"
                                        Height="20"
                                        Margin="5,0"
                                        Fill="Transparent"
                                        Stroke="White"
                                        StrokeThickness="1" />
                                    <Rectangle
                                        Width="20"
                                        Height="20"
                                        Margin="5,0"
                                        Fill="Transparent"
                                        Stroke="White"
                                        StrokeThickness="1" />
                                    <Rectangle
                                        Width="20"
                                        Height="20"
                                        Margin="5,0"
                                        Fill="Transparent"
                                        Stroke="White"
                                        StrokeThickness="1" />
                                </StackPanel>
                            </Grid>
                        </Grid>

                        <Grid
                            Height="40"
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            Background="{StaticResource DefaultTransientBlackBackground2}">
                            <Grid Margin="10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="40" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#CCCCCC"
                                    Text="使用巫真参加3次任意玩法" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#CCCCCC"
                                    Text="0/2" />
                                <Image Grid.Column="2" Margin="10,0,0,0" />
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
            <!--  下方：奖励列表（参考 BaiZeCardPage scrollViewer）  -->
            <Grid
                Grid.Row="1"
                Margin="30,0,0,0"
                Background="{StaticResource DefaultTransientBlackBackground4}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Foreground="White"
                        Text="刻余可用：0" />
                    <Image Width="20" Margin="10,0,0,0" />
                </StackPanel>
                <TextBlock
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="White"
                    Text="剩余领奖时间：15天3时48分" />
                <Image Stretch="Fill" />
                <ScrollViewer
                    Name="scrollViewer"
                    Grid.Row="1"
                    attach:ScrollViewerHorizontalScrollAttachedProperty.EnableMouseWheelScroll="True"
                    HorizontalScrollBarVisibility="Hidden"
                    VerticalScrollBarVisibility="Disabled">
                    <ScrollViewer.Content>
                        <StackPanel Orientation="Horizontal">
                            <controls:HighlightBorder>
                                <Image Width="50" Stretch="Uniform" />
                            </controls:HighlightBorder>
                            <controls:HighlightBorder Margin="5,0">
                                <Image Width="50" Stretch="Uniform" />
                            </controls:HighlightBorder>
                            <controls:HighlightBorder Margin="5,0">
                                <Image Width="50" Stretch="Uniform" />
                            </controls:HighlightBorder>
                            <controls:HighlightBorder Margin="5,0">
                                <Image Width="50" Stretch="Uniform" />
                            </controls:HighlightBorder>
                            <controls:HighlightBorder Margin="5,0">
                                <Image Width="50" Stretch="Uniform" />
                            </controls:HighlightBorder>
                            <controls:HighlightBorder Margin="5,0">
                                <Image Width="50" Stretch="Uniform" />
                            </controls:HighlightBorder>
                            <controls:HighlightBorder Margin="5,0">
                                <Image Width="50" Stretch="Uniform" />
                            </controls:HighlightBorder>
                            <controls:HighlightBorder Margin="5,0">
                                <Image Width="50" Stretch="Uniform" />
                            </controls:HighlightBorder>
                        </StackPanel>
                    </ScrollViewer.Content>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</bases:UserControlBase>