<bases:UserControlBase
x:Class="NarakaBladepoint.Modules.EventCenter.UI.BaiZeCard.Views.BaiZeCardPage"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:local="clr-namespace:NarakaBladepoint.Modules.EventCenter.UI.BaiZeCard.Views"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.EventCenter.UI.BaiZeCard.ViewModels"
d:DataContext="{d:DesignInstance Type=viewmodels:BaiZeCardPageViewModel}"
d:DesignHeight="720"
d:DesignWidth="1080"
mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource BaizeBackgroundImage}" Stretch="Fill" />
        </Grid.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.4*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Image
                Width="300"
                Margin="0,0,0,80"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Source="{StaticResource BaizeTipImage}" />
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="0.8*" />
                    <RowDefinition Height="0.25*" />
                    <RowDefinition Height="0.8*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.8*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="40"
                    Foreground="White"
                    Text="白泽月卡" />
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Panel.ZIndex="1"
                            Foreground="White"
                            Text="购买后立即获得" />
                        <Image Source="{StaticResource BaizeTextblockBackgroundImage}" Stretch="Fill" />
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <controls:HighlightBorder>
                                <Image
                                    Width="50"
                                    Source="{StaticResource Baize1Image}"
                                    Stretch="Uniform" />
                            </controls:HighlightBorder>
                            <controls:HighlightBorder Margin="10,0,0,0">
                                <Image
                                    Width="50"
                                    Source="{StaticResource Baize2Image}"
                                    Stretch="Uniform" />
                            </controls:HighlightBorder>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="1" Margin="100,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Panel.ZIndex="1"
                            Foreground="White"
                            Text="每日奖励" />
                        <Image Source="{StaticResource BaizeTextblockBackgroundImage}" />
                        <controls:HighlightBorder
                            Grid.Row="1"
                            Margin="0,0,20,0"
                            HorizontalAlignment="Left">
                            <Image
                                Width="50"
                                Source="{StaticResource Baize3Image}"
                                Stretch="Uniform" />
                        </controls:HighlightBorder>
                    </Grid>
                </Grid>
                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Panel.ZIndex="1"
                        Foreground="White"
                        Text="购买后立即获得" />
                    <Image Source="{StaticResource BaizeTextblockBackgroundImage}" Stretch="Fill" />
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <controls:HighlightBorder>
                            <Image
                                Width="50"
                                Source="{StaticResource Baize4Image}"
                                Stretch="Uniform" />
                        </controls:HighlightBorder>
                        <controls:HighlightBorder Margin="5,0">
                            <Image
                                Width="50"
                                Source="{StaticResource Baize5Image}"
                                Stretch="Uniform" />
                        </controls:HighlightBorder>
                        <controls:HighlightBorder Margin="5,0">
                            <Image
                                Width="50"
                                Source="{StaticResource Baize6Image}"
                                Stretch="Uniform" />
                        </controls:HighlightBorder>
                        <controls:HighlightBorder Margin="5,0">
                            <Image
                                Width="50"
                                Source="{StaticResource Baize8Image}"
                                Stretch="Uniform" />
                        </controls:HighlightBorder>
                        <controls:HighlightBorder Margin="5,0">
                            <Image
                                Width="50"
                                Source="{StaticResource Baize9Image}"
                                Stretch="Uniform" />
                        </controls:HighlightBorder>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Panel.ZIndex="1"
                        Foreground="White"
                        Text="可在白泽馈赠中兑换大量奖励" />
                    <Image Source="{StaticResource BaizeTextblockBackgroundImage}" Stretch="Fill" />
                    <ScrollViewer
                        Grid.Row="1 "
                        attach:ScrollViewerHorizontalScrollAttachedProperty.EnableMouseWheelScroll="True"
                        HorizontalScrollBarVisibility="Hidden"
                        VerticalScrollBarVisibility="Disabled">
                        <ScrollViewer.Content>
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <controls:HighlightBorder>
                                    <Image
                                        Width="50"
                                        Source="{StaticResource Baize11Image}"
                                        Stretch="Uniform" />
                                </controls:HighlightBorder>
                                <controls:HighlightBorder Margin="5,0">
                                    <Image
                                        Width="50"
                                        Source="{StaticResource Baize12Image}"
                                        Stretch="Uniform" />
                                </controls:HighlightBorder>
                                <controls:HighlightBorder Margin="5,0">
                                    <Image
                                        Width="50"
                                        Source="{StaticResource Baize13Image}"
                                        Stretch="Uniform" />
                                </controls:HighlightBorder>
                                <controls:HighlightBorder Margin="5,0">
                                    <Image
                                        Width="50"
                                        Source="{StaticResource Baize14Image}"
                                        Stretch="Uniform" />
                                </controls:HighlightBorder>
                                <controls:HighlightBorder Margin="5,0">
                                    <Image
                                        Width="50"
                                        Source="{StaticResource Baize15Image}"
                                        Stretch="Uniform" />
                                </controls:HighlightBorder>
                                <controls:HighlightBorder Margin="5,0">
                                    <Image
                                        Width="50"
                                        Source="{StaticResource Baize16Image}"
                                        Stretch="Uniform" />
                                </controls:HighlightBorder>
                                <controls:HighlightBorder Margin="5,0">
                                    <Image
                                        Width="50"
                                        Source="{StaticResource Baize17Image}"
                                        Stretch="Uniform" />
                                </controls:HighlightBorder>
                                <controls:HighlightBorder Margin="5,0">
                                    <Image
                                        Width="50"
                                        Source="{StaticResource Baize18Image}"
                                        Stretch="Uniform" />
                                </controls:HighlightBorder>
                                <controls:HighlightBorder Margin="5,0">
                                    <Image
                                        Width="50"
                                        Source="{StaticResource Baize19Image}"
                                        Stretch="Uniform" />
                                </controls:HighlightBorder>
                                <controls:HighlightBorder Margin="5,0">
                                    <Image
                                        Width="50"
                                        Source="{StaticResource Baize20Image}"
                                        Stretch="Uniform" />
                                </controls:HighlightBorder>
                            </StackPanel>
                        </ScrollViewer.Content>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</bases:UserControlBase>