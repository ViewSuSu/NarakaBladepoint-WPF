<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.PersonalInformation.UI.PersonalInformationDetails.Views.HeroTagPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.PersonalInformationDetails.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.PersonalInformationDetails.ViewModels"
    attach:EscKeyAttachedProperty.Command="{Binding EscCommand}"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:HeroTagPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0.6*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" Background="#8A000000">
                <Grid Margin="20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*" />
                        <RowDefinition Height="0.1*" />
                        <RowDefinition />
                        <RowDefinition Height="0.1*" />
                        <RowDefinition Height="0.1*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="25"
                        Foreground="White"
                        Text="英雄印" />
                    <Grid Grid.Row="1">
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="装配英雄印：" />
                        <TextBlock
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Foreground="White">
                            <Run Text="0" />
                            <Run Text="/" />
                            <Run Text="10" />
                        </TextBlock>
                    </Grid>
                    <ItemsControl
                        Grid.Row="2"
                        Margin="0,0,0,30"
                        d:ItemsSource="{d:SampleData ItemCount=10}"
                        ItemsSource="{Binding InventoryItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemHeight="120" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    Width="110"
                                    Margin="5"
                                    Background="#1A000000">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="0.2*" />
                                    </Grid.RowDefinitions>
                                    <Image Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/PersonalInfoDetails/HeroTag/1.png" Stretch="Uniform" />
                                    <CheckBox
                                        Width="20"
                                        Height="20"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Foreground="White"
                                        Style="{StaticResource DiamondCheckBoxStyle}" />
                                    <TextBlock
                                        Grid.Row="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        Text="武痴·赤金" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <!--<ItemsControl
                        Grid.Row="2"
                        Margin="0,0,0,30"
                        d:ItemsSource="{d:SampleData ItemCount=5}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Height="60" ItemWidth="40" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border>
                                    <Grid>
                                        <Image Source="{Binding Icon}" Stretch="Uniform" />
                                        <TextBlock
                                            Margin="0,0,2,2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            FontSize="10"
                                            Foreground="White"
                                            Text="{Binding Count}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>-->
                    <Button
                        Grid.Row="3"
                        Command="{Binding SaveCommand}"
                        Content="保存"
                        FontSize="20"
                        Style="{StaticResource SettingBackToGameCommandButtonStyle}" />
                </Grid>
            </Grid>
        </Grid>
        <controls:EscBackControl
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding EscCommand}" />
    </Grid>
</bases:UserControlBase>