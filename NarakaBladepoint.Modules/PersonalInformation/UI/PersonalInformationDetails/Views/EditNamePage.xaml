<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.PersonalInformation.UI.PersonalInformationDetails.Views.EditNamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.PersonalInformationDetails.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.PersonalInformationDetails.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:EditNamePageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="1.1*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Rectangle
            Grid.Row="0"
            Grid.RowSpan="3"
            Fill="#80000000">
            <Rectangle.Effect>
                <BlurEffect Radius="15" />
            </Rectangle.Effect>
        </Rectangle>
        <Grid Grid.Row="1" Background="{StaticResource Background5Brush}" />
        <Grid Grid.Row="1" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="1"
                Width="500"
                Margin="0,30,0,0"
                HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="25"
                        Foreground="White"
                        Text="修改您的名字(每7天可修改一次)" />
                    <Grid Margin="0,10,0,0">
                        <TextBox
                            Name="NameInputTextBox"
                            Grid.Column="0"
                            Height="40"
                            VerticalAlignment="Center"
                            attach:TextBoxHelper.Placeholder="请输入你的名字"
                            attach:TextBoxHelper.PlaceholderForeground="Gray"
                            attach:TextBoxHelper.PlaceholderTextAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Foreground="White"
                            Text="{Binding NewName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextAlignment="Center" />
                        <Image
                            Grid.Column="1"
                            Width="30"
                            Height="30"
                            Margin="0,0,5,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            attach:HoverHighlightAttachedProperty.EnableHoverHighlight="True"
                            Source="{StaticResource PersonalInfoDetailsTouZiImage}" />
                    </Grid>
                </StackPanel>
            </Grid>
            <Grid
                Grid.Row="2"
                Width="500"
                Margin="0,40,0,0"
                HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Height="40"
                    Command="{Binding SubmitCommand}"
                    Foreground="White"
                    Style="{StaticResource CommandButtonStyle2}">
                    <TextBlock Text="确认" />
                </Button>
                <Button
                    Grid.Column="2"
                    Height="40"
                    Command="{Binding ReturnCommand}"
                    Foreground="White"
                    Style="{StaticResource CommandButtonStyle3}">
                    <TextBlock Text="取消" />
                </Button>
            </Grid>
        </Grid>
    </Grid>
</bases:UserControlBase>