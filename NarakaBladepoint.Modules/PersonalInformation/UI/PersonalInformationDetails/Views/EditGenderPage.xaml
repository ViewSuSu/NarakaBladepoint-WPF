<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.PersonalInformation.UI.PersonalInformationDetails.Views.EditGenderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.PersonalInformationDetails.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.PersonalInformationDetails.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:EditGenderPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Grid Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="1.1*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Rectangle
            Grid.Row="0"
            Grid.RowSpan="3"
            Fill="#80000000">
            <Rectangle.Effect>
                <BlurEffect Radius="15" />
            </Rectangle.Effect>
        </Rectangle>
        <Grid Grid.Row="1" Background="{StaticResource Background5Brush}" />
        <Grid Grid.Row="1" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="1"
                Width="500"
                Margin="0,30,0,0"
                HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="25"
                        Foreground="White"
                        Text="请选择性别(每次修改至少间隔7天)" />
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Border
                            Grid.Column="0"
                            Height="50"
                            HorizontalAlignment="Right"
                            BorderBrush="{Binding IsSelectedMale, Converter={StaticResource BoolToWhiteBrushConverter}}"
                            BorderThickness="1">
                            <Image
                                HorizontalAlignment="Center"
                                attach:HoverHighlightAttachedProperty.EnableHoverHighlight="True"
                                Source="{StaticResource EditGenderPage1Image}">
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="MouseLeftButtonDown">
                                        <b:InvokeCommandAction Command="{Binding SelectMaleCommand}" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                            </Image>
                        </Border>
                        <Border
                            Grid.Column="2"
                            Height="50"
                            HorizontalAlignment="Left"
                            BorderBrush="{Binding IsSelectedFemale, Converter={StaticResource BoolToWhiteBrushConverter}}"
                            BorderThickness="1">
                            <Image
                                HorizontalAlignment="Center"
                                attach:HoverHighlightAttachedProperty.EnableHoverHighlight="True"
                                Source="{StaticResource EditGenderPage2Image}">
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="MouseLeftButtonDown">
                                        <b:InvokeCommandAction Command="{Binding SelectFemaleCommand}" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                            </Image>
                        </Border>
                    </Grid>
                    <CheckBox
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Content="不显示我的性别"
                        Foreground="White"
                        IsChecked="{Binding IsHideGender, Mode=TwoWay}"
                        Style="{StaticResource DiamondCheckBoxStyle}" />
                </StackPanel>
            </Grid>
            <Grid
                Grid.Row="2"
                Width="500"
                Margin="0,40,0,0"
                HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Height="40"
                    Command="{Binding SubmitCommand}"
                    Foreground="White"
                    Style="{StaticResource CommandButtonStyle2}">
                    <TextBlock Text="确定" />
                </Button>
                <Button
                    Grid.Column="2"
                    Height="40"
                    Command="{Binding ReturnCommand}"
                    Foreground="White"
                    Style="{StaticResource CommandButtonStyle3}">
                    <TextBlock Text="取消" />
                </Button>
            </Grid>
        </Grid>
    </Grid>
</bases:UserControlBase>