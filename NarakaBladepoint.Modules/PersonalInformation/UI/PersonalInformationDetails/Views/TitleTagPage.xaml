                            <Run Text="/" />
                            <Run d:Text="10" Text="{Binding TotalCount, Mode=OneWay}" />
                        </TextBlock>
                    </Grid>
                    <ItemsControl
                        Grid.Row="2"
                        Margin="0,0,0,30"
