                                        <Run d:Text="88" Text="{Binding SelectedItem.GameTime}" />
                                        <Run d:Text="小时" />
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border Margin="5" Background="#1A000000">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Image
                                    Width="30"
                                    Source="{StaticResource PersonalInfoDetails3Image}"
                                    Stretch="Uniform" />
                                <StackPanel
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="总场次" />
                                    <TextBlock HorizontalAlignment="Center" Foreground="White">
                                        <Run d:Text="13" Text="{Binding SelectedItem.TotalMatches}" />
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border Margin="5,5,0,5" Background="#1A000000">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Image
                                    Width="30"
                                    Source="{StaticResource PersonalInfoDetails4Image}"
                                    Stretch="Uniform" />
                                <StackPanel
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="总击败" />
                                    <TextBlock HorizontalAlignment="Center" Foreground="White">
                                        <Run d:Text="36" Text="{Binding SelectedItem.TotalDefeats}" />
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                    <Image
                        Grid.Row="2"
                        VerticalAlignment="Top"
                        Source="{StaticResource PersonalInfoDetails18Image}"
                        Stretch="Uniform" />
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Image Source="{StaticResource HeroShowImage}" Stretch="UniformToFill" />
        </Grid>
    </Grid>
