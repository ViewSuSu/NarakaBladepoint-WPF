                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Background="#5A000000">
                                <Image
                                    Grid.Column="1"
                                    Width="20"
                                    Height="20"
                                    Source="{StaticResource PersonalInfoDetails12Image}"
                                    Stretch="UniformToFill" />
                            </Border>
                        </StackPanel>
                    </Grid>
                    <UniformGrid Grid.Row="1" Columns="3">
                        <Border Margin="0,5" Background="#1A000000">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Image
                                    Width="30"
                                    Source="{StaticResource PersonalInfoDetails2Image}"
                                    Stretch="Uniform" />
