<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.PersonalInformation.UI.PersonalInformationDetailMainContent.Views.PersonalInformationDetailMainContentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attached="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:avatarFramePage="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.AvatarFrame.Views"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    xmlns:careerAchievementsPage="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.CareerAchievements.Views"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:heroData="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.HeroData.Views"
    xmlns:historyMatchRecord="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.HistoryMatchRecord.Views"
    xmlns:illustratedCollectionPage="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.IllustratedCollection.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:personalInformationDetailsPage="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.PersonalInformationDetails.Views"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:seasonData="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.SeasonData.Views"
    xmlns:socialAvatarPage="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.SocialAvatar.Views"
    xmlns:tippingRecordPage="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.TippingRecord.Views"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.PersonalInformationDetailMainContent.ViewModels"
    xmlns:wealth="clr-namespace:NarakaBladepoint.Modules.Wealth.UI.Main.Views"
    d:DataContext="{d:DesignInstance Type=viewmodels:PersonalInformationDetailMainContentPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid Background="{StaticResource Background2}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.15*" />
                <RowDefinition />
                <RowDefinition Height="0.1*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="50,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="30"
                    Foreground="White"
                    Text="名片" />
                <wealth:WealthPage
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top" />
            </Grid>
            <TabControl
                Grid.Row="0"
                Grid.RowSpan="3"
                Background="Transparent"
                BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabPanel}">
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                </TabControl.Resources>
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="个人信息"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <personalInformationDetailsPage:PersonalInformationDetailsPage Margin="20" />
                </TabItem>
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="英雄数据"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <heroData:HeroDataPage Margin="20" />
                </TabItem>
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="赛季数据"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <seasonData:SeasonDataPage Margin="30" />
                </TabItem>
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="历史战绩"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <historyMatchRecord:HistoryMatchRecordPage />
                </TabItem>
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="打赏记录"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <tippingRecordPage:TippingRecordPage Margin="50" />
                </TabItem>
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="社交头像"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <socialAvatarPage:SocialAvatarPage Margin="50,30,50,50"/>
                </TabItem>
                <!--<TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="头像框"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <avatarFramePage:AvatarFramePage />
                </TabItem>-->
                <TabItem
                    Name="tabShengya"
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="生涯成就"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <TabControl
                        Margin="0,-3,0,0"
                        Background="Transparent"
                        BorderThickness="0">
                        <TabItem
                            Width="445"
                            Height="25"
                            Header=""
                            Style="{StaticResource CommonFunctionTabItem}"
                            Visibility="Hidden" />
                        <TabItem
                            Name="tabItem1"
                            Width="80"
                            Height="25"
                            Background="{StaticResource DefaultTransientBlackBackground5}"
                            Header="英雄印"
                            IsSelected="True"
                            Style="{StaticResource CommonFunctionTabItem}">
                            <careerAchievementsPage:CareerAchievementsHeroTagPage />
                        </TabItem>
                        <TabItem
                            Name="tabItem2"
                            Width="80"
                            Height="25"
                            Background="{StaticResource DefaultTransientBlackBackground5}"
                            Header="龙魂宝藏"
                            Style="{StaticResource CommonFunctionTabItem}">
                            <careerAchievementsPage:CareerAchievementsDragonSoulPage />
                        </TabItem>
                        <TabItem
                            Name="tabItem3"
                            Width="80"
                            Height="25"
                            Background="{StaticResource DefaultTransientBlackBackground5}"
                            Header="金乌宝藏"
                            Style="{StaticResource CommonFunctionTabItem}">
                            <careerAchievementsPage:CareerAchievementsGoldenCrowPage />
                        </TabItem>
                    </TabControl>
                </TabItem>
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="图鉴收集"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <TabControl
                        Margin="0,-3,0,0"
                        Background="Transparent"
                        BorderThickness="0">
                        <TabItem
                            Width="555"
                            Height="25"
                            Header=""
                            Style="{StaticResource CommonFunctionTabItem}"
                            Visibility="Hidden" />
                        <TabItem
                            Width="60"
                            Height="25"
                            d:IsSelected="True"
                            Background="{StaticResource DefaultTransientBlackBackground5}"
                            Header="总览"
                            IsSelected="True"
                            Style="{StaticResource CommonFunctionTabItem}">
                            <illustratedCollectionPage:IllustratedCollectioOverviewPage />
                        </TabItem>
                        <TabItem
                            Width="60"
                            Height="25"
                            Background="{StaticResource DefaultTransientBlackBackground5}"
                            Header="套装"
                            Style="{StaticResource CommonFunctionTabItem}">
                            <illustratedCollectionPage:IllustratedCollectioSuitPage />
                        </TabItem>
                    </TabControl>
                </TabItem>
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="信誉分"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    Width="150"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Visibility="Hidden" />
            </TabControl>
            <controls:EscBackControl
                Grid.Row="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding ReturnCommand}" />
        </Grid>
    </Grid>
</bases:UserControlBase>


