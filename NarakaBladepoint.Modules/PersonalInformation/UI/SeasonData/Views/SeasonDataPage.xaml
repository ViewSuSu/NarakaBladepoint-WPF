<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.PersonalInformation.UI.SeasonData.Views.SeasonDataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    xmlns:consts="clr-namespace:NarakaBladepoint.Framework.Core.Consts;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:converters="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.Domain.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.SeasonData.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.SeasonData.ViewModels"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:SeasonDataPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:TeamSizeToIndexConverter x:Key="TeamSizeToIndexConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="0,10"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <controls:AvatarControl
                d:BackgroundImage="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Avatar/1.png"
                BackgroundImage="{Binding CurrentUserInfoModel.Avatar, Mode=OneWay}"
                ImageStretch="Uniform" />
            <TextBlock
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                d:Text="国服张起灵"
                FontSize="20"
                Foreground="White"
                Text="{Binding CurrentUserInfoModel.Name}" />
        </StackPanel>
        <StackPanel
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TabControl
                Width="200"
                d:SelectedIndex="2"
                SelectedIndex="{Binding SelectedTeamSize, Mode=TwoWay, Converter={StaticResource TeamSizeToIndexConverter}}"
                Style="{StaticResource AverageTabControlStyle}">
                <TabItem
                    Background="#1A000000"
                    Header="{x:Static consts:TeamSizeConstant.Solo}"
                    Style="{StaticResource FriendListTabItem}" />
                <TabItem
                    Background="#1A000000"
                    Header="{x:Static consts:TeamSizeConstant.Duo}"
                    Style="{StaticResource FriendListTabItem}" />
                <TabItem
                    Background="#1A000000"
                    Header="{x:Static consts:TeamSizeConstant.Trio}"
                    Style="{StaticResource FriendListTabItem}" />
            </TabControl>
            <controls:ToggleButtonComboBox
                Grid.Row="0"
                Width="100"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                d:SelectedIndex="0"
                DisplayMemberPath="Key"
                ItemsSource="{Binding GameModeItems}"
                SelectedValue="{Binding SelectedGameMode, Mode=TwoWay}"
                SelectedValuePath="Value" />
            <controls:ToggleButtonComboBox
                Grid.Row="0"
                Width="100"
                Margin="5,0"
                HorizontalAlignment="Left"
                d:SelectedIndex="0"
                DisplayMemberPath="Season"
                ItemsSource="{Binding SeasonDataModels}"
                SelectedItem="{Binding SelectedSeasonDataModel}" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.45*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid
                Grid.Column="0"
                Margin="0,0,10,0"
                Background="#3A000000" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*" />
                    <RowDefinition />
                    <RowDefinition Height="0.3*" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Margin="10,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="30"
                    Foreground="White"
                    Text="当前赛季" />
                <Image
                    Grid.Row="1"
                    Margin="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/RankLogo/2.png"
                    Stretch="Uniform" />
                <TextBlock
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="30"
                    Foreground="White"
                    Text="{Binding SeasonStatistics.CurrentSeasonRank}" />
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <UniformGrid
                    Margin="0,0,0,10"
                    Background="#3A000000"
                    Columns="6">
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <controls:IconTextBlockCustomControl Text="游戏场次" TextFontSize="15" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding SeasonStatistics.TotalMatches}" />
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <controls:IconTextBlockCustomControl Text="天选次数" TextFontSize="15" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding SeasonStatistics.ChampionCount}" />
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <controls:IconTextBlockCustomControl Text="前五数" TextFontSize="15" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding SeasonStatistics.TopFiveCount}" />
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <controls:IconTextBlockCustomControl Text="击败" TextFontSize="15" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding SeasonStatistics.TotalDefeats}" />
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <controls:IconTextBlockCustomControl Text="淘汰" TextFontSize="15" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding SeasonStatistics.TotalEliminations}" />
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <controls:IconTextBlockCustomControl Text="击败/被击败" TextFontSize="15" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding SeasonStatistics.KillDeathRatio, StringFormat={}{0:#.##}}" />
                    </StackPanel>
                </UniformGrid>
                <UniformGrid Grid.Row="1" Columns="3">
                    <UniformGrid
                        Margin="0,0,5,0"
                        Background="#3A000000"
                        Rows="3">
                        <UniformGrid Columns="2">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="最长生存时间" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.LongestSurvivalTime, StringFormat={}{0:hh\:mm}}" />
                            </StackPanel>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="场均生存时间" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.AverageSurvivalTime, StringFormat={}{0:hh\:mm}}" />
                            </StackPanel>
                        </UniformGrid>
                        <UniformGrid Columns="2">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="最长移动距离" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.LongestDistance}" />
                            </StackPanel>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="场均移动距离" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.AverageDistance}" />
                            </StackPanel>
                        </UniformGrid>
                        <UniformGrid Columns="2">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="天选率" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.ChampionRate, StringFormat='{}{0:#.##}%'}" />
                            </StackPanel>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="前五率" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.TopFiveRate, StringFormat='{}{0:#.##}%'}" />
                            </StackPanel>
                        </UniformGrid>
                    </UniformGrid>
                    <UniformGrid
                        Margin="5,0"
                        Background="#3A000000"
                        Rows="3">
                        <UniformGrid Columns="2">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="单局最高击杀" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.MaxKillsPerGame}" />
                            </StackPanel>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="场均击杀" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.AverageKills, StringFormat={}{0:#.##}}" />
                            </StackPanel>
                        </UniformGrid>
                        <UniformGrid Columns="2">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="单局最高伤害" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.MaxDamagePerGame}" />
                            </StackPanel>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="场均伤害" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.AverageDamage, StringFormat={}{0:#.##}}" />
                            </StackPanel>
                        </UniformGrid>
                        <UniformGrid Columns="2">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="单局最高助攻" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.MaxAssistsPerGame}" />
                            </StackPanel>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="场均助攻" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.AverageAssists, StringFormat={}{0:#.##}}" />
                            </StackPanel>
                        </UniformGrid>
                    </UniformGrid>
                    <UniformGrid
                        Margin="5,0,0,0"
                        Background="#3A000000"
                        Rows="3">
                        <UniformGrid Columns="2">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="场均治疗量" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.AverageHealing, StringFormat={}{0:#.##}}" />
                            </StackPanel>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="总救援队有数" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.TotalRescues}" />
                            </StackPanel>
                        </UniformGrid>
                        <UniformGrid Columns="2">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="降龙次数" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.DragonSlayerCount}" />
                            </StackPanel>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="箭破天穹次数" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SeasonStatistics.SkyArrowCount}" />
                            </StackPanel>
                        </UniformGrid>
                    </UniformGrid>
                </UniformGrid>
            </Grid>
        </Grid>
    </Grid>
</bases:UserControlBase>
