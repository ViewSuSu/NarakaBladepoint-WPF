<views:UserControlBase
    x:Class="NarakaBladepoint.Modules.PersonalInformation.UI.CareerAchievements.Views.CareerAchievementsHeroTagPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.CareerAchievements.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.CareerAchievements.ViewModels"
    xmlns:views="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    d:DataContext="{d:DesignInstance Type=viewmodels:CareerAchievementsHeroTagPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid Margin="30,0,50,50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="0.25*" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="{StaticResource PersonalInfoDetailsAchievements4Image}" />
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="5*" />
                </Grid.RowDefinitions>
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="达成该阶段可获得" />
                <Image Grid.Row="1" Source="{StaticResource PersonalInfoDetailsAchievements3Image}" />
                <controls:HighlightBorder Grid.Row="2" HorizontalAlignment="Center">
                    <Image Source="{StaticResource PersonalInfoDetailsAchievements2Image}" />
                </controls:HighlightBorder>
            </Grid>
            <Button
                Grid.Row="2"
                Content="英雄印"
                Style="{StaticResource CommandButtonStyle2}" />
        </Grid>
        <TabControl
            Grid.Column="1"
            Margin="10,0,0,0"
            Background="Transparent"
            Style="{StaticResource AverageTabControlStyle}">
            <controls:IconTabItem Header="全部" Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/InventoryProps/logo1.png">
                <ScrollViewer>
                    <ItemsControl d:ItemsSource="{d:SampleData ItemCount=25}" ItemsSource="{Binding AllItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="135" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <controls:HighlightBorder Margin="0,5,5,0">
                                        <b:Interaction.Triggers>
                                            <b:EventTrigger EventName="MouseLeftButtonDown">
                                                <b:InvokeCommandAction Command="{Binding DataContext.SelectItemCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}" />
                                            </b:EventTrigger>
                                        </b:Interaction.Triggers>
                                        <Image
                                            attach:HoverHighlightAttachedProperty.EnableHoverHighlight="True"
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/PersonalInfoDetails/Achievements/Images/1.png"
                                            Source="{Binding}" />
                                    </controls:HighlightBorder>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </controls:IconTabItem>
            <controls:IconTabItem Header="个人" Icon="{StaticResource PersonalInfoDetailsAchievementIcon2Image}">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsControl d:ItemsSource="{d:SampleData ItemCount=25}" ItemsSource="{Binding PersonalItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="135" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <controls:HighlightBorder Margin="0,5,5,0">
                                        <b:Interaction.Triggers>
                                            <b:EventTrigger EventName="MouseLeftButtonDown">
                                                <b:InvokeCommandAction Command="{Binding DataContext.SelectItemCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}" />
                                            </b:EventTrigger>
                                        </b:Interaction.Triggers>
                                        <Image
                                            attach:HoverHighlightAttachedProperty.EnableHoverHighlight="True"
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/PersonalInfoDetails/Achievements/Images/1.png"
                                            Source="{Binding}" />
                                    </controls:HighlightBorder>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </controls:IconTabItem>
            <controls:IconTabItem Header="战斗" Icon="{StaticResource PersonalInfoDetailsAchievementIcon3Image}">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsControl d:ItemsSource="{d:SampleData ItemCount=25}" ItemsSource="{Binding CombatItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="135" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <controls:HighlightBorder Margin="0,5,5,0">
                                        <b:Interaction.Triggers>
                                            <b:EventTrigger EventName="MouseLeftButtonDown">
                                                <b:InvokeCommandAction Command="{Binding DataContext.SelectItemCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}" />
                                            </b:EventTrigger>
                                        </b:Interaction.Triggers>
                                        <Image
                                            attach:HoverHighlightAttachedProperty.EnableHoverHighlight="True"
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/PersonalInfoDetails/Achievements/Images/1.png"
                                            Source="{Binding}" />
                                    </controls:HighlightBorder>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </controls:IconTabItem>
            <controls:IconTabItem Header="探索" Icon="{StaticResource PersonalInfoDetailsAchievementIcon4Image}">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsControl d:ItemsSource="{d:SampleData ItemCount=25}" ItemsSource="{Binding ExplorationItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="135" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <controls:HighlightBorder Margin="0,5,5,0">
                                        <b:Interaction.Triggers>
                                            <b:EventTrigger EventName="MouseLeftButtonDown">
                                                <b:InvokeCommandAction Command="{Binding DataContext.SelectItemCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}" />
                                            </b:EventTrigger>
                                        </b:Interaction.Triggers>
                                        <Image
                                            attach:HoverHighlightAttachedProperty.EnableHoverHighlight="True"
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/PersonalInfoDetails/Achievements/Images/1.png"
                                            Source="{Binding}" />
                                    </controls:HighlightBorder>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </controls:IconTabItem>
            <controls:IconTabItem Header="征神之路" Icon="{StaticResource PersonalInfoDetailsAchievementIcon5Image}">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsControl d:ItemsSource="{d:SampleData ItemCount=25}" ItemsSource="{Binding DivineRoadItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="135" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <controls:HighlightBorder Margin="0,5,5,0">
                                        <b:Interaction.Triggers>
                                            <b:EventTrigger EventName="MouseLeftButtonDown">
                                                <b:InvokeCommandAction Command="{Binding DataContext.SelectItemCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}" />
                                            </b:EventTrigger>
                                        </b:Interaction.Triggers>
                                        <Image
                                            attach:HoverHighlightAttachedProperty.EnableHoverHighlight="True"
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/PersonalInfoDetails/Achievements/Images/1.png"
                                            Source="{Binding}" />
                                    </controls:HighlightBorder>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </controls:IconTabItem>
            <controls:IconTabItem Header="娱乐" Icon="{StaticResource PersonalInfoDetailsAchievementIcon6Image}">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsControl d:ItemsSource="{d:SampleData ItemCount=25}" ItemsSource="{Binding EntertainmentItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="135" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <controls:HighlightBorder Margin="0,5,5,0">
                                        <b:Interaction.Triggers>
                                            <b:EventTrigger EventName="MouseLeftButtonDown">
                                                <b:InvokeCommandAction Command="{Binding DataContext.SelectItemCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}" />
                                            </b:EventTrigger>
                                        </b:Interaction.Triggers>
                                        <Image
                                            attach:HoverHighlightAttachedProperty.EnableHoverHighlight="True"
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/PersonalInfoDetails/Achievements/Images/1.png"
                                            Source="{Binding}" />
                                    </controls:HighlightBorder>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </controls:IconTabItem>
            <controls:IconTabItem Header="限定" Icon="{StaticResource PersonalInfoDetailsAchievementIcon7Image}">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsControl d:ItemsSource="{d:SampleData ItemCount=25}" ItemsSource="{Binding LimitedItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="135" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <controls:HighlightBorder Margin="0,5,5,0">
                                        <b:Interaction.Triggers>
                                            <b:EventTrigger EventName="MouseLeftButtonDown">
                                                <b:InvokeCommandAction Command="{Binding DataContext.SelectItemCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}" />
                                            </b:EventTrigger>
                                        </b:Interaction.Triggers>
                                        <Image
                                            attach:HoverHighlightAttachedProperty.EnableHoverHighlight="True"
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/PersonalInfoDetails/Achievements/Images/1.png"
                                            Source="{Binding}" />
                                    </controls:HighlightBorder>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </controls:IconTabItem>
        </TabControl>
    </Grid>
</views:UserControlBase>