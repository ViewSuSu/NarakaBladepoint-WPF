                                            d:Text="1"
                                            FontSize="10"
                                            Foreground="White"
                                            Text="{Binding Count}" />
                                    </Grid>
                                </Border>
                            </controls:HighlightBorder>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </controls:IconTabItem>
