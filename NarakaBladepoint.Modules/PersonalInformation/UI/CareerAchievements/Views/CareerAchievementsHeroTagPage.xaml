<views:UserControlBase
    x:Class="NarakaBladepoint.Modules.PersonalInformation.UI.CareerAchievements.Views.CareerAchievementsHeroTagPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.CareerAchievements.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TabControl
            Grid.Column="1"
            Background="Transparent"
            Style="{StaticResource AverageTabControlStyle}">
            <controls:IconTabItem Header="全部" Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/InventoryProps/logo1.png">
                <ItemsControl d:ItemsSource="{d:SampleData ItemCount=25}" ItemsSource="{Binding AllItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="6" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:HighlightBorder Margin="2">
                                <Border BorderThickness="2">
                                    <b:Interaction.Triggers>
                                        <b:EventTrigger EventName="MouseLeftButtonDown">
                                            <b:InvokeCommandAction Command="{Binding DataContext.SelectItemCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}" />
                                        </b:EventTrigger>
                                    </b:Interaction.Triggers>
                                    <Grid>
                                        <Image
                                            attach:HoverHighlightAttachedProperty.EnableHoverHighlight="True"
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/InventoryProps/1.png"
                                            Source="{Binding Icon}"
                                            Stretch="Uniform" />
                                        <TextBlock
                                            Margin="0,0,2,2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            d:Text="1"
                                            FontSize="10"
                                            Foreground="White"
                                            Text="{Binding Count}" />
                                    </Grid>
                                </Border>
                            </controls:HighlightBorder>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </controls:IconTabItem>
            <controls:IconTabItem Header="礼包" Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/InventoryProps/logo2.png">
