    <UserControl.Resources>
        <converters:BoolToTransparentBrushConverter x:Key="BoolToTransparentBrushConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <TabControl Background="Transparent" BorderThickness="0">
            <controls:IconTabItem
                Width="70"
                Header="全部"
                Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Avatar/Icon/Icon1.png">
                <ItemsControl
                    Margin="0,30,0,0"
                    d:ItemsSource="{d:SampleData ItemCount=50}"
                    ItemsSource="{Binding AllAvatarModels, Mode=OneWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel ItemHeight="100" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:HighlightBorder Margin="5">
                                <Border BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToTransparentBrushConverter}}" BorderThickness="2">
                                    <b:Interaction.Triggers>
                                        <b:EventTrigger EventName="MouseLeftButtonDown">
                                            <b:InvokeCommandAction Command="{Binding DataContext.SelectAvatarCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}" />
                                        </b:EventTrigger>
                                    </b:Interaction.Triggers>
                                    <Grid>
                                        <Image
                                            attach:HoverHighlightAttachedProperty.EnableHoverHighlight="True"
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Avatar/1.png"
                                            Source="{Binding ImageSource, Mode=OneWay}"
                                            Stretch="Uniform" />
                                        <Image
                                            Width="20"
                                            Height="20"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Avatar/Icon/lock.png"
                                            Visibility="{Binding IsHave, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </Grid>
                                </Border>
                            </controls:HighlightBorder>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </controls:IconTabItem>
