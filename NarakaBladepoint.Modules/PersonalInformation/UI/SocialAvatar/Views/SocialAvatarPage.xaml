        <TextBlock
            Grid.Row="0"
            Margin="0,30,30,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Foreground="White"
            Text="152/429" />
        <Grid Grid.Column="1" Margin="20,50,20,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="0.3*" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <Image
                    Width="240"
                    Height="240"
                    Margin="0,50,0,0"
                    Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Avatar/1.png" />
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    FontSize="25"
                    Foreground="White"
                    Text="侠风·三排·无相龙王" />
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Style="{StaticResource GrayForegroundTextBlock}"
                    Text="侠风赛季中三排达到无相龙王段位的奖励" />
            </StackPanel>
            <Button
                Grid.Row="1"
                Height="30"
                VerticalAlignment="Center"
                Content="更换头像"
                Style="{StaticResource CommandButtonStyle2}" />
        </Grid>
    </Grid>
