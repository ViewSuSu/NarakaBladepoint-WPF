<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.PersonalInformation.UI.SocialAvatar.Views.SocialAvatarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.SocialAvatar.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.SocialAvatar.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:SocialAvatarPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <TabControl Background="Transparent" BorderThickness="0">
            <controls:IconTabItem
                Width="70"
                Header="全部"
                Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Avatar/Icon/Icon1.png">
                <ItemsControl
                    Margin="0,30,0,0"
                    d:ItemsSource="{d:SampleData ItemCount=50}"
                    ItemsSource="{Binding AvatarItemModels}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel ItemHeight="100" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Image
                                    d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Avatar/1.png"
                                    Source="{Binding Icon}"
                                    Stretch="Uniform" />
                                <Image
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Avatar/Icon/lock.png"
                                    Visibility="{Binding IsLocked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </controls:IconTabItem>
            <controls:IconTabItem
                Width="70"
                Header="英雄"
                Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Avatar/Icon/Icon2.png" />
            <controls:IconTabItem
                Width="70"
                Header="武器"
                Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Avatar/Icon/Icon3.png" />
            <controls:IconTabItem
                Width="70"
                Header="赛季奖励"
                Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Avatar/Icon/Icon4.png" />
            <controls:IconTabItem
                Width="70"
                Header="隐族秘宝"
                Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Avatar/Icon/Icon5.png" />
            <controls:IconTabItem
                Width="70"
                Header="限时活动"
                Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Avatar/Icon/Icon6.png" />
            <controls:IconTabItem
                Width="70"
                Header="其他"
                Icon="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Avatar/Icon/Icon7.png" />
            <controls:IconTabItem Width="70" Visibility="Hidden" />
        </TabControl>
        <TextBlock
            Grid.Row="0"
            Margin="0,30,30,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Foreground="White"
            Text="152/429" />
        <Grid Grid.Column="1" Margin="20,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="0.3*" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <Image
                    Width="300"
                    Height="300"
                    Margin="0,50,0,0" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="25"
                    Foreground="White"
                    Text="天通元君" />
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="****************************" />
            </StackPanel>
            <Button
                Grid.Row="1"
                Height="30"
                VerticalAlignment="Center"
                Content="更换头像"
                Style="{StaticResource SettingBackToGameCommandButtonStyle}" />
        </Grid>
    </Grid>
</bases:UserControlBase>