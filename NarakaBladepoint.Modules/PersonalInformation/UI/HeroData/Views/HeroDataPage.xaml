<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.PersonalInformation.UI.HeroData.Views.HeroDataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    xmlns:consts="clr-namespace:NarakaBladepoint.Framework.Core.Consts;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:converters="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.Domain.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.HeroData.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.HeroData.ViewModels"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:HeroDataPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:TeamSizeToIndexConverter x:Key="TeamSizeToIndexConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.15*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Image
                        Width="50"
                        d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Icon.png"
                        Source="{Binding CurrentUserInformationModel.Avatar}" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        d:Text="国服张起灵"
                        FontSize="18"
                        Foreground="White"
                        Text="{Binding CurrentUserInformationModel.Name}" />
                </StackPanel>
                <StackPanel
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TabControl
                        Width="200"
                        d:SelectedIndex="2"
                        SelectedIndex="{Binding SelectedTeamSize, Mode=TwoWay, Converter={StaticResource TeamSizeToIndexConverter}}"
                        Style="{StaticResource AverageTabControlStyle}">
                        <TabItem
                            Background="#1A000000"
                            Header="{x:Static consts:TeamSizeConstant.Solo}"
                            Style="{StaticResource CommonFunctionTabItem2}" />
                        <TabItem
                            Background="#1A000000"
                            Header="{x:Static consts:TeamSizeConstant.Duo}"
                            Style="{StaticResource CommonFunctionTabItem2}" />
                        <TabItem
                            Background="#1A000000"
                            Header="{x:Static consts:TeamSizeConstant.Trio}"
                            Style="{StaticResource CommonFunctionTabItem2}" />
                    </TabControl>
                    <controls:ToggleButtonComboBox
                        Grid.Row="0"
                        Width="80"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        d:SelectedIndex="0"
                        DisplayMemberPath="Key"
                        ItemsSource="{Binding GameModeItems}"
                        SelectedValue="{Binding SelectedGameMode, Mode=TwoWay}"
                        SelectedValuePath="Value" />
                    <controls:ToggleButtonComboBox
                        Grid.Row="0"
                        Width="80"
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        d:SelectedIndex="0"
                        DisplayMemberPath="Season"
                        ItemsSource="{Binding SeasonDataModels}"
                        SelectedItem="{Binding SelectedSeasonDataModel}" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.05*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="英雄对比" />
                    <controls:ToggleButtonComboBox
                        Grid.Row="0"
                        Width="100"
                        HorizontalAlignment="Right"
                        d:SelectedIndex="0"
                        DisplayMemberPath="Key"
                        ItemsSource="{Binding HeroCompareSortTypeItems}"
                        SelectedValue="{Binding SelectedHeroCompareSortType, Mode=TwoWay}"
                        SelectedValuePath="Value" />
                    <ListBox
                        Grid.Row="1"
                        HorizontalContentAlignment="Stretch"
                        d:ItemsSource="{d:SampleData ItemCount=10}"
                        d:SelectedIndex="0"
                        AlternationCount="1000"
                        Background="Transparent"
                        BorderThickness="0"
                        ItemsSource="{Binding HeroDataList}"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                        SelectedItem="{Binding SelectedHeroData, Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <controls:HighlightBorder Margin="0,1">
                                    <controls:HighlightBorder.Style>
                                        <Style TargetType="{x:Type controls:HighlightBorder}">
                                            <Setter Property="Background" Value="#1A000000" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem}}, Path=(ItemsControl.AlternationIndex)}" Value="0">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <ImageBrush ImageSource="{StaticResource Background4Image}" Stretch="UniformToFill" />
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </controls:HighlightBorder.Style>
                                    <Grid Height="35">
                                        <Image
                                            Width="30"
                                            Height="30"
                                            HorizontalAlignment="Left"
                                            Source="{Binding Avatar}"
                                            Stretch="UniformToFill" />
                                        <StackPanel
                                            Margin="35,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center">
                                            <TextBlock Foreground="White" Text="{Binding HeroName}" />
                                        </StackPanel>
                                        <TextBlock
                                            Margin="5"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            Text="{Binding GameTime, StringFormat={}{0}小时}" />
                                    </Grid>
                                </controls:HighlightBorder>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
                <Grid Grid.Column="1" Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.15*" />
                        <RowDefinition Height="0.25*" />
                        <RowDefinition Height="0.35*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="{Binding SelectedHeroData.HeroName}" />
                    <Grid Grid.Row="1">
                        <Grid.Background>
                            <ImageBrush ImageSource="{StaticResource HeroData2Image}" Stretch="Fill" />
                        </Grid.Background>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.35*" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid Margin="0,20,0,0" HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.35*" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Image
                                Height="20"
                                VerticalAlignment="Top"
                                Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/HeroData/3.png" />
                            <StackPanel Grid.Column="1" Orientation="Vertical">
                                <TextBlock Foreground="White" Text="英雄积分" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    Foreground="White"
                                    Text="{Binding SelectedHeroData.HeroScore}" />
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="1.5*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Width="40"
                                HorizontalAlignment="Center"
                                Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/PersonalInfoDetails/16.png" />
                            <StackPanel
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock
                                    FontSize="12"
                                    Foreground="White"
                                    Text="{Binding SelectedHeroData.RankDescription}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                            <StackPanel
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="历史最高" />
                                <Image
                                    Width="30"
                                    HorizontalAlignment="Center"
                                    Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/PersonalInfoDetails/14.png" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding SelectedHeroData.HistoricalHighestRank}" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="最近12场" />
                        <UniformGrid Grid.Row="1" Columns="3">
                            <Grid Background="#1A000000">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="前五率" />
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        Foreground="White"
                                        Text="{Binding SelectedHeroData.Recent12Games.TopFiveRate, StringFormat={}{0}%}" />
                                </StackPanel>
                            </Grid>
                            <Grid Margin="5,0" Background="#1A000000">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="场均伤害" />
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        Foreground="White"
                                        Text="{Binding SelectedHeroData.Recent12Games.AverageDamage}" />
                                </StackPanel>
                            </Grid>
                            <Grid Background="#1A000000">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="击败/被击败" />
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        Foreground="White"
                                        Text="{Binding SelectedHeroData.Recent12Games.KillDeathRatio}" />
                                </StackPanel>
                            </Grid>
                        </UniformGrid>
                    </Grid>
                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="所有场次" />
                        <Grid Grid.Row="1">
                            <UniformGrid Rows="4">
                                <Grid>
                                    <Grid.Background>
                                        <ImageBrush ImageSource="{StaticResource PersonalInfoDetails20Image}" Stretch="UniformToFill" />
                                    </Grid.Background>
                                    <Grid Margin="0,20,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.75*" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.15*" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Image VerticalAlignment="Top" Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/HeroData/1.png" />
                                            <StackPanel
                                                Grid.Column="1"
                                                Margin="5,0,0,0"
                                                Orientation="Vertical">
                                                <TextBlock
                                                    Grid.Column="1"
                                                    Foreground="White"
                                                    Text="{Binding SelectedHeroData.SpecialSkill.SkillName}" />
                                                <TextBlock
                                                    Margin="0,5,0,0"
                                                    Foreground="White"
                                                    Text="{Binding SelectedHeroData.SpecialSkill.SkillEffectData}" />
                                            </StackPanel>
                                        </Grid>
                                        <StackPanel
                                            Grid.Column="1"
                                            Margin="5,0,0,0"
                                            Orientation="Vertical">
                                            <TextBlock
                                                Grid.Column="1"
                                                Foreground="White"
                                                Text="场均数据" />
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                Foreground="White"
                                                Text="{Binding SelectedHeroData.SpecialSkill.AverageData}" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <UniformGrid
                                    Margin="0,5,0,0"
                                    Background="#1A000000"
                                    Columns="4">
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="前五率" />
                                        <TextBlock Foreground="White" Text="{Binding SelectedHeroData.AllGames.TopFiveRate, StringFormat={}{0}%}" />
                                    </StackPanel>
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="天选率" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="{Binding SelectedHeroData.AllGames.ChampionRate, StringFormat={}{0}%}" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="获胜数" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="{Binding SelectedHeroData.AllGames.WinCount}" />
                                    </StackPanel>
                                </UniformGrid>

                                <UniformGrid
                                    Margin="0,5"
                                    Background="#1A000000"
                                    Columns="4">
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="场均伤害" />
                                        <TextBlock Foreground="White" Text="{Binding SelectedHeroData.AllGames.AverageDamage}" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="单局最高伤害" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="{Binding SelectedHeroData.AllGames.MaxDamagePerGame}" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="场均治疗" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="{Binding SelectedHeroData.AllGames.AverageHeal}" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="总淘汰" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="{Binding SelectedHeroData.AllGames.TotalEliminations}" />
                                    </StackPanel>
                                </UniformGrid>

                                <UniformGrid Background="#1A000000" Columns="4">
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="击败 / 被击败" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="{Binding SelectedHeroData.AllGames.KillDeathRatio}" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="单局最高击败" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="{Binding SelectedHeroData.AllGames.MaxKillsPerGame}" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="场均击败" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="{Binding SelectedHeroData.AllGames.AverageKills}" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="总击败" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="{Binding SelectedHeroData.AllGames.TotalKills}" />
                                    </StackPanel>
                                </UniformGrid>
                            </UniformGrid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Image Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/heroShow.png" Stretch="UniformToFill" />
        </Grid>
    </Grid>
</bases:UserControlBase>