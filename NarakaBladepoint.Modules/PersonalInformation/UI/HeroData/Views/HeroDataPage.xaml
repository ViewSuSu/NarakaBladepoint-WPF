<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.PersonalInformation.UI.HeroData.Views.HeroDataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.HeroData.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/NarakaBladepoint.Resources;component/Image/background2.png" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.55*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Image Width="50" />
                    <TextBlock Foreground="White" Text="野排牢张" />
                </StackPanel>
                <StackPanel
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="60"
                        Height="20"
                        Content="单排" />
                    <Button
                        Width="60"
                        Height="20"
                        Content="双排" />
                    <Button
                        Width="60"
                        Height="20"
                        Content="三排" />
                    <ComboBox Width="100" Margin="10,0" />
                    <ComboBox Width="100" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.05*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="英雄对比" />
                    <ComboBox
                        Width="100"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center" />
                    <ListBox
                        Grid.Row="1"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        Background="Transparent" />
                </Grid>
                <Grid Grid.Column="1" Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*" />
                        <RowDefinition Height="0.5*" />
                        <RowDefinition Height="0.5*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="张起灵" />
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="最近12场" />
                        <UniformGrid Grid.Row="1" Columns="3">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="前五率" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="3.2%" />
                            </StackPanel>
                            <StackPanel
                                Margin="10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="场均伤害" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="3.2%" />
                            </StackPanel>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Foreground="White" Text="击败/被击败" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="3.2%" />
                            </StackPanel>
                        </UniformGrid>
                    </Grid>
                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="所有场次" />
                        <Grid Grid.Row="1">
                            <UniformGrid Rows="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.75*" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                </Grid>
                                <UniformGrid Columns="4">
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="前五率" />
                                        <TextBlock Foreground="White" Text="29.0%" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="天选率" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="3.2%" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="获胜数" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="1" />
                                    </StackPanel>
                                </UniformGrid>

                                <UniformGrid Columns="4">
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="场均伤害" />
                                        <TextBlock Foreground="White" Text="11385" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="单局最高伤害" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="35276" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="场均治疗" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="7852" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="总淘汰" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="79" />
                                    </StackPanel>
                                </UniformGrid>

                                <UniformGrid Columns="4">
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="击败 / 被击败" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="1.66" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="单局最高击败" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="11" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="场均击败" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="3.32" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="总击败" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="103" />
                                    </StackPanel>
                                </UniformGrid>
                            </UniformGrid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Image Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/heroShow.png" Stretch="UniformToFill" />
        </Grid>
    </Grid>
</bases:UserControlBase>