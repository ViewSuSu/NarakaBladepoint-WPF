<views:UserControlBase
    x:Class="NarakaBladepoint.Modules.PersonalInformation.UI.IllustratedCollection.Views.IllustratedCollectioSuitPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:conv="clr-namespace:NarakaBladepoint.Framework.UI.Converters;assembly=NarakaBladepoint.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.IllustratedCollection.Views"
    xmlns:localconv="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.IllustratedCollection.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.IllustratedCollection.ViewModels"
    xmlns:views="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    d:DataContext="{d:DesignInstance Type=viewmodels:IllustratedCollectioSuitPageViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <views:UserControlBase.Resources>
        <conv:HalfValueConverter x:Key="HalfValueConverter" />
        <localconv:CombinedProgressToSegmentValueConverter x:Key="CombinedProgressToSegmentValueConverter" />
    </views:UserControlBase.Resources>

    <Grid Background="{StaticResource Background2}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center">
            <TextBlock>
                <Run Text="总计加分:" />
                <Run Foreground="{StaticResource DefaultOrangeBrush}" Text="6000" />
            </TextBlock>
        </Grid>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl
                Name="itemcontrol"
                d:ItemsSource="{d:SampleData ItemCount=3}"
                ItemsSource="{Binding SuitCollections}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Image />
                            </Grid>
                            <Grid Grid.Column="1" Margin="10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    d:Text="共赴无间"
                                    FontSize="15"
                                    Text="{Binding Name}" />
                                <StackPanel
                                    Grid.Row="1"
                                    Margin="0,5,0,0"
                                    VerticalAlignment="Bottom"
                                    Orientation="Vertical">
                                    <TextBlock>
                                        <Run Text="收集进度：" />
                                        <Run
                                            d:Text="3"
                                            Foreground="{StaticResource DefaultHighlightBackground}"
                                            Text="{Binding ProgressText1}" />
                                        <Run Foreground="{StaticResource DefaultHighlightBackground}" Text="/" />
                                        <Run
                                            d:Text="17"
                                            Foreground="{StaticResource DefaultHighlightBackground}"
                                            Text="{Binding ProgressText2}" />
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="累计加分：" />
                                        <Run
                                            d:Text="200"
                                            Foreground="{StaticResource DefaultHighlightBackground}"
                                            Text="{Binding ScoreText}" />
                                    </TextBlock>
                                </StackPanel>
                                <Button
                                    Grid.Row="2"
                                    Height="30"
                                    Margin="0,10,0,0"
                                    Command="{Binding ViewDetailsCommand}"
                                    Content="查看详情"
                                    Style="{StaticResource CommandButtonStyle3}" />
                                <Grid Grid.Row="3" Margin="0,10,0,0" />
                            </Grid>
                            <Grid Grid.Column="2">
                                <ItemsControl
                                    Name="itemcontrol1"
                                    d:ItemsSource="{d:SampleData ItemCount=3}"
                                    AlternationCount="{Binding Items.Count, RelativeSource={RelativeSource Self}}"
                                    ItemsSource="{Binding Rewards}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="3,0">
                                                <Image
                                                    Name="image"
                                                    Width="60"
                                                    Height="60"
                                                    HorizontalAlignment="Right"
                                                    Source="{Binding ImageSource}">
                                                    <Image.RenderTransform>
                                                        <TranslateTransform X="{Binding ElementName=image, Path=Width, Converter={StaticResource HalfValueConverter}}" />
                                                    </Image.RenderTransform>
                                                </Image>
                                                <ProgressBar
                                                    Width="100"
                                                    Height="5"
                                                    Margin="0,10,0,0"
                                                    Background="{StaticResource DefaultTransientBlackBackground5}"
                                                    BorderThickness="0"
                                                    Foreground="{StaticResource DefaultOrangeBrush}"
                                                    Maximum="100">
                                                    <ProgressBar.Value>
                                                        <MultiBinding Converter="{StaticResource CombinedProgressToSegmentValueConverter}">
                                                            <Binding
                                                                Mode="OneWay"
                                                                Path="DataContext.ProgressText1"
                                                                RelativeSource="{RelativeSource Mode=FindAncestor,
                                                                                                AncestorType=ItemsControl,
                                                                                                AncestorLevel=1}" />
                                                            <Binding
                                                                Mode="OneWay"
                                                                Path="DataContext.ProgressText2"
                                                                RelativeSource="{RelativeSource Mode=FindAncestor,
                                                                                                AncestorType=ItemsControl,
                                                                                                AncestorLevel=1}" />
                                                            <Binding Mode="OneWay" Path="." />
                                                            <Binding
                                                                Mode="OneWay"
                                                                Path="DataContext.Rewards"
                                                                RelativeSource="{RelativeSource Mode=FindAncestor,
                                                                                                AncestorType=ItemsControl,
                                                                                                AncestorLevel=1}" />
                                                        </MultiBinding>
                                                    </ProgressBar.Value>
                                                </ProgressBar>
                                                <TextBlock
                                                    Name="textblock"
                                                    Margin="0,5,0,0"
                                                    HorizontalAlignment="Right">
                                                    <Run Text="{Binding Count}" />
                                                    <Run Text="件" />
                                                    <TextBlock.RenderTransform>
                                                        <TranslateTransform X="{Binding ElementName=textblock, Path=ActualWidth, Converter={StaticResource HalfValueConverter}}" />
                                                    </TextBlock.RenderTransform>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</views:UserControlBase>