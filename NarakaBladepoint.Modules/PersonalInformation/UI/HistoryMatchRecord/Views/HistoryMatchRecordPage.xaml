<base:UserControlBase
    x:Class="NarakaBladepoint.Modules.PersonalInformation.UI.HistoryMatchRecord.Views.HistoryMatchRecordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:base="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:converters="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.HistoryMatchRecord.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels1="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.HistoryMatchRecord.ViewModels"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels1:HistoryMatchRecordPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BoolToAddOrDeleteConverter x:Key="BoolToAddOrDeleteConverter" />
        <Style x:Key="AddRunStyle" TargetType="Run">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=add, Path=Text}" Value="+">
                    <Setter Property="Foreground" Value="Orange" />
                </DataTrigger>
                <DataTrigger Binding="{Binding ElementName=add, Path=Text}" Value="-">
                    <Setter Property="Foreground" Value="#64FFFFFF" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Margin="30">
        <TabControl Background="Transparent" BorderThickness="0">
            <TabItem
                Width="150"
                Background="Transparent"
                BorderThickness="0"
                Header="天选之人"
                Style="{StaticResource HistoryMatchRecordTabItemStyle}">
                <Grid>
                    <ListBox
                        x:Name="listbox"
                        Grid.Row="1"
                        Margin="0,10,0,0"
                        HorizontalContentAlignment="Stretch"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        Background="Transparent"
                        BorderThickness="0"
                        ItemsSource="{Binding MatchDataItems, Mode=OneWay}"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <controls:HighlightBorder>
                                    <Grid
                                        Height="50"
                                        Margin="0,5"
                                        Background="#1A000000">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80" />
                                            <ColumnDefinition Width="0.75*" />
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition Width="0.5*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="0.75*" />
                                            <ColumnDefinition Width="0.7*" />
                                        </Grid.ColumnDefinitions>
                                        <Border
                                            Grid.Column="0"
                                            BorderBrush="White"
                                            BorderThickness="0.1">
                                            <Image
                                                Width="60"
                                                d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Hero/顾清寒.png"
                                                Source="{Binding Avatar, Mode=OneWay}"
                                                Stretch="Uniform" />
                                        </Border>
                                        <Grid Grid.Column="1" Margin="5,0,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Image
                                                Height="20"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/出类拔萃.png"
                                                Visibility="{Binding IsNo3To4, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <Image
                                                Height="20"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/一人之下.png"
                                                Visibility="{Binding IsNo2, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <Image
                                                Height="20"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/唯我独尊.png"
                                                Visibility="{Binding IsNo1, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <StackPanel
                                                Grid.Row="1"
                                                Margin="0,5,0,0"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                                <TextBlock VerticalAlignment="Center" Foreground="White">
                                                    <Run
                                                        Name="CurrentRank"
                                                        d:Text="7"
                                                        Text="{Binding CurrentRank, Mode=OneWay}" />
                                                    <Run Text="/" />
                                                    <Run d:Text="17" Text="{Binding AllTeams, Mode=OneWay}" />
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                        <StackPanel
                                            Grid.Column="2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Height="20"
                                                Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/击杀数.png"
                                                Stretch="UniformToFill" />
                                            <TextBlock
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Center"
                                                d:Text="1"
                                                Foreground="White"
                                                Text="{Binding KillNumber, Mode=OneWay}" />
                                        </StackPanel>
                                        <StackPanel
                                            Grid.Column="3"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Height="20"
                                                Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/造成伤害.png"
                                                Stretch="UniformToFill" />
                                            <TextBlock
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Center"
                                                d:Text="12345"
                                                Foreground="White"
                                                Text="{Binding Damage, Mode=OneWay}" />
                                        </StackPanel>
                                        <ItemsControl
                                            Name="itemsControl"
                                            Grid.Column="4"
                                            VerticalAlignment="Center"
                                            d:ItemsSource="{d:SampleData ItemCount=5}"
                                            ItemsSource="{Binding Achievements, Mode=OneWay}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Image
                                                            Width="20"
                                                            Margin="2,0"
                                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/HisitoryMatchRecord/1.png"
                                                            Source="{Binding}" />
                                                        <Popup />
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        <Grid Grid.Column="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="30" />
                                            </Grid.ColumnDefinitions>
                                            <UniformGrid
                                                d:Visibility="Hidden"
                                                Rows="2"
                                                Visibility="{Binding IsHightLevel, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        FontSize="15"
                                                        Foreground="White"
                                                        Text="无相龙王" />
                                                    <Image
                                                        Width="20"
                                                        Margin="5,0,0,0"
                                                        Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/星.png" />
                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        Foreground="#FFFFA500"
                                                        Text="15" />
                                                </StackPanel>
                                                <Grid VerticalAlignment="Center">
                                                    <ProgressBar
                                                        Height="15"
                                                        Background="Black"
                                                        Foreground="#EAB181"
                                                        Maximum="100"
                                                        Value="40" />
                                                    <TextBlock Margin="5,0,0,0" Foreground="White">
                                                        <Run Text="42" />
                                                        <Run Text="(" />
                                                        <Run Text="12" />
                                                        <Run Text=")" />
                                                    </TextBlock>
                                                </Grid>
                                            </UniformGrid>
                                            <StackPanel
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                                <TextBlock
                                                    d:Text="蚀月 2"
                                                    FontSize="15"
                                                    Foreground="White"
                                                    Text="{Binding CurrentLevel, Mode=OneWay}" />
                                                <TextBlock
                                                    Margin="5,0,0,0"
                                                    FontSize="15"
                                                    Foreground="White">
                                                    <Run
                                                        d:Text="3847"
                                                        Style="{StaticResource AddRunStyle}"
                                                        Text="{Binding Score, Mode=OneWay}" />
                                                    <Run Style="{StaticResource AddRunStyle}" Text="(" />
                                                    <Run
                                                        Name="add"
                                                        d:Text="+"
                                                        Style="{StaticResource AddRunStyle}"
                                                        Text="{Binding IsAdd, Mode=OneWay, Converter={StaticResource BoolToAddOrDeleteConverter}}" />
                                                    <Run
                                                        d:Text="28"
                                                        Style="{StaticResource AddRunStyle}"
                                                        Text="{Binding ChangeScore, Mode=OneWay}" />
                                                    <Run Style="{StaticResource AddRunStyle}" Text=")" />
                                                </TextBlock>
                                            </StackPanel>
                                            <Image
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/400+.png"
                                                Visibility="{Binding IsEasy, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        </Grid>
                                        <Grid Grid.Column="6" Margin="10,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="30" />
                                            </Grid.ColumnDefinitions>
                                            <UniformGrid Rows="2">
                                                <Grid>
                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="15"
                                                        Foreground="White"
                                                        Text="排位赛三排" />
                                                    <Image
                                                        Width="15"
                                                        HorizontalAlignment="Right"
                                                        Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/豪杰对局.png"
                                                        Visibility="{Binding IsHightLevel, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />
                                                </Grid>
                                                <TextBlock
                                                    Grid.Row="1"
                                                    VerticalAlignment="Center"
                                                    Foreground="#64FFFFFF"
                                                    Text="15:37 2025/12/21" />
                                            </UniformGrid>
                                            <Image
                                                Grid.Column="1"
                                                Width="15"
                                                VerticalAlignment="Center"
                                                Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/对局详情.png" />
                                        </Grid>
                                        <b:Interaction.Triggers>
                                            <b:EventTrigger EventName="MouseLeftButtonDown">
                                                <b:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=DataContext.DetailCommand}" CommandParameter="{Binding}" />
                                            </b:EventTrigger>
                                        </b:Interaction.Triggers>
                                    </Grid>
                                </controls:HighlightBorder>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem
                Width="150"
                Background="Transparent"
                Header="征神之路"
                Style="{StaticResource HistoryMatchRecordTabItemStyle}">
                <Grid Margin="0,10,0,0" Background="#1A000000">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="暂无比赛数据" />
                </Grid>
            </TabItem>
            <TabItem
                Width="150"
                Background="Transparent"
                Header="无间镖客"
                Style="{StaticResource HistoryMatchRecordTabItemStyle}">
                <Grid Margin="0,10,0,0" Background="#1A000000">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="暂无比赛数据" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</base:UserControlBase>
