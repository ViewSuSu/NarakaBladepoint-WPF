<base:UserControlBase
    x:Class="NarakaBladepoint.Modules.PersonalInformation.UI.HistoryMatchRecord.Views.HistoryMatchRecordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:NarakaBladepoint.Framework.Core.Bases;assembly=NarakaBladepoint.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels1="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.HistoryMatchRecord.ViewModels"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels1:HistoryMatchRecordPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/NarakaBladepoint.Resources;component/Image/background2.png" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>
        <Grid Margin="30">
            <TabControl Background="Transparent" BorderThickness="0">
                <TabItem
                    Background="Transparent"
                    BorderThickness="0"
                    Header="天选之人"
                    Style="{StaticResource HistoryMatchRecordTabItemStyle}">
                    <ListBox
                        Grid.Row="1"
                        Margin="0,10,0,0"
                        HorizontalContentAlignment="Stretch"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        Background="Transparent"
                        BorderThickness="0"
                        ItemsSource="{Binding MatchDataItems, Mode=OneWay}"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    Height="70"
                                    Margin="0,5"
                                    Background="#1A000000">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="0.75*" />
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="0.5*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="0.75*" />
                                        <ColumnDefinition Width="0.7*" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Grid.Column="0"
                                        BorderBrush="White"
                                        BorderThickness="0.1">
                                        <Image
                                            Width="60"
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Hero/顾清寒.png"
                                            Source="{Binding Avatar, Mode=OneWay}"
                                            Stretch="UniformToFill" />
                                    </Border>
                                    <Grid Grid.Column="1" Margin="5,0,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Image
                                            Height="20"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/出类拔萃.png" />
                                        <StackPanel
                                            Grid.Row="1"
                                            Margin="0,5,0,0"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock VerticalAlignment="Center" Foreground="White">
                                                <Run Text="7" />
                                                <Run Text="/" />
                                                <Run Text="17" />
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel
                                        Grid.Column="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <Image
                                            Height="20"
                                            Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/击杀数.png"
                                            Stretch="UniformToFill" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            Text="1" />
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Column="3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <Image
                                            Height="20"
                                            Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/造成伤害.png"
                                            Stretch="UniformToFill" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            Text="12345" />
                                    </StackPanel>
                                    <ItemsControl
                                        Grid.Column="4"
                                        VerticalAlignment="Center"
                                        d:ItemsSource="{d:SampleData ItemCount=5}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Image
                                                        Width="20"
                                                        Margin="2,0"
                                                        d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/HisitoryMatchRecord/1.png" />
                                                    <Popup />
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <Grid Grid.Column="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="30" />
                                        </Grid.ColumnDefinitions>
                                        <UniformGrid Rows="2">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontSize="15"
                                                    Foreground="White"
                                                    Text="无相龙王" />
                                                <Image
                                                    Width="20"
                                                    Margin="5,0,0,0"
                                                    Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/星.png" />
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    Foreground="#FFFFA500"
                                                    Text="15" />
                                            </StackPanel>
                                            <Grid VerticalAlignment="Center">

                                                <ProgressBar
                                                    Height="15"
                                                    d:Maximum="100"
                                                    d:Value="40"
                                                    Background="Black"
                                                    Foreground="#EAB181" />
                                                <TextBlock Margin="5,0,0,0" Foreground="White">
                                                    <Run Text="42" />
                                                    <Run Text="(" />
                                                    <Run Text="12" />
                                                    <Run Text=")" />
                                                </TextBlock>
                                            </Grid>
                                        </UniformGrid>
                                        <Image
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/400+.png"
                                            Visibility="{Binding IsEasy}" />
                                    </Grid>
                                    <Grid Grid.Column="6" Margin="10,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="30" />
                                        </Grid.ColumnDefinitions>
                                        <UniformGrid Rows="2">
                                            <Grid>
                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="15"
                                                    Foreground="White"
                                                    Text="排位赛三排" />
                                                <Image
                                                    Width="20"
                                                    HorizontalAlignment="Right"
                                                    Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/豪杰对局.png"
                                                    Visibility="{Binding IsHaoJie}" />
                                            </Grid>
                                            <TextBlock
                                                Grid.Row="1"
                                                VerticalAlignment="Center"
                                                Foreground="#64FFFFFF"
                                                Text="15:37 2025/12/21" />
                                        </UniformGrid>
                                        <Image
                                            Grid.Column="1"
                                            Width="20"
                                            VerticalAlignment="Center"
                                            Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/对局详情.png" />
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
                <TabItem
                    Background="Transparent"
                    Header="征神之路"
                    Style="{StaticResource HistoryMatchRecordTabItemStyle}">
                    <Grid Margin="0,10,0,0" Background="#1A000000">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Text="暂无比赛数据" />
                    </Grid>
                </TabItem>
                <TabItem
                    Background="Transparent"
                    Header="无间镖客"
                    Style="{StaticResource HistoryMatchRecordTabItemStyle}">
                    <Grid Margin="0,10,0,0" Background="#1A000000">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Text="暂无比赛数据" />
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</base:UserControlBase>