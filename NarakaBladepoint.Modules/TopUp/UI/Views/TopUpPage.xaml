<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.TopUp.UI.Views.TopUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attached="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.TopUp.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wealth="clr-namespace:NarakaBladepoint.Modules.Wealth.UI.Main.Views"
    attached:EscKeyAttachedProperty.Command="{Binding ReturnCommand}"
    d:Background="Gray"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/NarakaBladepoint.Resources;component/Image/background2.png" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid Margin="50,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition />
                <RowDefinition Height="0.1*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="0.2*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="30"
                    Foreground="White"
                    Text="充值" />
                <wealth:WealthPage Grid.Column="1" />
            </Grid>
            <TextBlock
                Grid.Row="1"
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Foreground="White"
                Text="适度娱乐，理性消费" />
            <Grid Grid.Row="1" Margin="0,40,0,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.7*" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <UniformGrid Grid.Row="0" Columns="3">
                    <controls:HighlightBorder>
                        <Image Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Region/TopUp/1.png" Stretch="UniformToFill" />
                    </controls:HighlightBorder>

                    <controls:HighlightBorder Margin="10,0">
                        <Image Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Region/TopUp/2.png" Stretch="UniformToFill" />
                    </controls:HighlightBorder>

                    <controls:HighlightBorder>
                        <Image Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Region/TopUp/3.png" Stretch="UniformToFill" />
                    </controls:HighlightBorder>
                </UniformGrid>

                <UniformGrid
                    Grid.Row="1"
                    Margin="0,10"
                    Columns="2">
                    <controls:HighlightBorder>
                        <Image Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Region/TopUp/4.png" Stretch="UniformToFill" />
                    </controls:HighlightBorder>

                    <controls:HighlightBorder Margin="10,0,0,0">
                        <Image Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Region/TopUp/5.png" Stretch="UniformToFill" />
                    </controls:HighlightBorder>
                </UniformGrid>
            </Grid>
        </Grid>
        <controls:EscBackControl
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding ReturnCommand}" />
    </Grid>
</bases:UserControlBase>