<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.DayEvent.UI.Views.DayEventPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.DayEvent.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.DayEvent.UI.ViewModels"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:DayEventPageViewModel}"
    d:DesignHeight="330"
    d:DesignWidth="240"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="0.75*" />
            <RowDefinition />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#5A000000">
            <Grid>
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                    <Image
                        Height="20"
                        Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/每日任务花.png"
                        Stretch="Uniform" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="每日任务" />
                </StackPanel>
                <Border
                    Width="60"
                    HorizontalAlignment="Right"
                    Background="#5A000000">
                    <Image Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/任务详情.png" Stretch="Uniform">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="MouseLeftButtonDown">
                                <b:InvokeCommandAction Command="{Binding TaskDetailsComamnd}" />
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Image>
                </Border>
            </Grid>
        </Border>
        <Border Grid.Row="1" Margin="0,5">
            <Border.Background>
                <ImageBrush ImageSource="pack://application:,,,/NarakaBladepoint.Resources;component/Image/每日任务背景1.png" Stretch="UniformToFill" />
            </Border.Background>
            <controls:HighlightBorder Height="80" HorizontalAlignment="Right">
                <Image Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/每日任务奖励.png" Stretch="Uniform" />
            </controls:HighlightBorder>
        </Border>
        <UniformGrid
            Grid.Row="2"
            Margin="0,1"
            Background="#5A000000"
            Rows="3">
            <controls:HighlightBorder>
                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    attach:TextBlockHighlightAttachedProperty.HighlightText="2"
                    Foreground="White"
                    Text="完成任意2场对局" />
            </controls:HighlightBorder>
            <controls:HighlightBorder>
                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    attach:TextBlockHighlightAttachedProperty.HighlightText="2000"
                    Foreground="White"
                    Text="累计使用近战武器造成2000点伤害" />
            </controls:HighlightBorder>
            <controls:HighlightBorder>
                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    attach:TextBlockHighlightAttachedProperty.HighlightText="2000"
                    Foreground="White"
                    Text="累计移动2000米" />
            </controls:HighlightBorder>
        </UniformGrid>
        <Border
            Grid.Row="3"
            Margin="0,5"
            Background="#5A000000">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.25*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Button
                    Content="聚宝阁"
                    FontSize="9"
                    Style="{StaticResource SettingBackToGameCommandButtonStyle}" />
                <controls:HighlightBorder Grid.Row="1">
                    <Image Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/聚宝阁.png" Stretch="Fill" />
                </controls:HighlightBorder>
            </Grid>
        </Border>
    </Grid>
</bases:UserControlBase>