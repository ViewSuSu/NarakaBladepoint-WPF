<base:UserControlBase
x:Class="NarakaBladepoint.Modules.Social.UI.Setting.Views.SettingPage"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
xmlns:base="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.Social.UI.Setting.ViewModels"
    d:Background="White"
    d:DataContext="{d:DesignInstance Type=viewmodels:SettingPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Rectangle Fill="#80000000">
            <Rectangle.Effect>
                <BlurEffect Radius="10" />
            </Rectangle.Effect>
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseLeftButtonDown">
                    <b:InvokeCommandAction Command="{Binding ReturnCommand}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Rectangle>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Image
                Grid.Row="0"
                Margin="0,50,0,0"
                Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/logo.png"
                Stretch="Uniform" />
            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <Button
                    Width="240"
                    Height="30"
                    Margin="0,5"
                    Command="{Binding ReturnCommand}"
                    Content="回到游戏"
                    Style="{StaticResource CommandButtonStyle2}" />
                <Button
                    Width="240"
                    Height="30"
                    Margin="0,5"
                    Command="{Binding NavigateToTutorialCommand}"
                    Content="战斗百科"
                    Style="{StaticResource CommandButtonStyle1}" />
                <Button
                    Width="240"
                    Height="30"
                    Margin="0,5"
                    Content="按键设置"
                    Style="{StaticResource CommandButtonStyle1}" />
                <Button
                    Width="240"
                    Height="30"
                    Margin="0,5"
                    Content="选项设置"
                    Style="{StaticResource CommandButtonStyle1}" />
                <Button
                    Width="240"
                    Height="30"
                    Margin="0,5"
                    Content="联系客服"
                    Style="{StaticResource CommandButtonStyle1}" />
                <Button
                    Width="240"
                    Height="30"
                    Margin="0,5"
                    Content="开场视频"
                    Style="{StaticResource CommandButtonStyle1}" />
                <Button
                    Width="240"
                    Height="30"
                    Margin="0,5"
                    Content="礼物码兑换"
                    Style="{StaticResource CommandButtonStyle1}" />
                <Button
                    Width="240"
                    Height="30"
                    Margin="0,5"
                    Content="返回登录界面"
                    Style="{StaticResource CommandButtonStyle1}" />
                <Button
                    Width="240"
                    Height="30"
                    Margin="0,5"
                    Command="{Binding ExitCommand}"
                    Content="退至桌面"
                    Style="{StaticResource CommandButtonStyle1}" />
            </StackPanel>
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseLeftButtonDown">
                    <b:InvokeCommandAction Command="{Binding ReturnCommand}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Grid>
    </Grid>
</base:UserControlBase>