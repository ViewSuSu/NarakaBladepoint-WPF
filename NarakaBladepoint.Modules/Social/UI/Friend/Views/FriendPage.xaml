<base:UserControlBase
x:Class="NarakaBladepoint.Modules.Social.UI.Friend.Views.FriendPage"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
xmlns:base="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
xmlns:core="clr-namespace:Microsoft.Xaml.Behaviors.Core;assembly=Microsoft.Xaml.Behaviors"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:tagUsercontrol="clr-namespace:NarakaBladepoint.Modules.SocialTag.UI.Views"
xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.Social.UI.Friend.ViewModels"
d:Background="Gray"
d:DataContext="{d:DesignInstance Type=viewmodels:FriendPageViewModel}"
d:DesignHeight="720"
    d:DesignWidth="1080"
    x:ClassModifier="internal"
    mc:Ignorable="d">
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <Grid Background="Transparent">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseLeftButtonDown">
                    <b:InvokeCommandAction Command="{Binding CloseCommand}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Grid>
        <Grid Grid.Column="1">
            <Rectangle Fill="#99090000">
                <Rectangle.Effect>
                    <BlurEffect Radius="10" />
                </Rectangle.Effect>
            </Rectangle>
            <Grid Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <controls:AvatarControl
                                d:BackgroundImage="{StaticResource Avatar1Image}"
                                BackgroundImage="{Binding CurrentUserInfoModel.Avatar, Mode=OneWay}"
                                ImageStretch="Uniform" />
                        <UniformGrid
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            Rows="3">
                            <TextBlock
                                VerticalAlignment="Center"
                                d:Text="国服张起灵"
                                FontSize="20"
                                Foreground="White"
                                Text="{Binding CurrentUserInfoModel.Name}" />
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Foreground="White">
                                    <Run Text="ID:" />
                                    <Run d:Text="123123123132" Text="{Binding CurrentUserInfoModel.Id}" />
                                </TextBlock>
                                <Image
                                    Width="20"
                                    Margin="10,0,0,0"
                                    Source="{StaticResource CopyImage}"
                                    Stretch="Uniform">
                                    <b:Interaction.Triggers>
                                        <b:EventTrigger EventName="MouseLeftButtonDown">
                                            <b:InvokeCommandAction Command="{Binding CopyIdCommand}" />
                                        </b:EventTrigger>
                                    </b:Interaction.Triggers>
                                </Image>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="15"
                                    Source="{StaticResource OnlineImage}"
                                    Stretch="Uniform" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="空闲" />
                            </StackPanel>
                        </UniformGrid>
                    </Grid>
                    <controls:HighlightBorder
                        Grid.Row="1"
                        Margin="0,5"
                        BorderBrush="White"
                        BorderThickness="0.2"
                        Visibility="{Binding IsHaveVilidTag, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <Image
                                Width="20"
                                Margin="5,0,0,0"
                                Source="{StaticResource ClickSettingTagImage}"
                                Stretch="Uniform" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="点击设置标签" />
                        </StackPanel>
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="MouseLeftButtonDown">
                                <b:InvokeCommandAction Command="{Binding SettingTagCommand}" />
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </controls:HighlightBorder>
                    <Grid
                        Grid.Row="1"
                        Margin="0,5"
                        Visibility="{Binding IsHaveVilidTag, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="40" />
                        </Grid.ColumnDefinitions>
                        <tagUsercontrol:TagUserControl
                            Grid.Row="1"
                            Margin="0,5"
                            d:Visibility="Hidden"
                            ContentFontSize="10" />
                        <Image
                            Grid.Column="1"
                            Width="20"
                            HorizontalAlignment="Right"
                            d:Visibility="Hidden"
                            Source="{StaticResource ClickSettingTagImage}"
                            Stretch="Uniform">
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="MouseLeftButtonDown">
                                    <b:InvokeCommandAction Command="{Binding SettingTagCommand}" />
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                        </Image>
                    </Grid>

                    <Border
                        Grid.Row="2"
                        Margin="0,5"
                        BorderBrush="White"
                        BorderThickness="0.2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.15*" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="0.15*" />
                            </Grid.ColumnDefinitions>
                            <Image Width="20" Source="{StaticResource SearchMagnifierImage}" />
                            <controls:PlaceholderTextBox
                                Name="SearchBox"
                                Grid.Column="1"
                                VerticalContentAlignment="Center"
                                d:Text="123"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="White"
                                Placeholder="输入玩家名或ID搜索或添加"
                                PlaceholderForeground="#64FFFFFF">
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="TextChanged">
                                        <b:InvokeCommandAction Command="{Binding SearchCommand}" CommandParameter="{Binding ElementName=SearchBox, Path=Text}" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                            </controls:PlaceholderTextBox>
                            <Image
                                Grid.Column="2"
                                Width="20"
                                MouseLeftButtonDown="Image_MouseLeftButtonDown"
                                Source="{StaticResource ClearSearchImage}">
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="MouseLeftButtonDown">
                                        <b:InvokeCommandAction Command="{Binding SearchCommand}" CommandParameter="{x:Null}" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                            </Image>
                        </Grid>
                    </Border>
                    <TabControl
                        Grid.Row="3"
                        Background="Transparent"
                        Style="{StaticResource AverageTabControlStyle}">
                        <TabItem
                            Height="30"
                            Header="找搭子"
                            Style="{StaticResource CommonFunctionTabItem2}" />
                        <TabItem
                            Height="30"
                            Header="联系人"
                            IsSelected="True"
                            Style="{StaticResource CommonFunctionTabItem2}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Expander
                                    Grid.Row="0"
                                    HorizontalContentAlignment="Stretch"
                                    Foreground="White"
                                    Header="聚义厅  0/0"
                                    Style="{StaticResource LeftHeaderExpanderStyle}" />
                                <Expander
                                    Grid.Row="1"
                                    d:IsExpanded="True"
                                    Foreground="White"
                                    Header="默认分组   0/13"
                                    ScrollViewer.CanContentScroll="True"
                                    Style="{StaticResource LeftHeaderExpanderStyle}">
                                    <ItemsControl
                                        HorizontalContentAlignment="Stretch"
                                        d:ItemsSource="{d:SampleData ItemCount=10}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        ItemsSource="{Binding Friends}"
                                        ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                        <ItemsControl.Template>
                                            <ControlTemplate TargetType="ItemsControl">
                                                <ScrollViewer Padding="{TemplateBinding Padding}">
                                                    <ItemsPresenter />
                                                </ScrollViewer>
                                            </ControlTemplate>
                                        </ItemsControl.Template>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Columns="1" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid MaxHeight="40" Margin="0,0,20,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="0.15*" />
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="0.1*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Image
                                                        d:Source="{StaticResource Avatar1Image}"
                                                        Source="{Binding Avatar, Mode=OneWay}"
                                                        Stretch="Uniform" />
                                                    <StackPanel Grid.Column="1" Orientation="Vertical">
                                                        <TextBlock
                                                            d:Text="Name"
                                                            Foreground="White"
                                                            Text="{Binding Name, Mode=OneWay}" />
                                                        <TextBlock
                                                            Margin="0,5,0,0"
                                                            Foreground="White"
                                                            Text="在线" />
                                                    </StackPanel>
                                                    <Image
                                                        Grid.Column="2"
                                                        Source="{StaticResource SayHelloImage}"
                                                        Stretch="Uniform">
                                                        <b:Interaction.Triggers>
                                                            <b:EventTrigger EventName="MouseLeftButtonDown">
                                                                <b:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=DataContext.SayHelloCommand}" CommandParameter="{Binding}" />
                                                            </b:EventTrigger>
                                                        </b:Interaction.Triggers>
                                                    </Image>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                                <Expander
                                    Grid.Row="2"
                                    HorizontalContentAlignment="Stretch"
                                    Foreground="White"
                                    Header="屏蔽名单  0/0"
                                    Style="{StaticResource LeftHeaderExpanderStyle}" />
                            </Grid>
                        </TabItem>
                        <TabItem
                            Height="30"
                            Header="最近"
                            Style="{StaticResource CommonFunctionTabItem2}">
                            <ListBox
                                HorizontalContentAlignment="Stretch"
                                d:ItemsSource="{d:SampleData ItemCount=5}"
                                Background="Transparent"
                                BorderThickness="0"
                                ItemsSource="{Binding Friends}"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid MaxHeight="40">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30" />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Image
                                                HorizontalAlignment="Left"
                                                d:Source="{StaticResource Avatar1Image}"
                                                Source="{Binding Avatar, Mode=OneWay}"
                                                Stretch="Uniform" />
                                            <StackPanel
                                                Grid.Column="1"
                                                Margin="10,0,0,0"
                                                Orientation="Vertical">
                                                <TextBlock
                                                    d:Text="Name"
                                                    Foreground="White"
                                                    Text="{Binding Name, Mode=OneWay}" />
                                                <TextBlock
                                                    Margin="0,5,0,0"
                                                    d:Text="排位赛三排 19分钟（组队中3/3）"
                                                    FontSize="10"
                                                    Foreground="#EAB181"
                                                    Text="{Binding Status, Mode=OneWay}" />
                                            </StackPanel>
                                            <Image
                                                Grid.Column="2"
                                                Width="20"
                                                Margin="0,0,10,0"
                                                HorizontalAlignment="Right"
                                                Source="{StaticResource FriendInvImage}"
                                                Stretch="Uniform" />
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </TabItem>
                        <TabItem
                            Height="30"
                            Header="附近"
                            Style="{StaticResource CommonFunctionTabItem2}">
                            <Expander
                                Grid.Row="0"
                                HorizontalContentAlignment="Stretch"
                                Foreground="White"
                                Header="附近玩家"
                                Style="{StaticResource LeftHeaderExpanderStyle}" />
                        </TabItem>
                        <TabItem
                            Height="30"
                            Header="申请"
                            Style="{StaticResource CommonFunctionTabItem2}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="暂无好友申请" />
                        </TabItem>
                    </TabControl>
                </Grid>
            </Grid>
            <controls:EscBackControl
                Grid.Row="4"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding CloseCommand}" />
        </Grid>
    </Grid>
</base:UserControlBase>