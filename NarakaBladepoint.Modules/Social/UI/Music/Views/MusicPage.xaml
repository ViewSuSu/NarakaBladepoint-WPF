<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.Social.UI.Music.Views.MusicPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases.Views;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.Social.UI.Music.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:MusicPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <bases:UserControlBase.Resources>
        <!--  Music Info Panel Style  -->
        <Style x:Key="MusicInfoPanelStyle" TargetType="StackPanel">
            <Setter Property="Background" Value="{StaticResource HeroTagBackground1Brush}" />
        </Style>

        <!--  Music DataGrid Cell Style  -->
        <Style x:Key="MusicDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Background" Value="{StaticResource DefaultTransientBlackBackground2}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="Height" Value="45" />
        </Style>
    </bases:UserControlBase.Resources>
    <Grid Background="{StaticResource Background2}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  Top header  -->
            <Grid
                x:Name="topGrid"
                Grid.Row="0"
                Background="{StaticResource PersonalInfoDetailsBackgroundBrush}">
                <Grid Margin="50,10">
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="大厅音乐" />
                </Grid>
            </Grid>

            <!--  Main content  -->
            <Grid Grid.Row="1" Margin="20,50,20,80">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--  Left sidebar - Music category list  -->
                <Grid Name="leftSidebar" Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <!--  Scrollable music category list  -->
                    <ScrollViewer Margin="0,0,0,10" VerticalScrollBarVisibility="Auto">
                        <StackPanel Name="stackpanel" Orientation="Vertical">
                            <controls:HighlightBorder
                                Name="tabitem1"
                                Height="45"
                                Background="{StaticResource DefaultTransientBlackBackground2}"
                                BorderThickness="2">
                                <controls:HighlightBorder.Style>
                                    <Style TargetType="controls:HighlightBorder">
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedMusicIndex}" Value="1">
                                                <Setter Property="BorderBrush" Value="White" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </controls:HighlightBorder.Style>
                                <TextBlock
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    d:Text="大厅音乐曲库"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="{Binding MusicCategoryOne}" />
                                <controls:HighlightBorder.InputBindings>
                                    <MouseBinding
                                        Command="{Binding SelectMusicCommand}"
                                        CommandParameter="1"
                                        MouseAction="LeftClick" />
                                </controls:HighlightBorder.InputBindings>
                            </controls:HighlightBorder>
                            <controls:HighlightBorder
                                Name="tabitem2"
                                Height="45"
                                Margin="0,8,0,0"
                                Background="{StaticResource DefaultTransientBlackBackground2}"
                                BorderThickness="2">
                                <controls:HighlightBorder.Style>
                                    <Style TargetType="controls:HighlightBorder">
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedMusicIndex}" Value="2">
                                                <Setter Property="BorderBrush" Value="White" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </controls:HighlightBorder.Style>
                                <TextBlock
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    d:Text="我喜欢的音乐"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="{Binding MusicCategoryTwo}" />
                                <controls:HighlightBorder.InputBindings>
                                    <MouseBinding
                                        Command="{Binding SelectMusicCommand}"
                                        CommandParameter="2"
                                        MouseAction="LeftClick" />
                                </controls:HighlightBorder.InputBindings>
                            </controls:HighlightBorder>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!--  Right side - Info panel + DataGrid  -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Info panel - Music category title  -->
                    <StackPanel
                        Name="infoPanel"
                        Background="{StaticResource HeroTagBackground1Brush}"
                        Orientation="Horizontal"
                        Style="{StaticResource MusicInfoPanelStyle}">
                        <TextBlock
                            Margin="20,15,0,15"
                            VerticalAlignment="Center"
                            d:Text="大厅音乐曲库"
                            FontSize="16"
                            Foreground="White"
                            Text="{Binding SelectedMusicTitle}" />
                        <TextBlock
                            Name="count"
                            Margin="20,15,0,15"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="White"
                            Text="{Binding MusicCountText}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedMusicIndex}" Value="2">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <!--  DataGrid with music list and empty state  -->
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <!--  DataGrid with music list  -->
                        <DataGrid
                            Name="datagrid"
                            d:ItemsSource="{d:SampleData ItemCount=10}"
                            AutoGenerateColumns="False"
                            ColumnHeaderHeight="40"
                            ColumnHeaderStyle="{StaticResource TransparentDataGridColumnHeaderStyle}"
                            IsReadOnly="True"
                            ItemsSource="{Binding MusicList}"
                            RowStyle="{StaticResource TransparentDataGridRowStyle}"
                            SelectedItem="{Binding SelectedMusicItem}">
                            <DataGrid.Style>
                                <Style BasedOn="{StaticResource TransparentDataGridStyle}" TargetType="DataGrid">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedMusicIndex}" Value="1">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Style>
                            <DataGrid.Columns>
                                <!--  Index Column  -->
                                <DataGridTemplateColumn
                                    Width="50"
                                    CellStyle="{StaticResource MusicDataGridCellStyle}"
                                    Header="♪">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                d:Text="1"
                                                Foreground="White"
                                                Text="{Binding Index}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  Music Name Column  -->
                                <DataGridTemplateColumn
                                    Width="*"
                                    CellStyle="{StaticResource MusicDataGridCellStyle}"
                                    Header="乐曲名称">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Margin="8,0"
                                                VerticalAlignment="Center"
                                                d:Text="穿云箭（第19赛季大厅音乐）"
                                                Foreground="White"
                                                Text="{Binding MusicName}"
                                                TextTrimming="CharacterEllipsis" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  Artist Column  -->
                                <DataGridTemplateColumn
                                    Width="200"
                                    CellStyle="{StaticResource MusicDataGridCellStyle}"
                                    Header="作者">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                d:Text="Moe/24工作室/雷火音频"
                                                Foreground="White"
                                                Text="{Binding Artist}"
                                                TextTrimming="CharacterEllipsis" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  Like Column  -->
                                <DataGridTemplateColumn
                                    Width="60"
                                    CellStyle="{StaticResource MusicDataGridCellStyle}"
                                    Header="喜欢">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                d:Text="♡"
                                                Foreground="White"
                                                Text="♡" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  Duration Column  -->
                                <DataGridTemplateColumn
                                    Width="80"
                                    CellStyle="{StaticResource MusicDataGridCellStyle}"
                                    Header="时长">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                d:Text="2:32"
                                                Foreground="White"
                                                Text="{Binding Duration}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!--  Empty State Overlay  -->
                        <Grid Name="grid">
                            <Grid Height="{Binding ElementName=grid, Path=ActualHeight}" VerticalAlignment="Top">
                                <Grid.Background>
                                    <ImageBrush ImageSource="{StaticResource MusicEmptyStateBackgroundImage}" Stretch="Uniform" />
                                </Grid.Background>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedMusicIndex}" Value="2">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    Foreground="White"
                                    Opacity="0.6"
                                    Text="空空如也" />
                            </Grid>
                        </Grid>
                    </Grid>

                    <!--  Bottom buttons - Fixed position in right bottom corner  -->
                    <StackPanel
                        Grid.Row="2"
                        Margin="8,10,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <controls:ToggleButtonComboBox
                            Name="combobox1"
                            Width="150"
                            Height="30"
                            Margin="10,0,0,0"
                            ItemsSource="{Binding PlayModeList}"
                            SelectedIndex="{Binding SelectedPlayModeIndex}" />
                        <Button
                            Width="100"
                            Height="30"
                            Name="button1"
                            Content="{Binding SelectedPlayMode}"
                            IsEnabled="{Binding IsPlayModeButtonEnabled}"
                            Style="{StaticResource CommandButtonStyle2}" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <!--  Esc Back Control  -->
        <controls:EscBackControl
            Margin="0,0,20,20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding ReturnCommand}" />
    </Grid>
</bases:UserControlBase>
