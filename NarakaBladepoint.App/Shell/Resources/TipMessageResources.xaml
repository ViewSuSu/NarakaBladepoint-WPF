<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Easing function for smooth animation  -->
    <ExponentialEase x:Key="TipMessageEasingFunction" EasingMode="EaseOut" />

    <!--  Tip message animation sequence: move up and fade out  -->
    <Storyboard x:Key="TipMessageAnimationStoryboard" x:Name="TipMessageAnimationStoryboard">
        <!--  Phase 1: Move from bottom to top (0s - 0.5s)  -->
        <DoubleAnimation
            Storyboard.TargetName="tipBorder"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
            From="100"
            To="0"
            Duration="0:0:0.5">
            <DoubleAnimation.EasingFunction>
                <ExponentialEase EasingMode="EaseOut" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>

        <!--  Show textblock at start (fade in from 0 to 1)  -->
        <DoubleAnimation
            Storyboard.TargetName="tipTextblock"
            Storyboard.TargetProperty="Opacity"
            From="0"
            To="1"
            Duration="0:0:0.1" />

        <!--  Phase 2: Display message (0.5s - 1.0s) - no animation, just display  -->

        <!--  Phase 3: Fade out (1.0s - 1.5s)  -->
        <DoubleAnimation
            BeginTime="0:0:1.0"
            Storyboard.TargetName="tipTextblock"
            Storyboard.TargetProperty="Opacity"
            From="1"
            To="0"
            Duration="0:0:0.5" />
    </Storyboard>

    <!--  Tip message border style  -->
    <Style x:Key="TipMessageBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0" />
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TranslateTransform Y="100" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Tip message textblock style  -->
    <Style x:Key="TipMessageTextBlockStyle" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Opacity" Value="0" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

</ResourceDictionary>

