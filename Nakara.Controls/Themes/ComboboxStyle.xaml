<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Nakara.Controls.Converters"
    xmlns:local="clr-namespace:Nakara.Controls">
    <converters:IndexMatchConverter x:Key="IndexMatchConverter" />
    <Style TargetType="{x:Type local:HighlightComboBox}">
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="{x:Type local:HighlightComboBoxItem}">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Padding" Value="12,8" />
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Style.Triggers>
                        <DataTrigger Value="True">
                            <DataTrigger.Binding>
                                <MultiBinding Converter="{StaticResource IndexMatchConverter}">
                                    <Binding Path="(ItemsControl.AlternationIndex)" RelativeSource="{RelativeSource Self}" />
                                    <Binding Path="HighlightIndex" RelativeSource="{RelativeSource AncestorType=ComboBox}" />
                                </MultiBinding>
                            </DataTrigger.Binding>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="pack://application:,,,/Nakara.Resources;component/Image/Avatar/1.png" Stretch="Fill" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#3A3A3A" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="AlternationCount" Value="1000" />
    </Style>
</ResourceDictionary>


