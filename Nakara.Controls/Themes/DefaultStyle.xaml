<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Nakara.Controls">
    <Style x:Key="GoldBrick" TargetType="controls:IconTextBlockCustomControl">
        <Setter Property="Icon" Value="/Nakara.Controls;component/Themes/Images/GoldBrick.png" />
    </Style>
    <Style x:Key="AncientCoins" TargetType="controls:IconTextBlockCustomControl">
        <Setter Property="Icon" Value="/Nakara.Controls;component/Themes/Images/古币.png" />
    </Style>
    <Style x:Key="BaseImageSize" TargetType="Image">
        <Setter Property="Height" Value="20" />
        <Setter Property="Width" Value="20" />
        <Setter Property="Stretch" Value="Uniform" />
    </Style>
    <Style
        x:Key="Email"
        BasedOn="{StaticResource BaseImageSize}"
        TargetType="Image">
        <Setter Property="Source" Value="/Nakara.Controls;component/Themes/Images/邮箱.png" />
    </Style>
    <Style
        x:Key="Contact"
        BasedOn="{StaticResource BaseImageSize}"
        TargetType="Image">
        <Setter Property="Source" Value="/Nakara.Controls;component/Themes/Images/联系人.png" />
    </Style>
    <Style
        x:Key="Avatar"
        BasedOn="{StaticResource BaseImageSize}"
        TargetType="Image">
        <Setter Property="Source" Value="/Nakara.Controls;component/Themes/Images/用户.png" />
    </Style>
    <Style
        x:Key="Setting"
        BasedOn="{StaticResource BaseImageSize}"
        TargetType="Image">
        <Setter Property="Source" Value="/Nakara.Controls;component/Themes/Images/设置.png" />
    </Style>
</ResourceDictionary>