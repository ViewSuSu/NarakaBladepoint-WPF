<Window
    x:Class="Nakara.App.Shell.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:battlePass="clr-namespace:Nakara.Modules.BattlePass.UI.BattlePass.Views;assembly=Nakara.Modules"
    xmlns:commonfunction="clr-namespace:Nakara.Modules.CommonFunction.UI.CommonFunction.Views;assembly=Nakara.Modules"
    xmlns:consts="clr-namespace:Nakara.Shared.Consts;assembly=Nakara.Shared"
    xmlns:controls="clr-namespace:Nakara.Controls;assembly=Nakara.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:personalinformation="clr-namespace:Nakara.Modules.PersonalInformation.UI.PersonalInformation.Views;assembly=Nakara.Modules"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:social="clr-namespace:Nakara.Modules.Social.UI.Social.Views;assembly=Nakara.Modules"
    xmlns:startGame="clr-namespace:Nakara.Modules.StartGame.UI.StartGame.Views;assembly=Nakara.Modules"
    xmlns:wealth="clr-namespace:Nakara.Modules.Wealth.UI.Views;assembly=Nakara.Modules"
    Width="1080"
    Height="720"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="Gray"
    mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="0.8*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <battlePass:BattlePassUserControl Grid.Column="0" />
            <commonfunction:CommonFunctionUserControl Grid.Column="1" />
            <wealth:WealthUserControl Grid.Column="2" />
            <social:SocialUserControl Grid.Column="3" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="3*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                </Grid>
            </Grid>
            <Grid Grid.Column="2" Margin="0,50,0,0">
                <StackPanel Orientation="Vertical">
                    <controls:IconTextBlockCustomControl />
                    <controls:IconTextBlockCustomControl />
                    <controls:IconTextBlockCustomControl />
                    <controls:IconTextBlockCustomControl />
                </StackPanel>
            </Grid>
            <Grid
                Grid.ColumnSpan="3"
                Width="300"
                Height="200"
                Margin="0,0,15,15"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom">
                <startGame:StartGameUserControl />
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0.25*" />
            </Grid.ColumnDefinitions>
            <ContentControl
                Grid.Column="1"
                prism:RegionManager.RegionName="{x:Static consts:GlobalConstant.SidePanelRegion}"
                BorderBrush="White"
                BorderThickness="1" />
        </Grid>
        <personalinformation:PersonalInformationUserControl
            Grid.Row="1"
            Width="200"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom" />

        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{x:Static consts:GlobalConstant.MainContentRegion}" />
        <ContentControl
            Grid.RowSpan="2"
            Panel.ZIndex="10"
            prism:RegionManager.RegionName="{x:Static consts:GlobalConstant.HomePageRegion}" />
    </Grid>
</Window>