<Window
    x:Class="Nakara.App.Shell.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:battlePass="clr-namespace:Nakara.Modules.BattlePass.UI.BattlePass.Views;assembly=Nakara.Modules"
    xmlns:commonfunction="clr-namespace:Nakara.Modules.CommonFunction.UI.CommonFunction.Views;assembly=Nakara.Modules"
    xmlns:consts="clr-namespace:Nakara.Shared.Consts;assembly=Nakara.Shared"
    xmlns:controls="clr-namespace:Nakara.Controls;assembly=Nakara.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mainWindowRightEvent="clr-namespace:Nakara.Modules.MainWindowRightEvent.UI.Views;assembly=Nakara.Modules"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:personalinformation="clr-namespace:Nakara.Modules.PersonalInformation.UI.PersonalInformation.Views;assembly=Nakara.Modules"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:social="clr-namespace:Nakara.Modules.Social.UI.Social.Views;assembly=Nakara.Modules"
    xmlns:startGame="clr-namespace:Nakara.Modules.StartGame.UI.StartGame.Views;assembly=Nakara.Modules"
    xmlns:wealth="clr-namespace:Nakara.Modules.Wealth.UI.Main.Views;assembly=Nakara.Modules"
    Title="Nakara"
    Width="1080"
    Height="720"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="Gray"
    Icon="pack://application:,,,/Nakara.Resources;component/Image/Icon.png"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Nakara.Resources;component/Image/background.png" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="1.5*" />
                </Grid.ColumnDefinitions>
                <battlePass:BattlePassUserControl Grid.Column="0" />
                <commonfunction:CommonFunctionUserControl Grid.Column="1" HorizontalAlignment="Center" />
                <wealth:WealthUserControl Grid.Column="2" VerticalAlignment="Center" />
                <social:SocialUserControl Grid.Column="4" VerticalAlignment="Center" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition Height="3*" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                    </Grid>
                </Grid>
                <Grid
                    Grid.ColumnSpan="3"
                    Width="240"
                    Height="300"
                    Margin="0,0,15,15"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
                    <startGame:StartGameUserControl />
                </Grid>
                <Grid
                    Grid.ColumnSpan="3"
                    Width="150"
                    Height="320"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">
                    <mainWindowRightEvent:MainWindowRightEventUserControl />
                </Grid>
            </Grid>
            <Grid Grid.Row="0" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="0.45*" />
                </Grid.ColumnDefinitions>
                <ContentControl
                    Grid.Column="1"
                    Panel.ZIndex="3"
                    prism:RegionManager.RegionName="{x:Static consts:GlobalConstant.RightSidePanelRegion}" />
            </Grid>
            <personalinformation:PersonalInformationUserControl
                Grid.Row="1"
                Width="200"
                Height="70"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom" />
            <ContentControl
                Grid.Row="1"
                Panel.ZIndex="2"
                prism:RegionManager.RegionName="{x:Static consts:GlobalConstant.MainContentRegion}" />
            <ContentControl Grid.RowSpan="2" prism:RegionManager.RegionName="{x:Static consts:GlobalConstant.HomePageRegion}" />
        </Grid>
    </Grid>
</Window>