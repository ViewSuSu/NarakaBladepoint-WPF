<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ei="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:converter="clr-namespace:NarakaBladepoint.Controls.Converters">
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <converter:BoolInverterConverter x:Key="BoolInverterConverter" />
    <Style x:Key="LeftHeaderExpanderStyle" TargetType="Expander">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Expander">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border
                            Grid.Row="0"
                            Padding="10,8"
                            Background="Transparent">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <ei:ChangePropertyAction
                                        PropertyName="IsExpanded"
                                        TargetObject="{Binding RelativeSource={RelativeSource AncestorType=Expander}}"
                                        Value="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=Expander}, Converter={StaticResource BoolInverterConverter}}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    FontSize="{TemplateBinding FontSize}"
                                    Foreground="{TemplateBinding Foreground}"
                                    Text="{TemplateBinding Header}" />
                                <Path
                                    x:Name="Chevron"
                                    Grid.Column="1"
                                    Width="10"
                                    Height="6"
                                    VerticalAlignment="Center"
                                    Data="M0,0 L5,5 L10,0"
                                    Fill="#FF666666"
                                    RenderTransformOrigin="0.5,0.5"
                                    Stretch="Uniform">
                                    <Path.RenderTransform>
                                        <RotateTransform x:Name="ChevronTransform" Angle="0" />
                                    </Path.RenderTransform>
                                    <i:Interaction.Triggers>
                                        <ei:DataTrigger Binding="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=Expander}}" Value="True">
                                            <ei:ChangePropertyAction
                                                PropertyName="Angle"
                                                TargetObject="{Binding ElementName=ChevronTransform}"
                                                Value="180" />
                                        </ei:DataTrigger>
                                        <ei:DataTrigger Binding="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=Expander}}" Value="False">
                                            <ei:ChangePropertyAction
                                                PropertyName="Angle"
                                                TargetObject="{Binding ElementName=ChevronTransform}"
                                                Value="0" />
                                        </ei:DataTrigger>
                                    </i:Interaction.Triggers>
                                    <Path.Style>
                                        <Style TargetType="Path">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Fill" Value="#FF007ACC" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Path.Style>
                                </Path>
                            </Grid>
                        </Border>
                        <ContentPresenter
                            x:Name="ExpandedContent"
                            Grid.Row="1"
                            Visibility="Collapsed">
                            <i:Interaction.Triggers>
                                <ei:DataTrigger Binding="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=Expander}}" Value="True">
                                    <ei:ChangePropertyAction PropertyName="Visibility" Value="Visible" />
                                </ei:DataTrigger>
                                <ei:DataTrigger Binding="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=Expander}}" Value="False">
                                    <ei:ChangePropertyAction PropertyName="Visibility" Value="Collapsed" />
                                </ei:DataTrigger>
                            </i:Interaction.Triggers>
                        </ContentPresenter>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>