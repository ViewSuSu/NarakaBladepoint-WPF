<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DiamondRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  菱形容器  -->
                        <Grid
                            x:Name="diamondContainer"
                            Width="18"
                            Height="18">

                            <Viewbox Stretch="Uniform">
                                <Canvas Width="18" Height="18">
                                    <!--  菱形边框  -->
                                    <Path
                                        x:Name="diamondBorder"
                                        Data="M9,2 L16,9 9,16 2,9 Z"
                                        Fill="Transparent"
                                        Stroke="{TemplateBinding Foreground}"
                                        StrokeThickness="1.5" />

                                    <!--  对勾标记（与CheckBox完全相同）  -->
                                    <Path
                                        x:Name="checkedPath"
                                        Data="M6,9 L9,12 14,7"
                                        Opacity="0"
                                        Stroke="#EAB181"
                                        StrokeEndLineCap="Round"
                                        StrokeLineJoin="Round"
                                        StrokeStartLineCap="Round"
                                        StrokeThickness="2" />

                                    <!--  不确定标记（虽然RadioButton通常没有不确定状态，但保持样式一致）  -->
                                    <Path
                                        x:Name="indeterminatePath"
                                        Data="M6,9 L14,9"
                                        Opacity="0"
                                        Stroke="#EAB181"
                                        StrokeEndLineCap="Round"
                                        StrokeStartLineCap="Round"
                                        StrokeThickness="2" />
                                </Canvas>
                            </Viewbox>
                        </Grid>

                        <ContentPresenter
                            x:Name="contentPresenter"
                            Grid.Column="1"
                            Margin="2,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            RecognizesAccessKey="True" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!--  选中状态  -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="checkedPath" Property="Opacity" Value="1" />
                        </Trigger>

                        <!--  不确定状态（虽然RadioButton通常没有，但为了样式一致性保留）  -->
                        <Trigger Property="IsChecked" Value="{x:Null}">
                            <Setter TargetName="indeterminatePath" Property="Opacity" Value="1" />
                        </Trigger>

                        <!--  禁用状态  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6" />
                        </Trigger>

                        <!--  鼠标悬停效果  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="diamondBorder" Property="StrokeThickness" Value="2" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>