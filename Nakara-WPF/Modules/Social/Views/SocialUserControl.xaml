<UserControl
    x:Class="Nakara_WPF.Modules.Social.Views.SocialUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nakara_WPF.Modules.Social.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:Nakara_WPF.Modules.Social.ViewModels"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:SocialUserControlViewModel}"
    d:DesignHeight="100"
    d:DesignWidth="300"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UniformGrid Grid.Column="3" Columns="3">
        <Image Style="{StaticResource Email}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseLeftButtonDown">
                    <b:InvokeCommandAction />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Image>
        <Image Style="{StaticResource Contact}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseLeftButtonDown">
                    <b:InvokeCommandAction Command="{Binding OpenFrendListCommand}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Image>
        <Image Style="{StaticResource Setting}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseLeftButtonDown">
                    <b:InvokeCommandAction />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Image>
    </UniformGrid>
</UserControl>