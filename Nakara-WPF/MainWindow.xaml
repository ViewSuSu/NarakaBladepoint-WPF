<Window
    x:Class="Nakara_WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonfunction="clr-namespace:Nakara_WPF.Modules.CommonFunction.Views"
    xmlns:consts="clr-namespace:Nakara_WPF.Core.Consts"
    xmlns:controls="clr-namespace:Nakara.Controls;assembly=Nakara.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nakara_wpf="clr-namespace:Nakara_WPF"
    xmlns:personalinformation="clr-namespace:Nakara_WPF.Modules.PersonalInformation.Views"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:social="clr-namespace:Nakara_WPF.Modules.Social.Views"
    xmlns:viewmodels="clr-namespace:Nakara_WPF.Modules.Wealth.ViewModels"
    xmlns:wealth="clr-namespace:Nakara_WPF.Modules.Wealth.Views"
    Width="1080"
    Height="720"
    d:DataContext="{d:DesignInstance Type=nakara_wpf:MainWindowViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="Gray"
    mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <personalinformation:PersonalInformationUserControl Grid.Column="0" />
            <commonfunction:CommonFunctionUserControl Grid.Column="1" />
            <wealth:WealthUserControl Grid.Column="2" />
            <social:SocialUserControl Grid.Column="3" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="3*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                </Grid>
            </Grid>
            <Grid Grid.Column="2" Margin="0,50,0,0">
                <StackPanel Orientation="Vertical">
                    <controls:IconTextBlockCustomControl />
                    <controls:IconTextBlockCustomControl />
                    <controls:IconTextBlockCustomControl />
                    <controls:IconTextBlockCustomControl />
                </StackPanel>
            </Grid>
            <Grid
                Grid.ColumnSpan="3"
                Width="300"
                Height="200"
                Margin="0,0,15,15"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        d:Text="开始游戏" />
                </Grid>
                <Border BorderBrush="White" BorderThickness="1" />
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0.25*" />
            </Grid.ColumnDefinitions>
            <ContentControl
                Grid.Column="1"
                prism:RegionManager.RegionName="{x:Static consts:GlobalConstant.SidePanelRegion}"
                BorderBrush="White"
                BorderThickness="1" />
        </Grid>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{x:Static consts:GlobalConstant.MainContentRegion}" />
    </Grid>
</Window>