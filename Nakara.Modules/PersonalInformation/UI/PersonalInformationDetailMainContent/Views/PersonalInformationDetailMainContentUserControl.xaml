<bases:UserControlBase
    x:Class="Nakara.Modules.PersonalInformation.UI.PersonalInformationDetailMainContent.Views.PersonalInformationDetailMainContentUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attached="clr-namespace:Nakara.Framework.UI.AttachedProperties;assembly=Nakara.Framework"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:bases="clr-namespace:Nakara.Framework.Core.Bases;assembly=Nakara.Framework"
    xmlns:chatbox="clr-namespace:Nakara.Modules.ChatBox.UI.Views"
    xmlns:const="clr-namespace:Nakara.Modules.PersonalInformation.Domain.Consts"
    xmlns:controls="clr-namespace:Nakara.Controls;assembly=Nakara.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nakara.Modules.PersonalInformation.UI.PersonalInformationDetailMainContent.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:Nakara.Modules.PersonalInformation.UI.PersonalInformationDetailMainContent.ViewModels"
    xmlns:wealth="clr-namespace:Nakara.Modules.Wealth.UI.Views"
    attached:EscKeyAttachedProperty.Command="{Binding ReturnCommand}"
    d:DataContext="{d:DesignInstance Type=viewmodels:PersonalInformationDetailMainContentUserControlViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    Background="Gray"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition />
            <RowDefinition Height="0.2*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.3*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="40"
                FontWeight="Bold"
                Foreground="White"
                Text="名片" />
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Margin="5,0" Text="个人信息">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="MouseLeftButtonDown">
                            <b:InvokeCommandAction Command="{Binding PersonalInfomationCommand}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </TextBlock>
                <TextBlock Margin="5,0" Text="英雄数据" />
                <TextBlock Margin="5,0" Text="赛季数据" />
                <TextBlock Margin="5,0" Text="历史战绩">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="MouseLeftButtonDown">
                            <b:InvokeCommandAction Command="{Binding NavigateToHistoryCommand}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </TextBlock>
                <TextBlock Margin="5,0" Text="打赏记录" />
                <TextBlock Margin="5,0" Text="社交头像" />
                <TextBlock Margin="5,0" Text="头像框" />
                <TextBlock Margin="5,0" Text="生涯成就" />
                <TextBlock Margin="5,0" Text="图鉴收集" />
                <TextBlock Margin="5,0" Text="信誉分" />
            </StackPanel>
            <wealth:WealthUserControl Grid.Column="2" />
        </Grid>
        <ContentControl
            Grid.Row="1"
            Grid.RowSpan="2"
            prism:RegionManager.RegionName="{x:Static const:PersonalInformationDetailMainContentRegionConsts.PersonalInformationMainContent}" />
        <chatbox:ChatBoxUserControl Grid.Row="2" Panel.ZIndex="10" />
        <controls:EscBackControl
            Grid.Row="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding ReturnCommand}" />
    </Grid>
</bases:UserControlBase>
