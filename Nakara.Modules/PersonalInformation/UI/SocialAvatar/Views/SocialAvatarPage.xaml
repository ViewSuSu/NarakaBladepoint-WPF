<bases:UserControlBase
    x:Class="Nakara.Modules.PersonalInformation.UI.SocialAvatar.Views.SocialAvatarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bases="clr-namespace:Nakara.Framework.Core.Bases;assembly=Nakara.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nakara.Modules.PersonalInformation.UI.SocialAvatar.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Nakara.Modules.PersonalInformation.UI.SocialAvatar.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:SocialAvatarPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <TabControl Background="Transparent">
            <TabItem Header="全部">
                <ItemsControl d:ItemsSource="{d:SampleData ItemCount=50}" ItemsSource="{Binding InventoryItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel ItemHeight="70" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Image Source="{Binding Icon}" Stretch="Uniform" />
                                <Image
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </TabItem>
            <TabItem Header="英雄" />
            <TabItem Header="武器" />
            <TabItem Header="赛季奖励" />
            <TabItem Header="隐族秘宝" />
            <TabItem Header="限时活动" />
            <TabItem Header="其他" />
        </TabControl>
        <Grid Grid.Column="1" Margin="20,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="0.3*" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <Image
                    Width="300"
                    Height="300"
                    Margin="0,50,0,0" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="25"
                    Foreground="White"
                    Text="天通元君" />
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="****************************" />
            </StackPanel>
            <Button
                Grid.Row="1"
                Height="30"
                VerticalAlignment="Center"
                Content="更换头像"
                Style="{StaticResource SettingBackToGameCommandButtonStyle}" />
        </Grid>
    </Grid>
</bases:UserControlBase>