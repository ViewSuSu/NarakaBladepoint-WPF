<base:UserControlBase
    x:Class="Nakara.Modules.PersonalInformation.UI.PersonalInformation.Views.PersonalInformationUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:base="clr-namespace:Nakara.Framework.Core.Bases;assembly=Nakara.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="200"
    d:DesignWidth="450"
    mc:Ignorable="d">
    <base:UserControlBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Nakara.Controls;component/Themes/DefaultStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </base:UserControlBase.Resources>
    <Grid Grid.Column="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Column="0"
            BorderBrush="White"
            BorderThickness="1">
            <Image Style="{StaticResource Avatar}" />
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseLeftButtonDown">
                    <b:InvokeCommandAction Command="{Binding NavigateToPersonalInfomationCommand}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Border>
        <Grid Grid.Column="1" Margin="10,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                d:Text="123"
                Foreground="White"
                Text="{Binding Name}" />
            <!--<ProgressBar
                Grid.Row="1"
                Grid.Column="1"
                Height="10"
                d:Maximum="100"
                d:Value="10"
                Background="DimGray"
                Foreground="Orange" />-->
        </Grid>
    </Grid>
</base:UserControlBase>