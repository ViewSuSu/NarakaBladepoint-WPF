<UserControl
    x:Class="Nakara.Modules.StartGame.UI.ModeSelection.Views.ModeSelectionUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="Gray"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <!--  核心Grid分两行：第一行放标题，第二行放TabControl  -->
    <Grid Background="#1A233A">
        <Grid.RowDefinitions>
            <!--  第一行：固定高度放标题  -->
            <RowDefinition Height="80" />
            <!--  第二行：自动占满剩余空间  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  第一行：选择模式标题  -->
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="28"
            Foreground="White"
            Text="选择模式" />

        <!--  第二行：TabControl占满整行  -->
        <TabControl
            x:Name="ModeTabControl"
            Grid.Row="1"
            Margin="20,0,20,20"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent"
            BorderThickness="0"
            TabStripPlacement="Top">

            <!--  1. 生存标签页  -->
            <TabItem>
                <TabItem.Header>
                    <Border
                        Width="120"
                        Height="40"
                        Background="#D4A056"
                        CornerRadius="5">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="Black"
                            Text="生存" />
                    </Border>
                </TabItem.Header>
                <Grid>
                    <!--  生存模式卡片  -->
                    <StackPanel
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                        <Border
                            Width="200"
                            Height="300"
                            Margin="0,0,20,0"
                            Background="#34495E"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    Margin="10"
                                    Foreground="White"
                                    Text="排位赛" />
                                <TextBlock
                                    Margin="10,0,10,10"
                                    Foreground="#BBBBBB"
                                    Text="天选之人" />
                            </StackPanel>
                        </Border>
                        <Border
                            Width="200"
                            Height="300"
                            Margin="0,0,20,0"
                            Background="#34495E"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    Margin="10"
                                    Foreground="White"
                                    Text="快速比赛" />
                                <TextBlock
                                    Margin="10,0,10,10"
                                    Foreground="#BBBBBB"
                                    Text="天选之人" />
                            </StackPanel>
                        </Border>
                        <Border
                            Width="200"
                            Height="300"
                            Margin="0,0,20,0"
                            Background="#34495E"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    Margin="10"
                                    Foreground="White"
                                    Text="天人之战" />
                                <TextBlock
                                    Margin="10,0,10,10"
                                    Foreground="#BBBBBB"
                                    Text="每日19:00-23:00开启" />
                            </StackPanel>
                        </Border>
                        <Border
                            Width="200"
                            Height="300"
                            Background="#34495E"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    Margin="10"
                                    Foreground="White"
                                    Text="人机演练" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!--  生存标签底部区域  -->
                    <StackPanel
                        Margin="20,0,20,20"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <StackPanel Margin="0,0,20,0" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                Foreground="White"
                                Text="杭州市" />
                            <TextBlock Foreground="Green" Text="21ms" />
                        </StackPanel>
                        <StackPanel Margin="0,0,20,0" Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0" Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    Foreground="White"
                                    Text="预选英雄" />
                                <Border
                                    Width="30"
                                    Height="30"
                                    Margin="0,0,5,0"
                                    Background="Gray"
                                    CornerRadius="4" />
                                <Border
                                    Width="30"
                                    Height="30"
                                    Margin="0,0,5,0"
                                    Background="Gray"
                                    CornerRadius="4" />
                                <Border
                                    Width="30"
                                    Height="30"
                                    Background="Gray"
                                    CornerRadius="4" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    Foreground="White"
                                    Text="地图" />
                                <Border
                                    Width="150"
                                    Height="30"
                                    Background="Gray"
                                    CornerRadius="4">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        Text="龙隐洞天" />
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                <Button
                                    Width="60"
                                    Margin="0,0,10,0"
                                    Content="单排" />
                                <Button
                                    Width="60"
                                    Margin="0,0,10,0"
                                    Content="双排" />
                                <Button
                                    Width="60"
                                    Background="#D4A056"
                                    Content="三排" />
                            </StackPanel>
                            <Button
                                Width="100"
                                Height="40"
                                Background="#E74C3C"
                                Content="确定" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!--  2. 娱乐标签页  -->
            <TabItem>
                <TabItem.Header>
                    <Border
                        Width="120"
                        Height="40"
                        Background="#2C3E50"
                        CornerRadius="5">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="娱乐" />
                    </Border>
                </TabItem.Header>
                <StackPanel
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <Border
                            Width="200"
                            Height="150"
                            Margin="0,0,20,10"
                            Background="#34495E"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    Margin="10"
                                    Foreground="White"
                                    Text="地脉之战" />
                                <TextBlock
                                    Margin="10,0,10,10"
                                    Foreground="#BBBBBB"
                                    Text="00:24:32限时全开中" />
                            </StackPanel>
                        </Border>
                        <Border
                            Width="200"
                            Height="150"
                            Margin="0,0,20,0"
                            Background="#34495E"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    Margin="10"
                                    Foreground="White"
                                    Text="暗域狂潮" />
                                <TextBlock
                                    Margin="10,0,10,10"
                                    Foreground="#BBBBBB"
                                    Text="狂潮1段" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border
                            Width="200"
                            Height="300"
                            Margin="0,0,20,0"
                            Background="#34495E"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    Margin="10"
                                    Foreground="White"
                                    Text="六芒劫" />
                                <TextBlock
                                    Margin="10,0,10,10"
                                    Foreground="#BBBBBB"
                                    Text="限时模式" />
                            </StackPanel>
                        </Border>
                        <Border
                            Width="200"
                            Height="300"
                            Margin="0,0,20,0"
                            Background="#34495E"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    Margin="10"
                                    Foreground="White"
                                    Text="无尽试炼" />
                                <TextBlock
                                    Margin="10,0,10,10"
                                    Foreground="#BBBBBB"
                                    Text="试炼1段" />
                            </StackPanel>
                        </Border>
                        <Border
                            Width="200"
                            Height="300"
                            Background="#34495E"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    Margin="10"
                                    Foreground="White"
                                    Text="武道争锋" />
                                <TextBlock
                                    Margin="10,0,10,10"
                                    Foreground="#BBBBBB"
                                    Text="武道1段" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <!--  3. 训练标签页  -->
            <TabItem>
                <TabItem.Header>
                    <Border
                        Width="120"
                        Height="40"
                        Background="#2C3E50"
                        CornerRadius="5">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="训练" />
                    </Border>
                </TabItem.Header>
                <StackPanel
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Border
                        Width="250"
                        Height="300"
                        Margin="0,0,20,0"
                        Background="#34495E"
                        CornerRadius="8">
                        <StackPanel>
                            <TextBlock
                                Margin="10"
                                Foreground="White"
                                Text="操作教学" />
                        </StackPanel>
                    </Border>
                    <Border
                        Width="250"
                        Height="300"
                        Margin="0,0,20,0"
                        Background="#34495E"
                        CornerRadius="8">
                        <StackPanel>
                            <TextBlock
                                Margin="10"
                                Foreground="White"
                                Text="进阶教学" />
                        </StackPanel>
                    </Border>
                    <Border
                        Width="250"
                        Height="300"
                        Background="#34495E"
                        CornerRadius="8">
                        <StackPanel>
                            <TextBlock
                                Margin="10"
                                Foreground="White"
                                Text="自由练习" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </TabItem>

            <!--  4. 休闲标签页  -->
            <TabItem>
                <TabItem.Header>
                    <Border
                        Width="120"
                        Height="40"
                        Background="#2C3E50"
                        CornerRadius="5">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="休闲" />
                    </Border>
                </TabItem.Header>
                <StackPanel
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Border
                        Width="250"
                        Height="300"
                        Margin="0,0,20,0"
                        Background="#34495E"
                        CornerRadius="8">
                        <StackPanel>
                            <TextBlock
                                Margin="10"
                                Foreground="White"
                                Text="永劫掼蛋" />
                        </StackPanel>
                    </Border>
                    <Border
                        Width="250"
                        Height="300"
                        Margin="0,0,20,0"
                        Background="#34495E"
                        CornerRadius="8">
                        <StackPanel>
                            <TextBlock
                                Margin="10"
                                Foreground="White"
                                Text="敬请期待" />
                        </StackPanel>
                    </Border>
                    <Border
                        Width="250"
                        Height="300"
                        Background="#34495E"
                        CornerRadius="8">
                        <StackPanel>
                            <TextBlock
                                Margin="10"
                                Foreground="White"
                                Text="敬请期待" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </TabItem>

            <!--  5. 紫禁之巅标签页  -->
            <TabItem>
                <TabItem.Header>
                    <Border
                        Width="120"
                        Height="40"
                        Background="#4A5A8C"
                        CornerRadius="5">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="紫禁之巅" />
                    </Border>
                </TabItem.Header>
                <Grid>
                    <Border
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="#34495E"
                        CornerRadius="8">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                Margin="10"
                                FontSize="24"
                                Foreground="White"
                                Text="紫禁之巅" />
                            <TextBlock
                                Margin="10"
                                Foreground="#BBBBBB"
                                Text="武道对决" />
                            <TextBlock
                                Margin="10"
                                Foreground="#BBBBBB"
                                Text="第一赛段·同兵论武" />
                            <TextBlock
                                Margin="10"
                                Foreground="#BBBBBB"
                                Text="12.22 04:00 - 12.30 07:00 每日19:00-21:00开启" />
                            <Button
                                Width="120"
                                Height="40"
                                Margin="10"
                                Background="#E74C3C"
                                Content="前往报名" />
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
        <Button
            Grid.Row="1"
            Width="60"
            Height="20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding CloseCommand}" />
    </Grid>
</UserControl>