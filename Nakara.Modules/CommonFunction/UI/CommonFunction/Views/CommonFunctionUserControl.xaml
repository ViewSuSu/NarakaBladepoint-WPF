<UserControl
    x:Class="Nakara.Modules.CommonFunction.UI.CommonFunction.Views.CommonFunctionUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:Nakara.Controls;assembly=Nakara.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:Nakara.Modules.CommonFunction.UI.CommonFunction.ViewModels"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:CommonFunctionUserControlViewModel}"
    d:DesignHeight="100"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <StackPanel Grid.Column="1" Orientation="Horizontal">
        <controls:ImageTextBlock
            Margin="5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="大厅" />
        <controls:ImageTextBlock
            Margin="5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="英雄">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseLeftButtonDown">
                    <b:InvokeCommandAction Command="{Binding HeroListCommand}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </controls:ImageTextBlock>
        <controls:ImageTextBlock
            Margin="5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="天赋" />
        <controls:ImageTextBlock
            Margin="5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="排行榜" />
        <controls:ImageTextBlock
            Margin="5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="仓库" />
        <controls:ImageTextBlock
            Margin="5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="浪潮" />
        <controls:ImageTextBlock
            Margin="5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="商店" />
        <controls:ImageTextBlock
            Margin="5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="自定房间" />
    </StackPanel>
</UserControl>