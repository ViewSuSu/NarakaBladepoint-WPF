<base:UserControlBase
    x:Class="Nakara.Modules.Wealth.UI.Views.WealthUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Nakara.Framework.Core.Bases;assembly=Nakara.Framework"
    xmlns:controls="clr-namespace:Nakara.Controls;assembly=Nakara.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Nakara.Modules.Wealth.UI.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:WealthUserControlViewModel}"
    d:DesignHeight="100"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UniformGrid Grid.Column="2" Columns="3">
        <controls:IconTextBlockCustomControl
            d:Text="12500"
            Style="{StaticResource AncientCoins}"
            Text="{Binding WealthModel.AncientCoins}" />
        <controls:IconTextBlockCustomControl
            d:Text="12600"
            Command="{Binding NavigateToTopUpCommand}"
            Style="{StaticResource GoldBrick}"
            Text="{Binding WealthModel.GoldBrick}" />
        <controls:IconTextBlockCustomControl d:Text="12500" Style="{StaticResource HuanSi}" />
    </UniformGrid>
</base:UserControlBase>