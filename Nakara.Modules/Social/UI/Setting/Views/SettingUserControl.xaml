<base:UserControlBase
    x:Class="Nakara.Modules.Social.UI.Setting.Views.SettingUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:base="clr-namespace:Nakara.Framework.Core.Bases;assembly=Nakara.Framework"
    xmlns:behaviors="clr-namespace:Nakara.Framework.UI.AttachedProperties;assembly=Nakara.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    behaviors:EscKeyAttachedProperty.Command="{Binding BackToGameCommand}"
    d:Background="Gray"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image Grid.Row="0" />
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <Button
                Width="300"
                Height="30"
                Margin="0,10"
                Command="{Binding BackToGameCommand}"
                Content="回到游戏"
                Style="{StaticResource BattleEncyclopediaButtonStyle}" />
            <Button
                Width="300"
                Height="30"
                Margin="0,10"
                Command="{Binding NavigateToTutorialCommand}"
                Content="战斗百科"
                Style="{StaticResource BattleEncyclopediaButtonStyle}" />
            <Button
                Width="300"
                Height="30"
                Margin="0,10"
                Command="{Binding NavigateToTutorialCommand}"
                Content="按键设置"
                Style="{StaticResource BattleEncyclopediaButtonStyle}" />
            <Button
                Width="300"
                Height="30"
                Margin="0,10"
                Command="{Binding NavigateToTutorialCommand}"
                Content="选项设置"
                Style="{StaticResource BattleEncyclopediaButtonStyle}" />
            <Button
                Width="300"
                Height="30"
                Margin="0,10"
                Command="{Binding NavigateToTutorialCommand}"
                Content="联系客服"
                Style="{StaticResource BattleEncyclopediaButtonStyle}" />
            <Button
                Width="300"
                Height="30"
                Margin="0,10"
                Command="{Binding NavigateToTutorialCommand}"
                Content="开场视频"
                Style="{StaticResource BattleEncyclopediaButtonStyle}" />
            <Button
                Width="300"
                Height="30"
                Margin="0,10"
                Command="{Binding NavigateToTutorialCommand}"
                Content="礼物码兑换"
                Style="{StaticResource BattleEncyclopediaButtonStyle}" />
            <Button
                Width="300"
                Height="30"
                Margin="0,10"
                Command="{Binding NavigateToTutorialCommand}"
                Content="返回登录界面"
                Style="{StaticResource BattleEncyclopediaButtonStyle}" />
            <Button
                Width="300"
                Height="30"
                Margin="0,10"
                Command="{Binding NavigateToTutorialCommand}"
                Content="退至桌面"
                Style="{StaticResource BattleEncyclopediaButtonStyle}" />
        </StackPanel>
        <b:Interaction.Triggers>
            <b:EventTrigger EventName="PreviewMouseLeftButtonDown">
                <b:InvokeCommandAction Command="{Binding BackToGameCommand}" />
            </b:EventTrigger>
        </b:Interaction.Triggers>
    </Grid>
</base:UserControlBase>