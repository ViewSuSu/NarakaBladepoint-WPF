<base:UserControlBase
    x:Class="Nakara.Modules.Social.UI.Friend.UI.Views.FriendUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:Nakara.Framework.UI.AttachedProperties;assembly=Nakara.Framework"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:base="clr-namespace:Nakara.Framework.Core.Bases;assembly=Nakara.Framework"
    xmlns:controls="clr-namespace:Nakara.Controls;assembly=Nakara.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Nakara.Modules.Social.UI.Friend.UI.ViewModels"
    attach:EscKeyAttachedProperty.Command="{Binding CloseCommand}"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:FriendUserControlViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="300"
    x:ClassModifier="internal"
    mc:Ignorable="d">
    <Grid>
        <Rectangle Fill="#99090000">
            <Rectangle.Effect>
                <BlurEffect Radius="10" />
            </Rectangle.Effect>
        </Rectangle>
        <Grid Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.1*" />
                    <RowDefinition Height="0.1*" />
                    <RowDefinition />
                    <RowDefinition Height="0.1*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <controls:AvatarControl BackgroundImage="pack://application:,,,/Nakara.Resources;component/Image/Avatar/1.png" ImageStretch="Uniform" />
                    <UniformGrid
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        Rows="3">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="野排牢张" />
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="ID:123123123132" />
                            <Image
                                Width="20"
                                Margin="10,0,0,0"
                                Source="pack://application:,,,/Nakara.Resources;component/Image/复制.png"
                                Stretch="Uniform" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="15"
                                Source="pack://application:,,,/Nakara.Resources;component/Image/在线.png"
                                Stretch="Uniform" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="空闲" />
                        </StackPanel>
                    </UniformGrid>
                </Grid>
                <controls:HighlightBorder
                    Grid.Row="1"
                    Margin="0,5"
                    BorderBrush="White"
                    BorderThickness="0.2">
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Image
                            Width="20"
                            Margin="5,0,0,0"
                            Source="pack://application:,,,/Nakara.Resources;component/Image/点击设置标签.png"
                            Stretch="Uniform" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="点击设置标签" />
                    </StackPanel>
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="MouseLeftButtonDown">
                            <b:InvokeCommandAction Command="{Binding SettingTagCommand}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </controls:HighlightBorder>
                <Border
                    Grid.Row="2"
                    Margin="0,5"
                    BorderBrush="White"
                    BorderThickness="0.2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.15*" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="0.15*" />
                        </Grid.ColumnDefinitions>
                        <Image
                            Width="20"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            Source="pack://application:,,,/Nakara.Resources;component/Image/搜索放大镜.png"
                            Stretch="Uniform" />
                        <TextBox
                            Name="SearchBox"
                            Grid.Column="1"
                            VerticalContentAlignment="Center"
                            attach:TextBoxHelper.Placeholder="输入玩家名或ID搜索或添加"
                            attach:TextBoxHelper.PlaceholderBrush="#64FFFFFF"
                            d:Text="12321312"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White">
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="TextChanged">
                                    <b:InvokeCommandAction Command="{Binding SearchCommand}" CommandParameter="{Binding ElementName=SearchBox, Path=Text}" />
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                        </TextBox>
                        <Image
                            Grid.Column="2"
                            Width="20"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            MouseLeftButtonDown="Image_MouseLeftButtonDown"
                            Source="pack://application:,,,/Nakara.Resources;component/Image/×.png"
                            Stretch="Uniform" />
                    </Grid>
                </Border>
                <TabControl
                    Grid.Row="3"
                    Background="Transparent"
                    Style="{StaticResource AverageTabControlStyle}">
                    <!--<TabItem
                    Height="30"
                    Header="找搭子"
                    Style="{StaticResource FriendListTabItem}" />-->
                    <TabItem
                        Height="30"
                        Header="联系人"
                        Style="{StaticResource FriendListTabItem}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Expander
                                Grid.Row="0"
                                HorizontalContentAlignment="Stretch"
                                Foreground="White"
                                Header="聚义厅  0/0"
                                Style="{StaticResource FlatRightChevronExpander}" />
                            <Expander
                                Grid.Row="1"
                                HorizontalContentAlignment="Stretch"
                                Foreground="White"
                                Header="默认分组   0/13"
                                Style="{StaticResource FlatRightChevronExpander}">
                                <ListBox
                                    HorizontalContentAlignment="Stretch"
                                    d:ItemsSource="{d:SampleData ItemCount=5}"
                                    Background="Transparent">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid MaxHeight="30" Margin="0,0,30,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="0.15*" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="0.1*" />
                                                </Grid.ColumnDefinitions>
                                                <Image Source="pack://application:,,,/Nakara.Resources;component/Image/Avatar/1.png" Stretch="Uniform" />
                                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                                    <TextBlock d:Text="Name" Foreground="White" />
                                                    <TextBlock d:Text="在线" Foreground="White" />
                                                </StackPanel>
                                                <Image
                                                    Grid.Column="2"
                                                    Source="pack://application:,,,/Nakara.Resources;component/Image/sayhello.png"
                                                    Stretch="Uniform">
                                                    <b:Interaction.Triggers>
                                                        <b:EventTrigger EventName="MouseLeftButtonDown">
                                                            <b:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=DataContext.SayHelloCommand}" CommandParameter="{Binding}" />
                                                        </b:EventTrigger>
                                                    </b:Interaction.Triggers>
                                                </Image>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Expander>
                            <Expander
                                Grid.Row="2"
                                HorizontalContentAlignment="Stretch"
                                Foreground="White"
                                Header="屏蔽名单  0/0"
                                Style="{StaticResource FlatRightChevronExpander}" />
                        </Grid>
                    </TabItem>
                    <TabItem
                        Height="30"
                        Header="最近"
                        Style="{StaticResource FriendListTabItem}">
                        <ListBox
                            HorizontalContentAlignment="Stretch"
                            d:ItemsSource="{d:SampleData ItemCount=5}"
                            Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30" />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Image
                                            Width="30"
                                            Height="30"
                                            HorizontalAlignment="Left"
                                            Source="pack://application:,,,/Nakara.Resources;component/Image/Avatar/1.png"
                                            Stretch="UniformToFill" />
                                        <StackPanel
                                            Grid.Column="1"
                                            Margin="10,0,0,0"
                                            Orientation="Vertical">
                                            <TextBlock Foreground="White" Text="Name" />
                                            <TextBlock
                                                FontSize="10"
                                                Foreground="Orange"
                                                Text="排位赛三排 19分钟（组队中3/3）" />
                                        </StackPanel>
                                        <Image
                                            Grid.Column="2"
                                            Width="30"
                                            HorizontalAlignment="Right"
                                            Source="pack://application:,,,/Nakara.Resources;component/Image/friendInv.png"
                                            Stretch="UniformToFill" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </TabItem>
                    <TabItem
                        Height="30"
                        Header="附近"
                        Style="{StaticResource FriendListTabItem}">
                        <Expander
                            Grid.Row="0"
                            HorizontalContentAlignment="Stretch"
                            Foreground="White"
                            Header="附近玩家"
                            Style="{StaticResource FlatRightChevronExpander}" />
                    </TabItem>
                    <TabItem
                        Height="30"
                        Header="申请"
                        Style="{StaticResource FriendListTabItem}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="暂无好友申请" />
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
        <controls:EscBackControl
            Grid.Row="4"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding CloseCommand}" />
    </Grid>
</base:UserControlBase>