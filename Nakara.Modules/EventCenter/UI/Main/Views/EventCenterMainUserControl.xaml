<bases:UserControlBase
    x:Class="Nakara.Modules.EventCenter.UI.Main.Views.EventCenterMainUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:Nakara.Framework.UI.AttachedProperties;assembly=Nakara.Framework"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:bases="clr-namespace:Nakara.Framework.Core.Bases;assembly=Nakara.Framework"
    xmlns:controls="clr-namespace:Nakara.Controls;assembly=Nakara.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:latestNews="clr-namespace:Nakara.Modules.EventCenter.UI.LatestNews.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:Nakara.Modules.EventCenter.UI.Main.ViewModels"
    attach:EscKeyAttachedProperty.Command="{Binding ReturnCommand}"
    d:DataContext="{d:DesignInstance Type=viewmodels:EventCenterMainUserControlViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Nakara.Resources;component/Image/background2.png" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition />
                <RowDefinition Height="0.1*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="50,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="30"
                    Foreground="White"
                    Text="活动中心" />
            </Grid>
            <TabControl
                Grid.Row="0"
                Grid.RowSpan="2"
                Background="Transparent"
                BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabPanel}">
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                </TabControl.Resources>
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="近期热点"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <latestNews:LatestNewsPage />
                </TabItem>
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="紫禁之巅"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="限时活动"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="揽月阁"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="侠风拓展包"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="白泽月卡"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="绑定有礼"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="英雄归来"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="传火"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="蓬莱指南"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="更新公告"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="网易支付好礼"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="宝箱定向保底"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
            </TabControl>
        </Grid>
        <controls:EscBackControl
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Panel.ZIndex="10"
            Command="{Binding ReturnCommand}" />
    </Grid>
</bases:UserControlBase>